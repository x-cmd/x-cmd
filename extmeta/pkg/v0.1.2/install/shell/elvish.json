{
  "lang": "go",
  "homepage": "https://elv.sh/",
  "desc": {
    "en": "Elvish is an expressive programming language and a versatile interactive shell, combined into one seamless package",
    "cn": "Elvish 是一种富有表现力的编程语言和一种多功能的交互式 shell，无缝组合成一个包"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install elvish",
      "reference": "https://elv.sh/get/#macos"
    },
    "debian/apt": {
      "cmd": "sudo apt install elvish",
      "reference": "https://elv.sh/get/#debian-/-ubuntu",
      "dsnap": "elvish"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install elvish",
      "reference": "https://elv.sh/get/#debian-/-ubuntu",
      "dsnap": "elvish"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S elvish",
      "reference": "https://elv.sh/get/#arch-linux"
    },
    "kali/apt": {
      "cmd": "sudo apt install elvish",
      "reference": "https://elv.sh/get/#debian-/-ubuntu"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install elvish",
      "reference": "https://elv.sh/get/#debian-/-ubuntu"
    },
    "nix/": {
      "cmd": "nix-env -i elvish",
      "reference": "https://elv.sh/get/#nixos-(nix)"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install elvish",
      "reference": "https://elv.sh/get/#windows"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install elvish",
      "reference": "https://elv.sh/get/#macos"
    }
  },
  "dsnap": {
    "brew": "elvish",
    "pacman": "elvish",
    "nix": "elvish",
    "ubuntu/apt": "elvish",
    "debian/apt": "elvish"
  }
}
