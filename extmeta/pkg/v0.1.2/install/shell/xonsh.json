{
  "lang": "python",
  "homepage": "https://github.com/xonsh/xonsh",
  "desc": {
    "cn": "由 Python 驱动的 shell，能支持用户在命令行中混合使用 Python 和 shell 命令",
    "en": "A Python-powered shell that allows users to mix Python and shell commands on the command line"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install xonsh",
      "reference": "https://xon.sh/packages.html#fewer-prerequisites",
      "dsnap": "xonsh"
    },
    "/pipx": {
      "cmd": "python -m pip install 'xonsh[full]'",
      "reference": "https://xon.sh/packages.html"
    },
    "/conda": {
      "cmd": "conda config --add channels conda-forge && conda install xonsh",
      "reference": "https://xon.sh/packages.html"
    },
    "darwin/brew": {
      "cmd": "brew install xonsh",
      "reference": "https://formulae.brew.sh/formula/xonsh#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install xonsh",
      "reference": "https://command-not-found.com/xonsh",
      "dsnap": "xonsh"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install xonsh",
      "reference": "https://command-not-found.com/xonsh",
      "dsnap": "xonsh"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S xonsh",
      "reference": "https://command-not-found.com/xonsh"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install xonsh",
      "reference": "https://command-not-found.com/xonsh"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install xonsh",
      "reference": "https://command-not-found.com/xonsh",
      "dsnap": "xonsh"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install xonsh",
      "reference": "https://command-not-found.com/xonsh"
    }
  },
  "dsnap": {
    "pipx": "xonsh",
    "brew": "xonsh",
    "/pip": "xonsh",
    "fedora/dnf": "xonsh",
    "ubuntu/apt": "xonsh",
    "debian/apt": "xonsh"
  }
}
