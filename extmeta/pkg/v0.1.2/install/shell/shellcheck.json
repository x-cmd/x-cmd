{
  "lang": "Haskell",
  "homepage": "https://www.shellcheck.net/",
  "desc": {
    "cn": "shell 脚本静态分析工具",
    "en": "Static analysis tool for shell scripts"
  },
  "rule": {
    "/cabal": {
      "cmd": "cabal install ShellCheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "/stack": {
      "cmd": "stack install ShellCheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "debian/apt": {
      "cmd": "sudo apt install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "kali/apt": {
      "cmd": "sudo apt install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge --ask shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "centos/yum": {
      "cmd": "sudo yum -y install epel-release \\\n&& sudo yum install ShellCheck\n",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ShellCheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install hs-ShellCheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "darwin/brew": {
      "cmd": "brew install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "darwin/port": {
      "cmd": "sudo port install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "openbsd/pkg_add": {
      "cmd": "sudo pkg_add shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper in ShellCheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "solus/eopkg": {
      "cmd": "sudo eopkg install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    },
    "/snap": {
      "cmd": "sudo snap install --channel=edge shellcheck",
      "reference": "https://github.com/koalaman/shellcheck?tab=readme-ov-file#installing"
    }
  }
}
