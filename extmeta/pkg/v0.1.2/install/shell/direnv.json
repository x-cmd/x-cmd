{
  "lang": "go",
  "homepage": "https://github.com/direnv/direnv",
  "desc": {
    "cn": "整理您的 .profile\ndirenv 是 shell 的扩展。它增加了一个新特性，可以根据工作目录加载和卸载环境变量\n",
    "en": "unclutter your .profile\ndirenv is an extension for your shell. It augments existing shells with a new feature that can load and unload environment variables depending on the current directory.\n"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use direnv",
      "reference": "https://github.com/asdf-community/asdf-direnv"
    },
    "darwin/brew": {
      "cmd": "brew install direnv",
      "reference": "https://formulae.brew.sh/formula/direnv#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install direnv",
      "reference": "https://command-not-found.com/direnv"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install direnv",
      "reference": "https://command-not-found.com/direnv"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install direnv",
      "reference": "https://command-not-found.com/direnv"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install direnv",
      "reference": "https://command-not-found.com/direnv"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install direnv",
      "reference": "https://command-not-found.com/direnv"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/direnv",
      "reference": "https://scoop.sh/#/apps?q=direnv"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install direnv",
      "reference": "https://ports.macports.org/port/direnv/"
    }
  },
  "dsnap": {
    "/go": "direnv"
  }
}
