{
  "lang": "Rust",
  "homepage": "https://biomejs.dev/",
  "desc": {
    "cn": "Biome 是一个用于 Web 项目的高性能工具链，旨在为开发者提供维护项目的工具",
    "en": "Biome is a performant toolchain for web projects, it aims to provide developer tools to maintain the health of said projects"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install biome",
      "reference": "https://biomejs.dev/guides/manual-installation/#homebrew"
    },
    "/npm": {
      "cmd": "npm install -g @biomejs/biome",
      "reference": "https://github.com/biomejs/biome/?tab=readme-ov-file#installation",
      "dsnap": "@biomejs/biome"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install biome",
      "reference": "https://scoop.sh/#/apps?q=biome"
    }
  },
  "dsnap": {
    "brew": "biome",
    "/npm": "@biomejs/biome"
  }
}
