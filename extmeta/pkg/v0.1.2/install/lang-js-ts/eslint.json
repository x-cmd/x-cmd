{
  "lang": "node",
  "homepage": "https://eslint.org",
  "desc": {
    "en": "ESLint is a tool for identifying and reporting on patterns found in ECMAScript/JavaScript code",
    "cn": "ESLint 是一个识别和报告 ECMAScript/JavaScript 代码中的模式的工具"
  },
  "rule": {
    "/npm": {
      "cmd": "npm install -g eslint",
      "reference": "https://www.npmjs.com/package/eslint#installation-and-usage",
      "dsnap": "eslint"
    },
    "darwin/brew": {
      "cmd": "brew install eslint",
      "reference": "https://formulae.brew.sh/formula/eslint#default"
    }
  },
  "dsnap": {
    "/npm": "eslint"
  }
}
