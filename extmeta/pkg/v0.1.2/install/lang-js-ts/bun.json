{
  "lang": "zig",
  "homepage": "https://github.com/oven-sh/bun",
  "desc": {
    "cn": "一个快速的多合一 JavaScript 运行时",
    "en": "A fast all-in-one JavaScript runtime"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use bun",
      "reference": "https://github.com/cometkim/asdf-bun"
    },
    "/curl": {
      "cmd": "curl -fsSL https://bun.sh/install | bash",
      "reference": "https://bun.sh/"
    },
    "(win|wsl2)/powershell": {
      "cmd": "powershell -c \"irm bun.sh/install.ps1 | iex\"",
      "reference": "https://bun.sh/"
    },
    "/npm": {
      "cmd": "npm install -g bun",
      "reference": "https://github.com/oven-sh/bun#install",
      "dsnap": "bun"
    },
    "darwin/brew": {
      "cmd": "brew tap oven-sh/bun\n&& brew install bun\n",
      "reference": "https://github.com/oven-sh/bun#install"
    }
  },
  "dsnap": {
    "/npm": "bun"
  }
}
