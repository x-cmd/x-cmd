{
  "lang": "JavaScript",
  "homepage": "https://github.com/santinic/how2",
  "desc": {
    "en": "Use an external AI server to find the best unix command line suggestions",
    "cn": "使用外部 AI 服务器来查找最佳的 unix 命令行建议"
  },
  "rule": {
    "debian/wget": {
      "cmd": "wget how2terminal.com/how2.deb && sudo dpkg -i how2.deb",
      "reference": "https://github.com/santinic/how2?tab=readme-ov-file#ubuntudebian"
    },
    "ubuntu/wget": {
      "cmd": "wget how2terminal.com/how2.deb && sudo dpkg -i how2.deb",
      "reference": "https://github.com/santinic/how2?tab=readme-ov-file#ubuntudebian"
    },
    "darwin/brew": {
      "cmd": "brew tap how2terminal/how2 && brew install how2",
      "reference": "https://github.com/santinic/how2?tab=readme-ov-file#macosx-via-howbrew"
    },
    "/npm": {
      "cmd": "sudo npm install -g how2",
      "reference": "https://github.com/santinic/how2?tab=readme-ov-file#with-npm",
      "dsnap": "how2"
    }
  },
  "dsnap": {
    "/npm": "how2"
  }
}
