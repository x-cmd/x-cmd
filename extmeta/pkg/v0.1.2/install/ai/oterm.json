{
  "lang": "Python",
  "homepage": "https://github.com/ggozad/oterm",
  "desc": {
    "cn": "ollama 的基于文本的终端客户端",
    "en": "A text-based terminal client for ollama."
  },
  "rule": {
    "/uvx": {
      "cmd": "uvx oterm",
      "reference": "https://ggozad.github.io/oterm/installation/#installation"
    },
    "/pip": {
      "cmd": "pip install oterm",
      "reference": "https://ggozad.github.io/oterm/installation/#installation",
      "dsnap": "oterm"
    },
    "arch/yay": {
      "cmd": "yay -S oterm",
      "reference": "https://ggozad.github.io/oterm/installation/#installation"
    },
    "/nix": {
      "cmd": "nix-env -iA oterm",
      "reference": "https://ggozad.github.io/oterm/installation/#installation"
    },
    "darwin/brew": {
      "cmd": "brew install ggozad/formulas/oterm",
      "reference": "https://ggozad.github.io/oterm/installation/#installation"
    }
  },
  "dsnap": {
    "brew": "ggozad/formulas/oterm",
    "/pip": "oterm"
  }
}
