{
  "lang": "Go",
  "homepage": "https://github.com/gptscript-ai/gptscript",
  "desc": {
    "cn": "GPTScript 是一种新的脚本语言，可自动与大型语言模型 (LLM)（即 OpenAI）进行交互",
    "en": "GPTScript is a new scripting language to automate your interaction with a Large Language Model (LLM), namely OpenAI"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install gptscript-ai/tap/gptscript",
      "reference": "https://github.com/gptscript-ai/gptscript?tab=readme-ov-file#homebrew-macos-and-linux"
    },
    "linux/brew": {
      "cmd": "brew install gptscript-ai/tap/gptscript",
      "reference": "https://github.com/gptscript-ai/gptscript?tab=readme-ov-file#homebrew-macos-and-linux"
    },
    "/curl": {
      "cmd": "curl https://get.gptscript.ai/install.sh | sh",
      "reference": "https://github.com/gptscript-ai/gptscript?tab=readme-ov-file#install-script-macos-and-linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install gptscript",
      "reference": "https://github.com/gptscript-ai/gptscript?tab=readme-ov-file#scoop-windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install gptscript-ai.gptscript",
      "reference": "https://github.com/gptscript-ai/gptscript?tab=readme-ov-file#winget-windows"
    }
  }
}
