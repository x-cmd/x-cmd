{
  "lang": "Go",
  "homepage": "https://github.com/aandrew-me/tgpt",
  "desc": {
    "cn": "tgpt 是一个跨平台的命令行界面（CLI）工具，允许你在终端中使用 AI 聊天机器人，无需 API 密钥。",
    "en": "tgpt is a cross-platform command-line interface (CLI) tool that allows you to use AI chatbot in your Terminal without requiring API keys."
  },
  "rule": {
    "/curl": {
      "cmd": "curl -sSL https://raw.githubusercontent.com/aandrew-me/tgpt/main/install | bash -s /usr/local/bin",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#download-for-gnulinux--or-macos-"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S tgpt",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#download-for-gnulinux--or-macos-"
    },
    "freebsd/pkg": {
      "cmd": "pkg install tgpt",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#freebsd-"
    },
    "/go": {
      "cmd": "go install github.com/aandrew-me/tgpt/v2@latest",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#install-with-go",
      "dsnap": "github.com/aandrew-me/tgpt/v2@latest"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install https://raw.githubusercontent.com/aandrew-me/tgpt/main/tgpt.json",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#windows-"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install tgpt",
      "reference": "https://github.com/aandrew-me/tgpt?tab=readme-ov-file#windows-"
    }
  },
  "dsnap": {
    "/go": "github.com/aandrew-me/tgpt/v2@latest"
  }
}
