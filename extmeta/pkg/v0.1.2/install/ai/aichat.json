{
  "lang": "Rust",
  "homepage": "https://github.com/sigoden/aichat",
  "desc": {
    "cn": "AIChat 是一款一体化 AI CLI 工具，具有 Chat-REPL、Shell Assistant、RAG、工具使用、AI 代理等功能。",
    "en": "AIChat is an all-in-one AI CLI tool featuring Chat-REPL, Shell Assistant, RAG, Tool Use, AI Agent, and More."
  },
  "dsnap": {
    "brew": "aichat",
    "/cargo": "aichat"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install aichat",
      "reference": "https://github.com/sigoden/aichat?tab=readme-ov-file#install",
      "dsnap": "aichat"
    },
    "linux/brew": {
      "cmd": "brew install aichat",
      "reference": "https://github.com/sigoden/aichat?tab=readme-ov-file#install"
    },
    "darwin/brew": {
      "cmd": "brew install aichat",
      "reference": "https://github.com/sigoden/aichat?tab=readme-ov-file#install"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install aichat",
      "reference": "https://github.com/sigoden/aichat?tab=readme-ov-file#install"
    },
    "/pkg": {
      "cmd": "pkg install aichat",
      "reference": "https://github.com/sigoden/aichat?tab=readme-ov-file#install"
    }
  }
}
