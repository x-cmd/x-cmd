{
  "lang": "Rust & Typescript",
  "homepage": "https://github.com/openai/codex",
  "desc": {
    "cn": "OpenAI Codex CLI - 在您的终端中运行的轻量级编码代理",
    "en": "OpenAI Codex CLI - Lightweight coding agent that runs in your terminal"
  },
  "rule": {
    "/npm": {
      "cmd": "npm install -g @openai/codex",
      "reference": "https://github.com/openai/codex?tab=readme-ov-file#installation"
    },
    "/yarn": {
      "cmd": "yarn global add @openai/codex",
      "reference": "https://github.com/openai/codex?tab=readme-ov-file#installation"
    },
    "/bun": {
      "cmd": "bun install -g @openai/codex",
      "reference": "https://github.com/openai/codex?tab=readme-ov-file#installation"
    },
    "/pnpm": {
      "cmd": "pnpm add -g @openai/codex",
      "reference": "https://github.com/openai/codex?tab=readme-ov-file#installation"
    },
    "darwin/brew": {
      "cmd": "brew install codex",
      "reference": "https://formulae.brew.sh/formula/codex"
    }
  }
}
