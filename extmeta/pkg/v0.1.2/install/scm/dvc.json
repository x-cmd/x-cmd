{
  "lang": "Python",
  "homepage": "https://dvc.org/",
  "desc": {
    "cn": "DVC 是利用现有软件工程工具集的数据科学工具",
    "en": "DVC is a tool for data science that takes advantage of existing software engineering toolset"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install dvc",
      "reference": "https://dvc.org/doc/install/macos#install-with-brew"
    },
    "/pip": {
      "cmd": "pip install dvc",
      "reference": "https://dvc.org/doc/install/macos#install-with-pip",
      "dsnap": "dvc"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install dvc",
      "reference": "https://dvc.org/doc/install/windows#install-with-choco"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge mamba \\\n&& mamba install -c conda-forge dvc\n",
      "reference": "https://dvc.org/doc/install/windows#install-with-conda"
    },
    "/snap": {
      "cmd": "sudo snap install --classic dvc",
      "reference": "https://dvc.org/doc/install/linux#install-with-snap"
    },
    "debian/apt": {
      "cmd": "sudo apt install ./dvc_0.62.1_amd64.deb",
      "reference": "https://dvc.org/doc/install/linux#from-pkg-on-debian-ubuntu"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install ./dvc_0.62.1_amd64.deb",
      "reference": "https://dvc.org/doc/install/linux#from-pkg-on-debian-ubuntu"
    },
    "fedora/yum": {
      "cmd": "sudo yum install dvc-0.62.1-1.x86_64.rpm",
      "reference": "https://dvc.org/doc/install/linux#from-pkg-on-fedora-centos"
    },
    "centos/yum": {
      "cmd": "sudo yum install dvc-0.62.1-1.x86_64.rpm",
      "reference": "https://dvc.org/doc/install/linux#from-pkg-on-fedora-centos"
    }
  },
  "dsnap": {
    "/pip": "dvc"
  }
}
