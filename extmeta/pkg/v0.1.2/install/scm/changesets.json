{
  "lang": "typescript",
  "homepage": "https://github.com/changesets/changesets",
  "desc": {
    "cn": "管理版本控制和变更日志的工具，重点关注多包存储库",
    "en": "A tool to manage versioning and changelogs with a focus on multi-package repositories"
  },
  "rule": {
    "/npm": {
      "cmd": "npm install -g @changesets/cli",
      "reference": "https://github.com/changesets/changesets/blob/main/docs/intro-to-using-changesets.md#add-the-changeset-tool"
    },
    "/npx": {
      "cmd": "npx changeset",
      "reference": "https://github.com/changesets/changesets/blob/main/docs/intro-to-using-changesets.md#adding-changesets"
    }
  }
}
