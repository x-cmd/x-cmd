{
  "lang": "c",
  "homepage": "https://httpd.apache.org/",
  "desc": {
    "cn": "Apache HTTP 服务器项目致力于为现代操作系统（包括 UNIX 和 Windows）开发和维护开源 HTTP 服务器",
    "en": "The Apache HTTP Server Project is an effort to develop and maintain an open-source HTTP server for modern operating systems including UNIX and Windows"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install httpd",
      "reference": "https://formulae.brew.sh/formula/httpd#default"
    },
    "debian/apt": {
      "cmd": "sudo apt install apache2",
      "reference": "https://www.digitalocean.com/community/tutorials/how-to-install-the-apache-web-server-on-debian-11",
      "dsnap": "apache2"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install apache2",
      "reference": "https://ubuntu.com/tutorials/install-and-configure-apache#2-installing-apache",
      "dsnap": "apache2"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S apache",
      "reference": "https://www.atlantic.net/dedicated-server-hosting/how-to-install-apache-web-server-on-arch-linux/"
    },
    "kali/apt": {
      "cmd": "sudo apt install apache2",
      "reference": "https://www.kali.org/tools/apache2/"
    },
    "centos/yum": {
      "cmd": "sudo yum install httpd",
      "reference": "https://www.digitalocean.com/community/tutorials/how-to-install-the-apache-web-server-on-centos-7"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install httpd -y",
      "reference": "https://docs.fedoraproject.org/en-US/quick-docs/getting-started-with-apache-http-server/",
      "dsnap": "httpd"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install apache2 -y",
      "reference": "https://linuxhint.com/set-up-apache-web-server-raspberry-pi/"
    }
  },
  "dsnap": {
    "brew": "httpd",
    "pacman": "apache",
    "yum": "httpd",
    "fedora/dnf": "httpd",
    "ubuntu/apt": "apache2",
    "debian/apt": "apache2"
  }
}
