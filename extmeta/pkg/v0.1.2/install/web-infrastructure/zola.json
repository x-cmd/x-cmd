{
  "lang": "Rust",
  "homepage": "https://www.getzola.org/",
  "desc": {
    "cn": "单个二进制中的快速静态站点生成器，所有内容都内置",
    "en": "A fast static site generator in a single binary with everything built-in"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#macos"
    },
    "darwin/port": {
      "cmd": "sudo port install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#macos"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#arch-linux"
    },
    "alpine/apk": {
      "cmd": "sudo apk add zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#alpine-linux",
      "dsnap": "zola"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable fz0x1/zola \\\n&& sudo dnf install zola\n",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#fedora",
      "dsnap": "zola"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#void-linux"
    },
    "freebsd/pkg": {
      "cmd": "pkg install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#freebsd"
    },
    "openbsd/pkg_add": {
      "cmd": "doas pkg_add zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#openbsd"
    },
    "pkgsrc/pkgin": {
      "cmd": "pkgin install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#pkgsrc"
    },
    "/snap": {
      "cmd": "sudo snap install --edge zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#snapcraft"
    },
    "/flatpak": {
      "cmd": "sudo flatpak install flathub org.getzola.zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#flatpak"
    },
    "nix/nixpkgs": {
      "cmd": "sudo nix-env -iA nixpkgs.zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#nixos-nixpkgs"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install getzola.zola",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#windows"
    },
    "/cargo": {
      "cmd": "git clone https://github.com/getzola/zola.git \\\n&& cd zola \\\n&& cargo install --path . --locked\n",
      "reference": "https://www.getzola.org/documentation/getting-started/installation/#from-source",
      "dsnap": "zola"
    }
  },
  "dsnap": {
    "brew": "zola",
    "/cargo": "zola",
    "fedora/dnf": "zola",
    "alpine/apk": "zola"
  }
}
