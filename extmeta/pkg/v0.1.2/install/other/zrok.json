{
  "lang": "Go",
  "homepage": "https://github.com/openziti/zrok",
  "desc": {
    "cn": "基于 OpenZiti 构建的地理规模、下一代点对点共享平台。",
    "en": "Geo-scale, next-generation peer-to-peer sharing platform built on top of OpenZiti."
  },
  "rule": {
    "/brew": {
      "cmd": "brew install zrok",
      "reference": "https://docs.zrok.io/docs/guides/install/macos/"
    },
    "linux/curl": {
      "cmd": "curl -sSf https://get.openziti.io/install.bash | sudo bash -s zrok",
      "reference": "https://docs.zrok.io/docs/guides/install/linux/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install extras/zrok",
      "reference": "https://scoop.sh/#/apps?q=zrok"
    }
  }
}
