{
  "lang": "Go",
  "homepage": "https://github.com/knqyf263/pet",
  "desc": {
    "cn": "pet 是一个简单的命令行片段管理器",
    "en": "pet is a simple command-line snippet manager"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install knqyf263/pet/pet",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#mac-os-x--homebrew"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install pet",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#fedora-redhat-centos",
      "dsnap": "pet"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf install pet",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#fedora-redhat-centos"
    },
    "centos/dnf": {
      "cmd": "sudo dnf install pet",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#fedora-redhat-centos"
    },
    "debian/wget": {
      "cmd": "wget https://github.com/knqyf263/pet/releases/download/vx.x.x/pet_1.0.1_linux_amd64.deb && \\\nsudo dpkg -i pet_1.0.1_linux_amd64.deb\n",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#debian-ubuntu"
    },
    "ubuntu/wget": {
      "cmd": "wget https://github.com/knqyf263/pet/releases/download/vx.x.x/pet_1.0.1_linux_amd64.deb && \\\nsudo dpkg -i pet_1.0.1_linux_amd64.deb\n",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#debian-ubuntu"
    },
    "arch/yay": {
      "cmd": "yay -S pet-git",
      "reference": "https://github.com/knqyf263/pet?tab=readme-ov-file#archlinux"
    }
  },
  "dsnap": {
    "brew": "knqyf263/pet/pet",
    "fedora/dnf": "pet"
  }
}
