{
  "lang": "shell",
  "homepage": "https://github.com/rcaloras/bash-preexec",
  "desc": {
    "en": "preexec and precmd functions for Bash just like Zsh.",
    "cn": "Bash 的 preexec 和 precmd 函数就像 Zsh 一样。"
  },
  "rule": {
    "/curl": {
      "cmd": "curl https://raw.githubusercontent.com/rcaloras/bash-preexec/master/bash-preexec.sh -o ~/.bash-preexec.sh\necho '[[ -f ~/.bash-preexec.sh ]] && source ~/.bash-preexec.sh' >> ~/.bashrc\n",
      "reference": "https://github.com/rcaloras/bash-preexec#install"
    }
  },
  "dsnap": {
    "bash": "bash-preexec.sh"
  }
}
