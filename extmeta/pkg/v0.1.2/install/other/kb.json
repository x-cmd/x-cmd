{
  "lang": "python",
  "homepage": "https://github.com/gnebbia/kb",
  "desc": {
    "cn": "极简的命令行知识库管理器",
    "en": "A minimalist command line knowledge base manager"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install -U kb-manager",
      "reference": "https://github.com/gnebbia/kb?tab=readme-ov-file#installation"
    },
    "arch/yay": {
      "cmd": "yay -S kb",
      "reference": "https://github.com/gnebbia/kb?tab=readme-ov-file#installation-from-aur"
    },
    "/brew": {
      "cmd": "brew tap gnebbia/kb https://github.com/gnebbia/kb.git\nbrew install gnebbia/kb/kb\n",
      "reference": "https://github.com/gnebbia/kb?tab=readme-ov-file#installation-with-homebrew"
    }
  }
}
