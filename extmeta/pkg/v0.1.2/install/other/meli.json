{
  "lang": "Rust",
  "homepage": "https://meli-email.org/",
  "desc": {
    "cn": "Meli 是一个可配置且可扩展的电子邮件客户端，具有合理的默认设置。",
    "en": "meli is a configurable and extensible e-mail client with sane defaults."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install meli",
      "reference": "https://crates.io/crates/meli"
    },
    "debian/apt": {
      "cmd": "sudo apt install meli",
      "reference": "https://meli-email.org/download.html#debian-official"
    },
    "darwin/port": {
      "cmd": "sudo port install meli",
      "reference": "https://ports.macports.org/port/meli/"
    },
    "darwin/brew": {
      "cmd": "brew install meli",
      "reference": "https://formulae.brew.sh/formula/meli#default"
    },
    "netbsd/pkgsrc": {
      "cmd": "pkgin install meli",
      "reference": "https://pkgsrc.se/mail/meli"
    },
    "/nix-env": {
      "cmd": "nix-env -iA nixos.meli",
      "reference": "https://search.nixos.org/packages?channel=24.11&show=meli&from=0&size=50&sort=relevance&type=packages&query=meli"
    }
  }
}
