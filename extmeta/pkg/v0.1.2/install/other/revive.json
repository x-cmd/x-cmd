{
  "lang": "go",
  "homepage": "https://github.com/mgechev/revive",
  "desc": {
    "cn": "Go 语言代码质量检测工具（golint 替代品），可配置且更为美观",
    "en": "Go language code quality detection tool (golint replacement), configurable and more beautiful"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use revive",
      "reference": "https://github.com/bjw-s/asdf-revive"
    },
    "/go": {
      "cmd": "go get -u github.com/mgechev/revive",
      "reference": "https://revive.run/docs#installation",
      "dsnap": "github.com/mgechev/revive"
    }
  },
  "dsnap": {
    "/go": "github.com/mgechev/revive"
  }
}
