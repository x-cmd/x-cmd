{
  "lang": "rust",
  "homepage": "https://github.com/watchexec/watchexec",
  "desc": {
    "cn": "watchexec 是一个简单的独立工具，可以监视路径并在检测到修改时运行命令",
    "en": "watchexec is a simple, standalone tool that watches a path and runs a command whenever it detects modifications"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use watchexec",
      "reference": "https://github.com/nyrst/asdf-watchexec"
    },
    "/cargo": {
      "cmd": "cargo install --locked watchexec-cli",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "darwin/brew": {
      "cmd": "brew install watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "nix/": {
      "cmd": "nix-shell -p watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "alpine/apk": {
      "cmd": "sudo apk add watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "debian/apt": {
      "cmd": "sudo apt install watchexec-cli",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install watchexec-cli",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "kali/apt": {
      "cmd": "sudo apt install watchexec-cli",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install watchexec-cli",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "manjaro/pamac": {
      "cmd": "sudo pamac install watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "void/xbps": {
      "cmd": "xbps-install -S watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install watchexec",
      "reference": "https://scoop.sh/#/apps?q=watchexec"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install watchexec",
      "reference": "https://community.chocolatey.org/packages?q=watchexec"
    },
    "win/msys2": {
      "cmd": "sudo pacman -S mingw-w64-x86_64-watchexec",
      "reference": "https://github.com/watchexec/watchexec/blob/main/doc/packages.md"
    }
  }
}
