{
  "lang": "Rust",
  "homepage": "https://github.com/Canop/rhit",
  "desc": {
    "cn": "Nginx 日志探索器。",
    "en": "A nginx log explorer."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install rhit",
      "reference": "https://dystroy.org/rhit/install/",
      "dsnap": "rhit"
    },
    "arch/pacman": {
      "cmd": "pacman -S rhit",
      "reference": "https://dystroy.org/rhit/install/"
    },
    "manjaro/pacman": {
      "cmd": "pacman -S rhit",
      "reference": "https://dystroy.org/rhit/install/"
    },
    "darwin/brew": {
      "cmd": "brew install bmon",
      "reference": "https://github.com/tgraf/bmon#osx-installation"
    },
    "darwin/port": {
      "cmd": "sudo port install rhit",
      "reference": "https://github.com/tgraf/bmon#osx-installation"
    }
  },
  "dsnap": {
    "brew": "bmon",
    "port": "rhit",
    "/cargo": "rhit"
  }
}
