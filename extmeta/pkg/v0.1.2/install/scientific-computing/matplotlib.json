{
  "lang": "python",
  "homepage": "https://matplotlib.org/",
  "desc": {
    "cn": "Matplotlib 是一个用于创建出版质量图表的 Python 库",
    "en": "Matplotlib is a Python library for creating publication quality graphics"
  },
  "rule": {
    "/pip": {
      "cmd": "python -m pip install -U matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#install-an-official-release",
      "dsnap": "matplotlib"
    },
    "/conda": {
      "cmd": "conda install matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#conda-packages"
    },
    "darwin/brew": {
      "cmd": "brew install python-matplotlib",
      "reference": "https://formulae.brew.sh/formula/python-matplotlib#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager",
      "dsnap": "python3-matplotlib"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager",
      "dsnap": "python3-matplotlib"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S python-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager"
    },
    "rhel/yum": {
      "cmd": "sudo yum install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager",
      "dsnap": "python3-matplotlib"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install python3-matplotlib",
      "reference": "https://matplotlib.org/stable/users/installing/index.html#linux-package-manager"
    }
  },
  "dsnap": {
    "brew": "python-matplotlib",
    "/pip": "matplotlib",
    "fedora/dnf": "python3-matplotlib",
    "ubuntu/apt": "python3-matplotlib",
    "debian/apt": "python3-matplotlib"
  }
}
