{
  "lang": "Rust",
  "homepage": "https://github.com/GabAlpha/basilk",
  "desc": {
    "cn": "一个使用最少看板逻辑管理任务的 TUI。",
    "en": "A TUI to manage your tasks with minimal kanban logic."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install basilk",
      "reference": "https://github.com/GabAlpha/basilk#installation",
      "dsnap": "basilk"
    },
    "linux/paru": {
      "cmd": "paru -S basilk",
      "reference": "https://github.com/GabAlpha/basilk#installation"
    },
    "/brew": {
      "cmd": "brew install GabAlpha/tap/basilk",
      "reference": "https://github.com/GabAlpha/basilk#installation"
    }
  },
  "dsnap": {
    "brew": "basilk",
    "/cargo": "basilk"
  }
}
