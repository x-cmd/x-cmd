{
  "lang": "C",
  "homepage": "https://calcurse.org/",
  "desc": {
    "cn": "一款命令行日历和日程安排应用。它可以帮助用户追踪事件、约会和日常任务。",
    "en": "A calendar and scheduling application for the command line. It helps keep track of events, appointments and everyday tasks."
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install calcurse",
      "reference": "https://formulae.brew.sh/formula/calcurse"
    },
    "ubuntu/apt": {
      "cmd": "x apt install calcurse",
      "reference": "https://packages.ubuntu.com/search?keywords=calcurse"
    },
    "debian/apt": {
      "cmd": "x apt install calcurse",
      "reference": "https://packages.debian.org/search?keywords=calcurse"
    },
    "arch/pacman": {
      "cmd": "x pacman -S calcurse",
      "reference": "https://archlinux.org/packages/?q=calcurse"
    },
    "fedora/dnf": {
      "cmd": "x dnf install calcurse",
      "reference": "https://packages.fedoraproject.org/pkgs/calcurse/calcurse/"
    }
  }
}
