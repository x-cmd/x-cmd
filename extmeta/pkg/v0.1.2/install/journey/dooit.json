{
  "lang": "Python",
  "homepage": "https://github.com/dooit-org/dooit",
  "desc": {
    "cn": "出色的 TUI 待办事项管理器",
    "en": "An awesome TUI todo manager"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install dooit dooit-extras",
      "reference": "https://dooit-org.github.io/dooit/getting_started/installation.html"
    },
    "arch/yay": {
      "cmd": "yay -S dooit dooit-extras",
      "reference": "https://dooit-org.github.io/dooit/getting_started/installation.html"
    }
  }
}
