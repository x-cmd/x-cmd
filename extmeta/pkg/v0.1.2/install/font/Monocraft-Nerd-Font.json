{
  "lang": "Python",
  "homepage": "https://idreesinc.com/monocraft.html",
  "desc": {
    "cn": "Monocraft 是一款专为太喜欢 Minecraft 的开发者设计的字体",
    "en": "Monocraft is a font for developers who like Minecraft a little too much"
  },
  "rule": {
    "win/powershell": {
      "cmd": "x pwsh Invoke-WebRequest -Uri https://github.com/IdreesInc/Monocraft/releases/download/v3.0/Monocraft.ttf -OutFile Monocraft.ttf",
      "reference": "https://github.com/IdreesInc/Monocraft?tab=readme-ov-file#windows"
    },
    "darwin/brew": {
      "cmd": "brew tap homebrew/cask-fonts \\\n&& brew install --cask font-monocraft\n",
      "reference": "https://github.com/IdreesInc/Monocraft?tab=readme-ov-file#mac"
    },
    "/curl": {
      "cmd": "curl -OL https://github.com/IdreesInc/Monocraft/releases/download/v3.0/Monocraft.ttf",
      "reference": "https://github.com/IdreesInc/Monocraft?tab=readme-ov-file#linux"
    },
    "/wget": {
      "cmd": "wget https://github.com/IdreesInc/Monocraft/releases/download/v3.0/Monocraft.ttf",
      "reference": "https://github.com/IdreesInc/Monocraft?tab=readme-ov-file#linux"
    }
  },
  "dsnap": {
    "brew": "font-monocraft"
  }
}
