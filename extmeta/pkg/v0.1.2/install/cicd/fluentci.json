{
  "lang": "typescript",
  "homepage": "https://github.com/fluentci-io/fluentci",
  "desc": {
    "en": "Fluent CI is a CI/CD tool that allows you to build, test, and deploy your code",
    "cn": "FluentCI 是一个 CI/CD 工具，允许您构建、测试和部署代码"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install fluentci-io/tap/cli",
      "reference": "https://github.com/fluentci-io/fluentci?tab=readme-ov-file#-installation"
    },
    "/deno": {
      "cmd": "deno install -A -r https://cli.fluentci.io -n fluentci",
      "reference": "https://github.com/fluentci-io/fluentci?tab=readme-ov-file#-installation"
    },
    "/pkgx": {
      "cmd": "pkgx install fluentci",
      "reference": "https://github.com/fluentci-io/fluentci?tab=readme-ov-file#-installation"
    },
    "/nix": {
      "cmd": "nix profile install --experimental-features \"nix-command flakes\" github:fluentci-io/fluentci",
      "reference": "https://github.com/fluentci-io/fluentci?tab=readme-ov-file#-installation"
    }
  },
  "dsnap": {
    "brew": "cli",
    "deno": "fluentci",
    "pkgx": "fluentci"
  }
}
