{
  "lang": "go",
  "homepage": "https://github.com/supabase/cli",
  "desc": {
    "en": "Manage postgres migrations, run Supabase locally, deploy edge functions. Postgres backups. Generating types from your database schema",
    "cn": "管理 postgres 迁移，本地运行 Supabase, 部署边缘函数。Postgres备份。从数据库模式生成类型"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install supabase/tap/supabase",
      "reference": "https://github.com/supabase/cli?tab=readme-ov-file#install-the-cli"
    },
    "/npm": {
      "cmd": "npm install -g supabase",
      "reference": "https://www.npmjs.com/package/supabase",
      "dsnap": "supabase"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add supabase https://github.com/supabase/scoop-bucket.git && x scoop install supabase\n",
      "reference": "https://scoop.sh/#/apps?q=supabase"
    },
    "/go": {
      "cmd": "go install github.com/supabase/cli@latest",
      "reference": "https://github.com/supabase/cli?tab=readme-ov-file#install-the-cli",
      "dsnap": "github.com/supabase/cli"
    },
    "/pkgx": {
      "cmd": "pkgx install supabase",
      "reference": "https://github.com/supabase/cli?tab=readme-ov-file#install-the-cli"
    }
  },
  "dsnap": {
    "brew": "supabase",
    "/npm": "supabase",
    "/go": "github.com/supabase/cli"
  }
}
