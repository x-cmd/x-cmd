{
  "lang": "rescript",
  "homepage": "http://aspell.net/",
  "desc": {
    "cn": "GNU Aspell 是一个自由和开源的拼写检查器，旨在最终取代 Ispell",
    "en": "GNU Aspell is a Free and Open Source spell checker designed to eventually replace Ispell"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install aspell",
      "reference": "https://formulae.brew.sh/formula/aspell#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install aspell",
      "reference": "https://scoop.sh/#/apps?q=aspell"
    }
  },
  "dsnap": {
    "brew": "aspell"
  }
}
