{
  "lang": "Rust",
  "homepage": "https://ast-grep.github.io/",
  "desc": {
    "cn": "ast-grep(sg) 是一个快速、多语言的工具，用于大规模的代码结构化搜索、 lint 和重写",
    "en": "ast-grep(sg) is a fast and polyglot tool for code structural search, lint, rewriting at large scale"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install ast-grep",
      "reference": "https://ast-grep.github.io/guide/quick-start.html#installation"
    },
    "/cargo": {
      "cmd": "cargo install ast-grep",
      "reference": "https://ast-grep.github.io/guide/quick-start.html#installation",
      "dsnap": "ast-grep"
    },
    "/npm": {
      "cmd": "npm i @ast-grep/cli -g",
      "reference": "https://ast-grep.github.io/guide/quick-start.html#installation"
    },
    "/pip": {
      "cmd": "pip install ast-grep-cli",
      "reference": "https://ast-grep.github.io/guide/quick-start.html#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install ast-grep",
      "reference": "https://scoop.sh/#/apps?q=ast-grep"
    }
  },
  "dsnap": {
    "/cargo": "ast-grep"
  }
}
