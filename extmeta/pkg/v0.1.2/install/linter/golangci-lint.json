{
  "lang": "Go",
  "homepage": "https://golangci-lint.run/",
  "desc": {
    "cn": "golangci-lint 是一个快速的 Go linter 运行器",
    "en": "golangci-lint is a fast Go linters runner"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b $(go env GOPATH)/bin",
      "reference": "https://golangci-lint.run/usage/install/#local-installation"
    },
    "darwin/brew": {
      "cmd": "brew install golangci-lint",
      "reference": "https://golangci-lint.run/usage/install/#macos"
    },
    "darwin/port": {
      "cmd": "sudo port install golangci-lint",
      "reference": "https://golangci-lint.run/usage/install/#macos"
    },
    "/go": {
      "cmd": "go install github.com/golangci/golangci-lint/cmd/golangci-lint",
      "reference": "https://golangci-lint.run/usage/install/#install-from-source"
    }
  }
}
