{
  "lang": "rust",
  "homepage": "https://github.com/dprint/dprint",
  "desc": {
    "cn": "用 Rust 编写的可插入且可配置的代码格式化平台",
    "en": "Pluggable and configurable code formatting platform written in Rust"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use dprint",
      "reference": "https://github.com/asdf-community/asdf-dprint"
    },
    "/curl": {
      "cmd": "curl -fsSL https://dprint.dev/install.sh | sh",
      "reference": "https://dprint.dev/install/"
    },
    "win/powershell": {
      "cmd": "x pwsh iwr https://dprint.dev/install.ps1 -useb | iex",
      "reference": "https://dprint.dev/install/"
    },
    "darwin/brew": {
      "cmd": "brew install dprint",
      "reference": "https://dprint.dev/install/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install dprint",
      "reference": "https://dprint.dev/install/"
    },
    "/cargo": {
      "cmd": "cargo install --locked dprint",
      "reference": "https://dprint.dev/install/",
      "dsnap": "dprint"
    },
    "/npm": {
      "cmd": "npm install -g dprint",
      "reference": "https://dprint.dev/install/"
    }
  },
  "dsnap": {
    "/cargo": "dprint"
  }
}
