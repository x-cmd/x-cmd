{
  "lang": "rust",
  "desc": {
    "cn": "一个非常快的 Python linter 和代码格式化程序",
    "en": "A very fast Python linter and code formatter"
  },
  "homepage": "https://github.com/astral-sh/ruff",
  "rule": {
    "(linux|darwin)/curl": {
      "cmd": "curl -sSf https://install.astral.sh/ruff | sh",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff"
    },
    "win/": {
      "cmd": "powershell -c \"irm https://astral.sh/ruff/install.ps1 | iex\"",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff"
    },
    "/pipx": {
      "cmd": "pipx install ruff",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff"
    },
    "/pip": {
      "cmd": "pip install ruff",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff",
      "dsnap": "ruff"
    },
    "/brew": {
      "cmd": "brew install ruff",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge ruff",
      "reference": "https://docs.astral.sh/ruff/installation/#installing-ruff"
    }
  },
  "dsnap": {
    "/pip": "ruff"
  }
}
