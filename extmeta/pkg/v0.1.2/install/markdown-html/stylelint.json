{
  "lang": "node",
  "homepage": "https://stylelint.io",
  "desc": {
    "en": "css code analysis tool to find and fix problems in CSS code",
    "cn": "css 代码分析校验工具，用于查找并修复 CSS 代码中的问题"
  },
  "rule": {
    "/npm": {
      "cmd": "npm install -g stylelint",
      "reference": "https://www.npmjs.com/package/stylelint",
      "dsnap": "stylelint"
    },
    "darwin/brew": {
      "cmd": "brew install stylelint",
      "reference": "https://formulae.brew.sh/formula/stylelint#default"
    }
  },
  "dsnap": {
    "/npm": "stylelint"
  }
}
