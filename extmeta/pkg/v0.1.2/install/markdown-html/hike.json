{
  "lang": "Python",
  "homepage": "https://github.com/davep/hike",
  "desc": {
    "cn": "Hike 是终端的 Markdown 浏览器。",
    "en": "Hike is a Markdown browser for the terminal."
  },
  "rule": {
    "/pipx": {
      "cmd": "pipx install hike",
      "reference": "https://github.com/davep/hike?tab=readme-ov-file#pipx"
    },
    "darwin/brew": {
      "cmd": "brew tap davep/homebrew && brew install hike",
      "reference": "https://github.com/davep/hike?tab=readme-ov-file#homebrew"
    }
  },
  "dsnap": {
    "brew": "hike"
  }
}
