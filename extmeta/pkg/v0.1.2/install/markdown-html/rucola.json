{
  "lang": "Rust",
  "homepage": "https://github.com/Linus-Mussmaecher/rucola",
  "desc": {
    "cn": "一个基于终端的 Markdown 笔记管理器，专为 Zettelkasten 风格的笔记系统而设计。",
    "en": "A terminal based markdown note manager designed for zettelkasten-style note systems."
  },
  "rule": {
    "arch/pacman": {
      "cmd": "pacman -S rucola",
      "reference": "https://github.com/Linus-Mussmaecher/rucola#installation"
    },
    "/brew": {
      "cmd": "brew install Linus-Mussmaecher/tap/rucola",
      "reference": "https://github.com/Linus-Mussmaecher/rucola#installation"
    },
    "/cargo": {
      "cmd": "cargo install --locked rucola-notes",
      "reference": "https://github.com/Linus-Mussmaecher/rucola#installation"
    },
    "/eget": {
      "cmd": "eget Linus-Mussmaecher/rucola",
      "reference": "https://github.com/Linus-Mussmaecher/rucola#installation"
    }
  }
}
