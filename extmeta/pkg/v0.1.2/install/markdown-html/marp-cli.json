{
  "lang": "node",
  "homepage": "https://github.com/marp-team/marp-cli",
  "desc": {
    "cn": "用于基于 Marp 和 Marpit 的转换器的 CLI 界面",
    "en": "A CLI interface for Marp and Marpit based converters"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use marp-cli",
      "reference": "https://github.com/xataz/asdf-marp-cli"
    },
    "darwin/brew": {
      "cmd": "brew install marp-cli",
      "reference": "https://github.com/marp-team/marp-cli?tab=readme-ov-file#macos-homebrew"
    },
    "/npm": {
      "cmd": "npm install -g @marp-team/marp-cli",
      "reference": "npm install -g @marp-team/marp-cli"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install marp",
      "reference": "https://github.com/marp-team/marp-cli?tab=readme-ov-file#windows-scoop"
    }
  }
}
