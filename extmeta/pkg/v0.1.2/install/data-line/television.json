{
  "lang": "rust",
  "homepage": "https://github.com/alexpasmantier/television",
  "desc": {
    "cn": "一个跨平台、快速且可扩展的 TUI 模糊查找器",
    "en": "A cross-platform, fast and extensible fuzzy finder TUI"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "/nix": {
      "cmd": "nix run nixpkgs#television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "scoop bucket add extras\nscoop install television\n",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "(win|wsl2)/winget": {
      "cmd": "winget install --exact --id alexpasmantier.television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "arch/pacman": {
      "cmd": "pacman -S television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "alpine/apk": {
      "cmd": "apk add chimera-repo-user\napk add television\n",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation",
      "dsnap": "television"
    },
    "(ubuntu|debian)/dpkg": {
      "cmd": "VER=`curl -s \"https://api.github.com/repos/alexpasmantier/television/releases/latest\" | grep '\"tag_name\":' | sed -E 's/.*\"tag_name\": \"([^\"]+)\".*/\\1/'`\ncurl -LO https://github.com/alexpasmantier/television/releases/download/$VER/television_$VER-1_amd64.deb\necho $VER\nsudo dpkg -i television_$VER-1_amd64.deb\n",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "/pixi": {
      "cmd": "x pixi global install television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation"
    },
    "/cargo": {
      "cmd": "cargo install --locked television",
      "reference": "https://github.com/alexpasmantier/television/wiki/Installation",
      "dsnap": "television"
    }
  },
  "dsnap": {
    "brew": "television",
    "/cargo": "television",
    "alpine/apk": "television"
  }
}
