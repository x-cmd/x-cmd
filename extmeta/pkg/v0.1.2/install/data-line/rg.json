{
  "lang": "rust",
  "homepage": "https://github.com/BurntSushi/ripgrep",
  "desc": {
    "cn": "rg 是面向行（line-oriented）搜索工具，以递归的方式在当前目录中搜索与 regex 模式匹配的文本",
    "en": "rg is a line-oriented search tool that recursively searches the current directory for a regex pattern"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use rg",
      "reference": null
    },
    "darwin/brew": {
      "cmd": "brew install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install ripgrep",
      "reference": "https://command-not-found.com/rg"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install BurntSushi.ripgrep.MSVC",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge sys-apps/ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "centos/yum": {
      "cmd": "sudo yum install -y yum-utils\n&& sudo yum-config-manager --add-repo=https://copr.fedorainfracloud.org/coprs/carlwgeorge/ripgrep/repo/epel-7/carlwgeorge-ripgrep-epel-7.repo\n&& sudo yum install ripgrep\n",
      "reference": "hhttps://github.com/BurntSushi/ripgrep#installation"
    },
    "nix/": {
      "cmd": "nix-env --install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "openbsd/pkg_add": {
      "cmd": "doas pkg_add ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "netbsd/pkgin": {
      "cmd": "sudo pkgin install ripgrep",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    },
    "haiku/pkgman": {
      "cmd": "sudo pkgman install ripgrep_x86",
      "reference": "https://github.com/BurntSushi/ripgrep#installation"
    }
  }
}
