{
  "lang": "Rust",
  "homepage": "https://alacritty.org/",
  "desc": {
    "cn": "Alacritty 是一个现代终端模拟器，具有合理的默认值，但允许进行广泛的配置",
    "en": "Alacritty is a modern terminal emulator that comes with sensible defaults, but allows for extensive configuration"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install alacritty",
      "reference": "https://github.com/alacritty/alacritty/blob/master/INSTALL.md#cargo-installation",
      "dsnap": "alacritty"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/alacritty",
      "reference": "https://scoop.sh/#/apps?q=alacritty"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install -e --id Alacritty.Alacritty",
      "reference": "https://winget.run/pkg/Alacritty/Alacritty"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install alacritty",
      "reference": "https://community.chocolatey.org/packages/alacritty"
    }
  },
  "dsnap": {
    "/cargo": "alacritty"
  }
}
