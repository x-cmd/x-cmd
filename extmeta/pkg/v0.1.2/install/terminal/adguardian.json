{
  "lang": "Rust",
  "homepage": "https://adguardian.as93.net/",
  "desc": {
    "cn": "用于监控 AdGuard Home 实例的终端工具",
    "en": "A terminal-based tool for monitoring AdGuard Home instances"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install adguardian",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#install-from-cratesio",
      "dsnap": "adguardian"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install extras/adguardian",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#scoop"
    },
    "arch/paru": {
      "cmd": "paru -Syu adguardian",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#aur"
    },
    "arch/yay": {
      "cmd": "yay -Syu adguardian",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#aur"
    },
    "arch/makepkg": {
      "cmd": "git clone https://aur.archlinux.org/adguardian.git && cd adguardian && makepkg -si",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#aur"
    },
    "/curl": {
      "cmd": "bash <(curl -sL https://raw.githubusercontent.com/Lissy93/AdGuardian-Term/main/quick-start.sh)",
      "reference": "https://github.com/Lissy93/AdGuardian-Term?tab=readme-ov-file#one-liner"
    },
    "/nix-env": {
      "cmd": "nix-env -iA nixos.adguardian",
      "reference": "https://search.nixos.org/packages?channel=unstable&show=adguardian&from=0&size=50&sort=relevance&type=packages&query=adguardian"
    }
  },
  "dsnap": {
    "/cargo": "adguardian"
  }
}
