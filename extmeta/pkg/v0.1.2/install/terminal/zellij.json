{
  "homepage": "https://zellij.dev/",
  "desc": {
    "cn": "一个面向开发人员、运营人员以及任何热爱终端用户的终端多路复用器",
    "en": "A terminal multiplexer for developers, ops-oriented people and anyone who loves the terminal"
  },
  "lang": "rust",
  "rule": {
    "/asdf": {
      "cmd": "x asdf use zellij",
      "reference": "https://github.com/chessmango/asdf-zellij"
    },
    "/curl": {
      "cmd": "bash <(curl -L zellij.dev/launch)",
      "reference": "https://zellij.dev/"
    },
    "darwin/brew": {
      "cmd": "brew install zellij",
      "reference": "https://formulae.brew.sh/formula/zellij#default"
    },
    "darwin/port": {
      "cmd": "sudo port install zellij",
      "reference": "https://github.com/zellij-org/zellij/blob/main/docs/THIRD_PARTY_INSTALL.md#macos"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S zellij",
      "reference": "https://github.com/zellij-org/zellij/blob/main/docs/THIRD_PARTY_INSTALL.md#arch-linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable varlad/zellij\n&& sudo dnf install zellij\n",
      "reference": "https://github.com/zellij-org/zellij/blob/main/docs/THIRD_PARTY_INSTALL.md#fedora-linux"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install zellij",
      "reference": "https://github.com/zellij-org/zellij/blob/main/docs/THIRD_PARTY_INSTALL.md#void-linux"
    }
  }
}
