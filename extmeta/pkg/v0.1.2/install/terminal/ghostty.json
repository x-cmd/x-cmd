{
  "lang": "Zig",
  "homepage": "https://ghostty.org/",
  "desc": {
    "cn": "Ghostty 是一个快速、功能丰富且跨平台的终端模拟器，采用平台原生的用户界面和 GPU 加速。",
    "en": "Ghostty is a fast, feature-rich, and cross-platform terminal emulator that uses platform-native UI and GPU acceleration."
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install ghostty",
      "reference": "https://ghostty.org/docs/install/binary#homebrew"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ghostty",
      "reference": "https://ghostty.org/docs/install/binary#arch-linux"
    },
    "/yay": {
      "cmd": "yay -S ghostty-git",
      "reference": "https://ghostty.org/docs/install/binary#aur"
    }
  },
  "dsnap": {
    "brew": "ghostty"
  }
}
