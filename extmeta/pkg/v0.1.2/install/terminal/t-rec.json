{
  "lang": "Rust",
  "homepage": "https://github.com/sassman/t-rec-rs",
  "desc": {
    "cn": "用 Rust 编写的极快的终端记录器，用于为网络生成动画 gif 图像",
    "en": "Blazingly fast terminal recorder that generates animated gif images for the web written in rust"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install t-rec",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-macos"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate\nsudo port install t-rec\n",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-macos"
    },
    "/cargo": {
      "cmd": "cargo install -f t-rec",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-macos"
    },
    "ubuntu/dpkg": {
      "cmd": "sudo apt-get install imagemagick\nwget https://github.com/sassman/t-rec-rs/releases/download/v0.5.0/t-rec_0.5.0_amd64.deb\nsudo dpkg -i t-rec_0.5.0_amd64.deb\n",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-linux"
    },
    "ubuntu/snap": {
      "cmd": "sudo snap install t-rec --classic",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-linux"
    },
    "arch/paru": {
      "cmd": "paru -S t-rec",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#from-aur"
    },
    "netbsd/pkgin": {
      "cmd": "pkgin install t-rec",
      "reference": "https://github.com/sassman/t-rec-rs?tab=readme-ov-file#installation-on-netbsd"
    }
  }
}
