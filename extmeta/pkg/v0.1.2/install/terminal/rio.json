{
  "lang": "Rust",
  "homepage": "https://raphamorim.io/rio/",
  "desc": {
    "cn": "Rio 是一个终端，旨在随处运行，可以作为原生桌面应用程序使用 Rust 编写，甚至通过 WebAssembly 在浏览器中运行。",
    "en": "Rio is a terminal built to run everywhere, as a native desktop applications by Rust or even in the browser powered by WebAssembly."
  },
  "rule": {
    "opensuse/zypper": {
      "cmd": "sudo zypper install rioterm",
      "reference": "https://software.opensuse.org//download.html?project=openSUSE%3AFactory&package=rioterm"
    },
    "alpine/apk": {
      "cmd": "apk install rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/linux/"
    },
    "arch/pacman": {
      "cmd": "sudo pacman install rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/linux/"
    },
    "/nix-env": {
      "cmd": "sudo nix-env -iA nixos.rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/linux/"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install -S rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/linux/"
    },
    "darwin/brew": {
      "cmd": "brew install --cask rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/macos"
    },
    "darwin/port": {
      "cmd": "sudo port install rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/macos"
    },
    "/cargo": {
      "cmd": "cargo install rioterm",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/using-cargo",
      "dsnap": "rioterm"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install rio-terminal",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install -e --id raphamorim.rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/windows"
    },
    "freebsd/pkg": {
      "cmd": "pkg install rio",
      "reference": "https://raphamorim.io/rio/zh-hans/docs/install/freebsd"
    }
  },
  "dsnap": {
    "/cargo": "rioterm"
  }
}
