{
  "lang": "rust",
  "homepage": "https://github.com/imsnif/bandwhich",
  "desc": {
    "cn": "bandwhich 是一个通过进程、连接和远程 IP/主机名显示当前网络利用率的 CLI 实用程序",
    "en": "bandwhich is a CLI utility for displaying current network utilization by process, connection and remote IP/hostname"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install bandwhich",
      "reference": "https://formulae.brew.sh/formula/bandwhich#default"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install bandwhich",
      "reference": "https://github.com/imsnif/bandwhich#macos-using-macports"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bandwhich",
      "reference": "https://github.com/imsnif/bandwhich#arch-linux"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -iA nixpkgs.bandwhich",
      "reference": "https://github.com/imsnif/bandwhich#nixnixos"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable atim/bandwhich -y\n&& sudo dnf install bandwhich\n",
      "reference": "https://github.com/imsnif/bandwhich#fedora"
    },
    "freebsd/pkg": {
      "cmd": "pkg install bandwhich",
      "reference": "https://github.com/imsnif/bandwhich#freebsd"
    }
  },
  "dsnap": {
    "brew": "bandwhich"
  }
}
