{
  "lang": "C",
  "homepage": "https://github.com/tgraf/bmon",
  "desc": {
    "cn": "带宽监控和速率估计器",
    "en": "Bandwidth monitor and rate estimator"
  },
  "rule": {
    "ubuntu/apt": {
      "cmd": "sudo apt install bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "debian/apt": {
      "cmd": "sudo apt install bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "centos/yum": {
      "cmd": "sudo yum -S bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "opensuse/zypper": {
      "cmd": "zypper in bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "alpine/apk": {
      "cmd": "apk add bmon",
      "reference": "https://github.com/tgraf/bmon#debianubuntu-installation"
    },
    "darwin/brew": {
      "cmd": "brew install bmon",
      "reference": "https://github.com/tgraf/bmon#osx-installation"
    }
  }
}
