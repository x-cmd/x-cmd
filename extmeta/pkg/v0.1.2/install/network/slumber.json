{
  "lang": "Rust",
  "homepage": "https://github.com/LucasPickering/slumber",
  "desc": {
    "cn": "Slumber 是一个基于终端的用户界面（TUI）HTTP 客户端。",
    "en": "Slumber is a TUI (terminal user interface) HTTP client."
  },
  "rule": {
    "/curl": {
      "cmd": "curl --proto '=https' --tlsv1.2 -LsSf https://github.com/LucasPickering/slumber/releases/download/v3.0.1/slumber-installer.sh | sh",
      "reference": "https://github.com/LucasPickering/slumber/releases"
    },
    "/brew": {
      "cmd": "brew install slumber",
      "reference": "https://formulae.brew.sh/formula/slumber#default"
    },
    "/cargo": {
      "cmd": "cargo install slumber --locked",
      "reference": "https://slumber.lucaspickering.me/artifacts/"
    },
    "(win|wsl2)/powershell": {
      "cmd": "powershell -ExecutionPolicy ByPass -c \"irm https://github.com/LucasPickering/slumber/releases/download/v3.0.1/slumber-installer.ps1 | iex\"",
      "reference": "https://github.com/LucasPickering/slumber/releases"
    }
  }
}
