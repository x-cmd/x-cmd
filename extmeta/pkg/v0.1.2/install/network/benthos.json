{
  "lang": "go",
  "homepage": "https://www.benthos.dev/",
  "desc": {
    "cn": "Benthos 是一个声明性的数据流服务，通过简单的、链式的、无状态的处理步骤解决了大量的数据工程问题",
    "en": "Benthos is a declarative data streaming service that solves a wide range of data engineering problems with simple, chained, stateless processing steps."
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use benthos",
      "reference": "https://github.com/benthosdev/benthos-asdf"
    },
    "/curl": {
      "cmd": "curl -Lsf https://sh.benthos.dev | bash",
      "reference": "https://github.com/benthosdev/benthos?tab=readme-ov-file#install"
    },
    "/build": {
      "cmd": "git clone git@github.com:benthosdev/benthos \\\n&& cd benthos \\\n&& make\n",
      "reference": "https://github.com/benthosdev/benthos?tab=readme-ov-file#build"
    },
    "darwin/brew": {
      "cmd": "brew install benthos",
      "reference": "https://github.com/benthosdev/benthos?tab=readme-ov-file#install"
    },
    "/lint": {
      "cmd": "curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b $(go env GOPATH)/bin",
      "reference": "https://github.com/benthosdev/benthos?tab=readme-ov-file#lint"
    }
  },
  "dsnap": {
    "brew": "benthos",
    "/go": "benthos"
  }
}
