{
  "lang": "go",
  "homepage": "https://buf.build",
  "desc": {
    "cn": "protobuf 的 CLI 工具",
    "en": "The buf CLI is a tool for working with Protocol Buffers"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use buf",
      "reference": "https://github.com/truepay/asdf-buf"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install buf",
      "reference": "https://scoop.sh/#/apps?q=buf"
    },
    "darwin/brew": {
      "cmd": "brew install bufbuild/buf/buf",
      "reference": "https://buf.build/docs/installation"
    },
    "/npm": {
      "cmd": "npm install @bufbuild/buf",
      "reference": "https://buf.build/docs/installation"
    }
  }
}
