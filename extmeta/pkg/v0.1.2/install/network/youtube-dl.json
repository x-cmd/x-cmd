{
  "lang": "Python",
  "homepage": "https://github.com/ytdl-org/youtube-dl",
  "desc": {
    "cn": "用于从 YouTube.com 和其他视频网站下载视频的命令行程序",
    "en": "Command-line program to download videos from YouTube.com and other video sites"
  },
  "rule": {
    "/curl": {
      "cmd": "sudo curl -L https://yt-dl.org/downloads/latest/youtube-dl -o /usr/local/bin/youtube-dl \\\n&& sudo chmod a+rx /usr/local/bin/youtube-dl\n",
      "reference": "https://github.com/ytdl-org/youtube-dl?tab=readme-ov-file#installation"
    },
    "/wget": {
      "cmd": "sudo wget https://yt-dl.org/downloads/latest/youtube-dl -O /usr/local/bin/youtube-dl \\\n&& sudo chmod a+rx /usr/local/bin/youtube-dl\n",
      "reference": "https://github.com/ytdl-org/youtube-dl?tab=readme-ov-file#installation"
    },
    "/pip": {
      "cmd": "sudo -H pip install --upgrade youtube-dl",
      "reference": "https://github.com/ytdl-org/youtube-dl?tab=readme-ov-file#installation",
      "dsnap": "youtube-dl"
    },
    "darwin/brew": {
      "cmd": "brew install youtube-dl",
      "reference": "https://github.com/ytdl-org/youtube-dl?tab=readme-ov-file#installation"
    },
    "darwin/port": {
      "cmd": "sudo port install youtube-dl",
      "reference": "https://github.com/ytdl-org/youtube-dl?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "/pip": "youtube-dl"
  }
}
