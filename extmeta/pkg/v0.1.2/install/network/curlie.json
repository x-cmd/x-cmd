{
  "lang": "Go",
  "homepage": "https://curlie.io/",
  "desc": {
    "cn": "Curlie 是 curl 的前端，它增加了 httpie 的易用性，而不影响功能和性能",
    "en": "Curlie is a frontend to curl that adds the ease of use of httpie, without compromising on features and performance"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install curlie",
      "reference": "https://curlie.io/#install"
    },
    "darwin/curl": {
      "cmd": "curl -sS https://webinstall.dev/curlie | bash",
      "reference": "https://curlie.io/#install"
    },
    "linux/curl": {
      "cmd": "curl -sS https://webinstall.dev/curlie | bash",
      "reference": "https://curlie.io/#install"
    },
    "win/curl": {
      "cmd": "curl.exe -A \"MS\" https://webinstall.dev/curlie | powershell",
      "reference": "https://curlie.io/#install"
    },
    "debian/eget": {
      "cmd": "eget rs/curlie -a deb --to=curlie.deb \\\n&& sudo dpkg -i curlie.deb\n",
      "reference": "https://curlie.io/#install"
    },
    "ubuntu/eget": {
      "cmd": "eget rs/curlie -a deb --to=curlie.deb \\\n&& sudo dpkg -i curlie.deb\n",
      "reference": "https://curlie.io/#install"
    },
    "darwin/port": {
      "cmd": "sudo port install curlie",
      "reference": "https://curlie.io/#install"
    },
    "/pkg": {
      "cmd": "pkg install curlie",
      "reference": "https://curlie.io/#install"
    },
    "/go": {
      "cmd": "go install github.com/rs/curlie@latest",
      "reference": "https://curlie.io/#install",
      "dsnap": "github.com/rs/curlie@latest"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install curlie",
      "reference": "https://curlie.io/#install"
    }
  },
  "dsnap": {
    "brew": "curlie",
    "/go": "github.com/rs/curlie@latest"
  }
}
