{
  "lang": "python",
  "homepage": "https://github.com/certbot/certbot",
  "desc": {
    "cn": "Certbot 是 EFF 的工具，用于从 Let's Encrypt 获取证书并（可选）在您的服务器上自动启用 HTTPS",
    "en": "Certbot is EFF's tool to obtain certs from Let's Encrypt and (optionally) auto-enable HTTPS on your server."
  },
  "rule": {
    "/pip3": {
      "cmd": "pip3 install certbot",
      "reference": "https://devicetests.com/install-certbot-ubuntu-20-04-ssl-certificate#:~:text=Install%20Certbot%20using%20pip.%20Run%20the%20following%20command%3A,install%20certbot%20This%20command%20installs%20Certbot%20using%20pip."
    },
    "darwin/brew": {
      "cmd": "brew install certbot",
      "reference": "https://formulae.brew.sh/formula/certbot#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install certbot",
      "reference": "https://command-not-found.com/certbot",
      "dsnap": "certbot"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install certbot",
      "reference": "https://command-not-found.com/certbot",
      "dsnap": "certbot"
    },
    "alpine/apk": {
      "cmd": "sudo apk add certbot",
      "reference": "https://command-not-found.com/certbot",
      "dsnap": "certbot"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S certbot",
      "reference": "https://command-not-found.com/certbot"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install certbot",
      "reference": "https://command-not-found.com/certbot"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install certbot",
      "reference": "https://command-not-found.com/certbot",
      "dsnap": "certbot"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install certbot",
      "reference": "https://command-not-found.com/certbot"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install EFF.Certbot",
      "reference": "https://winget.run/pkg/EFF/Certbot"
    }
  },
  "dsnap": {
    "brew": "certbot",
    "pacman": "certbot",
    "winget": "EFF.Certbot",
    "/pip": "certbot",
    "fedora/dnf": "certbot",
    "alpine/apk": "certbot",
    "ubuntu/apt": "certbot",
    "debian/apt": "certbot"
  }
}
