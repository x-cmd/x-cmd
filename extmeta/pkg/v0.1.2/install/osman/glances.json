{
  "lang": "Python",
  "homepage": "https://nicolargo.github.io/glances/",
  "desc": {
    "cn": "Glances 是一个开源系统跨平台监控工具",
    "en": "Glances is an open-source system cross-platform monitoring tool"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install glances",
      "reference": "https://github.com/nicolargo/glances?tab=readme-ov-file#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install glances",
      "reference": "https://github.com/nicolargo/glances?tab=readme-ov-file#macports"
    },
    "/pip": {
      "cmd": "pip install --user glances",
      "reference": "https://github.com/nicolargo/glances?tab=readme-ov-file#pypi-pip-the-standard-way"
    },
    "freebsd/pkg": {
      "cmd": "pkg install py39-glances",
      "reference": "https://github.com/nicolargo/glances?tab=readme-ov-file#freebsd"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "alpine/apt": {
      "cmd": "apk add glances",
      "reference": "https://command-not-found.com/glances"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S glances",
      "reference": "https://command-not-found.com/glances"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "mint/apt": {
      "cmd": "sudo apt-get install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install glances",
      "reference": "https://command-not-found.com/glances"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install python-Glances",
      "reference": "https://software.opensuse.org//download.html?project=openSUSE%3AFactory&package=python-Glances"
    }
  }
}
