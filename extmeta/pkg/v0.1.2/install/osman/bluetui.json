{
  "lang": "Rust",
  "homepage": "https://github.com/pythops/bluetui",
  "desc": {
    "cn": "用于在 Linux 上管理蓝牙的 TUI。",
    "en": "TUI for managing bluetooth on Linux."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install bluetui",
      "reference": "https://github.com/pythops/bluetui?tab=readme-ov-file#-cratesio"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bluetui",
      "reference": "https://github.com/pythops/bluetui?tab=readme-ov-file#-cratesio"
    },
    "arch/manjaro": {
      "cmd": "sudo pacman -S bluetui",
      "reference": "https://github.com/pythops/bluetui?tab=readme-ov-file#-cratesio"
    },
    "gentoo/": {
      "cmd": "\\ sudo eselect repository enable lamdness && \\ sudo emaint -r lamdness sync && \\ sudo emerge -av net-wireless/bluetui",
      "reference": "https://github.com/pythops/bluetui?tab=readme-ov-file#-gentoo"
    }
  }
}
