{
  "lang": "go",
  "desc": {
    "cn": "用于 shell 命令执行、可视化和警报的工具",
    "en": "A tool for shell commands execution, visualization and alerting"
  },
  "homepage": "https://github.com/sqshq/sampler",
  "rule": {
    "darwin/brew": {
      "cmd": "brew install sampler",
      "reference": "https://github.com/sqshq/sampler?tab=readme-ov-file#macos"
    },
    "darwin/curl": {
      "cmd": "sudo curl -Lo /usr/local/bin/sampler https://github.com/sqshq/sampler/releases/download/v1.1.0/sampler-1.1.0-darwin-amd64\nsudo chmod +x /usr/local/bin/sampler\n",
      "reference": "https://github.com/sqshq/sampler?tab=readme-ov-file#macos"
    },
    "darwin/port": {
      "cmd": "sudo port install sampler",
      "reference": "https://github.com/sqshq/sampler?tab=readme-ov-file#macos"
    },
    "linux/wget": {
      "cmd": "sudo wget https://github.com/sqshq/sampler/releases/download/v1.1.0/sampler-1.1.0-linux-amd64 -O /usr/local/bin/sampler\nsudo chmod +x /usr/local/bin/sampler\n",
      "reference": "https://github.com/sqshq/sampler?tab=readme-ov-file#linux"
    },
    "(win|wsl2)/choco": {
      "cmd": "choco install sampler",
      "reference": "https://github.com/sqshq/sampler?tab=readme-ov-file#windows-experimental"
    }
  },
  "dsnap": {
    "brew": "sampler",
    "curl": "sampler",
    "port": "sampler",
    "wget": "sampler",
    "choco": "sampler"
  }
}
