{
  "lang": "Python",
  "homepage": "https://github.com/nschloe/tiptop",
  "desc": {
    "cn": "类似 top 命令的命令行系统监控工具",
    "en": "A command-line system monitoring tool in the spirit of top."
  },
  "rule": {
    "/pip": {
      "cmd": "pip install tiptop",
      "reference": "https://github.com/nschloe/tiptop"
    },
    "/pixi": {
      "cmd": "x pixi global install tiptop",
      "reference": "https://github.com/nschloe/tiptop"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install tiptop",
      "reference": "https://github.com/nschloe/tiptop"
    }
  }
}
