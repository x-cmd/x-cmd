{
  "lang": "Python",
  "homepage": "https://github.com/XuehaiPan/nvitop",
  "desc": {
    "cn": "一个交互式的 NVIDIA-GPU 进程查看器及更多功能。",
    "en": "An interactive NVIDIA-GPU process viewer and beyond."
  },
  "rule": {
    "/pipx": {
      "cmd": "pipx install nvitop",
      "reference": "https://github.com/XuehaiPan/nvitop#installation"
    },
    "/pip": {
      "cmd": "pip3 install --upgrade nvitop",
      "reference": "https://github.com/XuehaiPan/nvitop#installation",
      "dsnap": "nvitop"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge nvitop",
      "reference": "https://github.com/XuehaiPan/nvitop#installation"
    }
  },
  "dsnap": {
    "/pip": "nvitop"
  }
}
