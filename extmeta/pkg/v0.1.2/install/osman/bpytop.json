{
  "lang": "python",
  "desc": {
    "cn": "Linux/OSX/FreeBSD 资源监视器",
    "en": "Linux/OSX/FreeBSD resource monitor"
  },
  "homepage": "https://github.com/aristocratos/bpytop",
  "rule": {
    "/pip3": {
      "cmd": "x pip3 install bpytop --upgrade",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "darwin/brew": {
      "cmd": "brew install bpytop\n",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "darwin/port": {
      "cmd": "port install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "debian/apt": {
      "cmd": "sudo apt install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "/dns": {
      "cmd": "sudo dnf install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av sys-process/bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "mageia/urpmi": {
      "cmd": "sudo urpmi bpytop\nsudo dnf install bpytop\n",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "/snap": {
      "cmd": "sudo snap install bpytop",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    },
    "/build": {
      "cmd": "git clone https://github.com/aristocratos/bpytop.git\ncd bpytop\nsudo make install\n",
      "reference": "https://github.com/aristocratos/bpytop#installation"
    }
  }
}
