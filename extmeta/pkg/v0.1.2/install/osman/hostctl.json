{
  "lang": "Go",
  "homepage": "https://guumaster.github.io/hostctl/",
  "desc": {
    "cn": "用于管理 /etc/hosts 的工具",
    "en": "Tools for managing /etc/hosts"
  },
  "rule": {
    "arch/yay": {
      "cmd": "sudo yay -Sy hostctl",
      "reference": "https://guumaster.github.io/hostctl/docs/installation/#arch-linux"
    },
    "/nix-env": {
      "cmd": "nix-env -iA nixpkgs.hostctl",
      "reference": "https://guumaster.github.io/hostctl/docs/installation/#nix"
    },
    "darwin/brew": {
      "cmd": "brew install guumaster/tap/hostctl",
      "reference": "https://guumaster.github.io/hostctl/docs/installation/#homebrew"
    },
    "/asdf": {
      "cmd": "x asdf use hostctl",
      "reference": "https://guumaster.github.io/hostctl/docs/installation/#asdf"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install hostctl",
      "reference": "https://guumaster.github.io/hostctl/docs/installation/#scoop"
    }
  },
  "dsnap": {
    "brew": "guumaster/tap/hostctl"
  }
}
