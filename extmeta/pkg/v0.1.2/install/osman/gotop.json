{
  "lang": "go",
  "homepage": "https://github.com/xxxserxxx/gotop",
  "desc": {
    "cn": "基于终端的图形界面监视器，用于在终端中显示系统资源的使用情况",
    "en": "Terminal based graphical interface monitor"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install gotop",
      "reference": "https://formulae.brew.sh/formula/gotop#default"
    },
    "arch/pacman": {
      "cmd": "sudo yay -S gotop-bin",
      "reference": "https://github.com/xxxserxxx/gotop#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install gotop",
      "reference": "https://github.com/cli/cli#scoop"
    },
    "gentoo/emerge": {
      "cmd": "sudo layman -a guru\n&& sudo emerge gotop\n",
      "reference": "https://github.com/cli/cli/blob/trunk/docs/install_linux.md#gentoo"
    },
    "nix/nixpkgs": {
      "cmd": "nix-shell -p gotop --run gotop",
      "reference": "https://github.com/cli/cli/blob/trunk/docs/install_linux.md#nixnixos"
    }
  },
  "dsnap": {
    "brew": "gotop"
  }
}
