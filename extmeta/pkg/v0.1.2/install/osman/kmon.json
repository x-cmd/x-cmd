{
  "lang": "Rust",
  "homepage": "https://github.com/orhun/kmon",
  "desc": {
    "cn": "Linux 内核管理器和活动监视器。",
    "en": "Linux Kernel Manager and Activity Monitor."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install kmon",
      "reference": "https://github.com/orhun/kmon#installation",
      "dsnap": "kmon"
    },
    "arch/pacman": {
      "cmd": "pacman -S kmon",
      "reference": "https://github.com/orhun/kmon#installation"
    },
    "arch/paru": {
      "cmd": "paru -S kmon-git",
      "reference": "https://github.com/orhun/kmon#installation"
    },
    "alpine/apk": {
      "cmd": "apk add kmon",
      "reference": "https://github.com/orhun/kmon#installation",
      "dsnap": "kmon"
    },
    "nix/nix-env": {
      "cmd": "nix-channel --add https://nixos.org/channels/nixos-unstable\n&& nix-channel --update nixos\n&& nix-env -iA nixos.kmon\n",
      "reference": "https://github.com/orhun/kmon#installation"
    }
  },
  "dsnap": {
    "/cargo": "kmon",
    "alpine/apk": "kmon"
  }
}
