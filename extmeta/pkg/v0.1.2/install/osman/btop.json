{
  "lang": "C++",
  "homepage": "https://github.com/aristocratos/btop",
  "desc": {
    "cn": "资源监视器显示处理器、内存、磁盘、网络和进程的使用情况和统计​​信息。",
    "en": "Resource monitor that shows usage and stats for processor, memory, disks, network and processes"
  },
  "rule": {
    "opensuse/zypper": {
      "cmd": "sudo zypper in btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf install epel-release && sudo dnf install btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    },
    "alma/dnf": {
      "cmd": "sudo dnf install epel-release && sudo dnf install btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    },
    "darwin/brew": {
      "cmd": "brew install btop",
      "reference": "https://github.com/aristocratos/btop?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "brew": "btop"
  }
}
