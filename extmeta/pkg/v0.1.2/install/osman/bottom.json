{
  "lang": "rust",
  "homepage": "https://github.com/ClementTsang/bottom",
  "desc": {
    "cn": "用于终端的可定制跨平台图形流程/系统监视器",
    "en": "A customizable cross-platform graphical process/system monitor for the terminal"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use bottom",
      "reference": "https://github.com/carbonteq/asdf-btm"
    },
    "/cargo": {
      "cmd": "cargo install bottom",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#cargo",
      "dsnap": "bottom"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bottom",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#arch-linux"
    },
    "debian/curl": {
      "cmd": "curl -LO https://github.com/ClementTsang/bottom/releases/download/0.9.6/bottom_0.9.6_amd64.deb\n&& sudo dpkg -i bottom_0.9.6_amd64.deb\n",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#debian--ubuntu"
    },
    "ubuntu/curl": {
      "cmd": "curl -LO https://github.com/ClementTsang/bottom/releases/download/0.9.6/bottom_0.9.6_amd64.deb\n&& sudo dpkg -i bottom_0.9.6_amd64.deb\n",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#debian--ubuntu"
    },
    "/snap": {
      "cmd": "sudo snap install bottom",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#snap"
    },
    "darwin/brew": {
      "cmd": "brew install bottom",
      "reference": "https://formulae.brew.sh/formula/bottom#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install bottom",
      "reference": "https://scoop.sh/#/apps?q=bottom"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install bottom",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#chocolatey"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Clement.bottom",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#winget"
    },
    "/dnf": {
      "cmd": "sudo dnf copr enable atim/bottom -y\n&& sudo dnf install bottom\n",
      "reference": "https://github.com/ClementTsang/bottom?tab=readme-ov-file#fedora--centos--almalinux--rocky-linux"
    }
  },
  "dsnap": {
    "/cargo": "bottom"
  }
}
