{
  "lang": "go",
  "homepage": "https://github.com/sachaos/viddy",
  "desc": {
    "cn": "watch 的现代化替代品",
    "en": "Modern watch command"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use viddy",
      "reference": "https://github.com/ryodocx/asdf-viddy"
    },
    "darwin/brew": {
      "cmd": "brew install viddy",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#mac"
    },
    "darwin/port": {
      "cmd": "sudo port install viddy",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#macports"
    },
    "/wget": {
      "cmd": "wget -O viddy.tar.gz https://github.com/sachaos/viddy/releases/download/v0.4.0/viddy_Linux_x86_64.tar.gz && tar xvf viddy.tar.gz && mv viddy /usr/local/bin",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras\n&& x scoop install extras/viddy\n",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#windows"
    },
    "/yay": {
      "cmd": "sudo yay -S viddy",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#archlinux--aur-"
    },
    "alpine/apk": {
      "cmd": "sudo apk add viddy",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#alpine-linux"
    },
    "/go": {
      "cmd": "go install github.com/sachaos/viddy@latest",
      "reference": "https://github.com/sachaos/viddy?tab=readme-ov-file#go",
      "dsnap": "github.com/sachaos/viddy@latest"
    }
  },
  "dsnap": {
    "/go": "github.com/sachaos/viddy@latest"
  }
}
