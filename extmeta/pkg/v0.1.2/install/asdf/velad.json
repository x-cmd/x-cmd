{
  "lang": "Go",
  "homepage": "https://github.com/kubevela/velad",
  "desc": {
    "cn": "VelaD 是一个轻量级部署工具，能帮助你快速搭建 KubeVela 环境",
    "en": "VelaD is lightweight deployment tool to set up KubeVela"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use velad",
      "reference": "https://github.com/pdemagny/asdf-velad?tab=readme-ov-file#install"
    },
    "linux/curl": {
      "cmd": "curl -fsSl https://static.kubevela.net/script/install-velad.sh | bash \\\n&& velad install\n",
      "reference": "https://github.com/kubevela/velad?tab=readme-ov-file#installation"
    },
    "darwin/curl": {
      "cmd": "curl -fsSl https://static.kubevela.net/script/install-velad.sh | bash \\\n&& velad install\n",
      "reference": "https://github.com/kubevela/velad?tab=readme-ov-file#installation"
    },
    "win/powershell": {
      "cmd": "powershell -Command \"iwr -useb https://static.kubevela.net/script/install-velad.ps1 | iex\" \\\n&& velad install\n",
      "reference": "https://github.com/kubevela/velad?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "/go": "velad"
  }
}
