{
  "lang": "Go",
  "homepage": "https://velero.io/",
  "desc": {
    "cn": "Velero 是安全备份和恢复，执行灾难恢复和迁移 Kubernetes 集群资源和持续量的开源工具",
    "en": "Velero is an open source tool to safely backup and restore, perform disaster recovery, and migrate Kubernetes cluster resources and persistent volumes"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install velero",
      "reference": "https://velero.io/docs/v1.13/basic-install/#install-the-cli"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install velero",
      "reference": "https://velero.io/docs/v1.13/basic-install/#install-the-cli"
    },
    "/asdf": {
      "cmd": "x asdf use velero",
      "reference": "https://github.com/looztra/asdf-velero?tab=readme-ov-file#install"
    }
  },
  "dsnap": {
    "brew": "velero"
  }
}
