{
  "lang": "Go",
  "homepage": "https://popeyecli.io/",
  "desc": {
    "cn": "Popeye 是一个实用程序，它扫描实时 Kubernetes 集群，并报告已部署资源和配置的潜在问题",
    "en": "Popeye is a utility that scans live Kubernetes cluster and reports potential issues with deployed resources and configurations"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install derailed/popeye/popeye",
      "reference": "https://popeyecli.io/#installation"
    },
    "/go": {
      "cmd": "go install github.com/derailed/popeye@latest",
      "reference": "https://popeyecli.io/#installation",
      "dsnap": "github.com/derailed/popeye@latest"
    },
    "/asdf": {
      "cmd": "x asdf use popeye",
      "reference": "https://github.com/nlamirault/asdf-popeye?tab=readme-ov-file#install"
    }
  },
  "dsnap": {
    "brew": "derailed/popeye/popeye",
    "/go": "github.com/derailed/popeye@latest"
  }
}
