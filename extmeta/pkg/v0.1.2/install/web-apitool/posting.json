{
  "lang": "Python",
  "homepage": "https://github.com/darrenburns/posting",
  "desc": {
    "cn": "Posting 是一个 HTTP 客户端，与 Postman 和 Insomnia 类似。",
    "en": "Posting is an HTTP client, not unlike Postman and Insomnia."
  },
  "rule": {
    "/curl": {
      "cmd": "curl -LsSf https://astral.sh/uv/install.sh | sh",
      "reference": "https://github.com/darrenburns/posting#installation"
    },
    "/uv": {
      "cmd": "uv tool install --python 3.13 posting",
      "reference": "https://github.com/darrenburns/posting#installation"
    },
    "/pipx": {
      "cmd": "pipx install posting",
      "reference": "https://github.com/darrenburns/posting#installation"
    }
  }
}
