{
  "lang": "go",
  "homepage": "https://podman.io/",
  "desc": {
    "en": "Podman is an open source container, pod, and container image management engine",
    "cn": "Podman 是一个开源容器、 pod 和容器映像管理引擎"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install podman",
      "reference": "https://formulae.brew.sh/formula/podman#default"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S podman",
      "reference": "https://podman.io/docs/installation"
    },
    "alpine/apk": {
      "cmd": "sudo apk add podman",
      "reference": "https://podman.io/docs/installation",
      "dsnap": "podman"
    },
    "centos/yum": {
      "cmd": "sudo yum -y install podman",
      "reference": "https://podman.io/docs/installation"
    },
    "debian/apt": {
      "cmd": "sudo apt-get -y install podman",
      "reference": "https://podman.io/docs/installation",
      "dsnap": "podman"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf -y install podman",
      "reference": "https://podman.io/docs/installation",
      "dsnap": "podman"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge app-containers/podman",
      "reference": "https://podman.io/docs/installation"
    },
    "openembedded/bitbake": {
      "cmd": "sudo bitbake podman",
      "reference": "https://podman.io/docs/installation"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install podman",
      "reference": "https://podman.io/docs/installation"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get -y install podman",
      "reference": "https://podman.io/docs/installation"
    },
    "rhel7/yum": {
      "cmd": "sudo yum module enable -y container-tools:rhel8\n&& sudo yum module install -y container-tools:rhel8\n",
      "reference": "https://podman.io/docs/installation"
    },
    "rhel8/yum": {
      "cmd": "sudo subscription-manager repos --enable=rhel-7-server-extras-rpms\n&& sudo yum -y install podman\n",
      "reference": "https://podman.io/docs/installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get update\n&& sudo apt-get -y install podman\n",
      "reference": "https://podman.io/docs/installation",
      "dsnap": "podman"
    }
  },
  "dsnap": {
    "brew": "podman",
    "yum": "podman",
    "zypper": "podman",
    "pacman": "podman",
    "emerge": "podman",
    "fedora/dnf": "podman",
    "alpine/apk": "podman",
    "ubuntu/apt": "podman",
    "debian/apt": "podman"
  }
}
