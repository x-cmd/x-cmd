{
  "lang": "Haskell",
  "homepage": "https://github.com/hadolint/hadolint",
  "desc": {
    "cn": "Dockerfile linter，能分析 Dockerfile 并给出建议（能基于 shellcheck 对 RUN 指令内的 bash 代码进行检查）",
    "en": "Dockerfile linter, which can analyze Dockerfile and give suggestions (can check the bash code in the RUN instruction based on shellcheck)"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use hadolint",
      "reference": "https://github.com/devlincashman/asdf-hadolint"
    },
    "darwin/brew": {
      "cmd": "brew install hadolint",
      "reference": "https://formulae.brew.sh/formula/hadolint#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install hadolint",
      "reference": "https://scoop.sh/#/apps?q=hadolint"
    }
  },
  "dsnap": {
    "brew": "hadolint"
  }
}
