{
  "lang": "C",
  "homepage": "https://wiki.winehq.org/",
  "desc": {
    "cn": "Wine 是一个允许运行 MicrosoftWindows 程序的程序(包括 DOS、 Windows 3.x、 Win32和 Win64可执行文件)",
    "en": "Wine is a program which allows running Microsoft Windows programs(including DOS, Windows 3.x, Win32, and Win64 executables) on Unix"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install --cask wine-stable",
      "reference": "https://formulae.brew.sh/cask/wine-stable#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install wine",
      "reference": "https://command-not-found.com/wine"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install wine",
      "reference": "https://command-not-found.com/wine"
    },
    "alpine/apk": {
      "cmd": "sudo apk add wine",
      "reference": "https://command-not-found.com/wine"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S wine wine-mono wine-gecko",
      "reference": "https://wine.htmlvalidator.com/install-wine-on-arch-linux.html"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install wine",
      "reference": "https://command-not-found.com/wine"
    },
    "centos/yum": {
      "cmd": "sudo yum install epel-release && yum install wine",
      "reference": "https://www.cyberithub.com/how-to-install-wine-on-centos-7-using-8-easy-steps/"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install wine",
      "reference": "https://command-not-found.com/wine"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install wine",
      "reference": "https://command-not-found.com/wine"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge --ask virtual/wine",
      "reference": "https://wiki.gentoo.org/wiki/Wine"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install wine",
      "reference": "https://www.sysnettechsolutions.com/en/install-wine-opensuse/"
    },
    "mageia/dnf": {
      "cmd": "sudo dnf install winehq-stable",
      "reference": "https://wiki.winehq.org/Mageia"
    }
  }
}
