{
  "lang": "go",
  "homepage": "https://github.com/abiosoft/colima",
  "desc": {
    "cn": "安装最少的 macOS (和 Linux)上的容器运行时",
    "en": "Container runtimes on macOS (and Linux) with minimal setup"
  },
  "rule": {
    "darwin/port": {
      "cmd": "sudo port install colima",
      "reference": "https://github.com/abiosoft/colima?tab=readme-ov-file#installation"
    },
    "darwin/brew": {
      "cmd": "brew install colima",
      "reference": "https://github.com/abiosoft/colima?tab=readme-ov-file#installation"
    },
    "/nixpkgs": {
      "cmd": "nix-env -iA nixpkgs.colima",
      "reference": "https://github.com/abiosoft/colima?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "brew": "colima"
  }
}
