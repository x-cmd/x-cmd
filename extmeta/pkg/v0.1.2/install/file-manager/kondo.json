{
  "lang": "Rust",
  "homepage": "https://github.com/tbillington/kondo",
  "desc": {
    "cn": "用于从项目中清除 node_modules、target、build 以及相关依赖项的命令行工具。",
    "en": "A command line tool to clean node_modules, target, build, and friends from your projects."
  },
  "rule": {
    "arch/pacman": {
      "cmd": "pacman -S kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "alpine/apk": {
      "cmd": "apk add kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "/nix-env": {
      "cmd": "nix-env -iA kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "darwin/port": {
      "cmd": "sudo port install kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "/brew": {
      "cmd": "brew install kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    },
    "/eget": {
      "cmd": "eget tbillington/kondo",
      "reference": "https://github.com/tbillington/kondo#installation"
    }
  }
}
