{
  "lang": "go",
  "desc": {
    "cn": "ls 命令替代品",
    "en": "A modern replacement for ls"
  },
  "homepage": "https://github.com/Equationzhao/g",
  "rule": {
    "arch/yay": {
      "cmd": "yay -S g-ls",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#arch-linux-aur"
    },
    "darwin/brew": {
      "cmd": "brew install g-ls",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#homebrew"
    },
    "(win|wsl2)/scoop": {
      "cmd": "scoop install https://raw.githubusercontent.com/Equationzhao/g/master/scoop/g.json",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#windows-scoop"
    },
    "/curl": {
      "cmd": "bash -c \"$(curl -fsSLk https://raw.githubusercontent.com/Equationzhao/g/master/script/install.sh)\"",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#install-script"
    },
    "/dpkg": {
      "cmd": "sudo dpkg -i g_$version_$arch.deb",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#deb"
    },
    "/go": {
      "cmd": "go install -ldflags=\"-s -w\"  github.com/Equationzhao/g@latest",
      "reference": "https://github.com/Equationzhao/g?tab=readme-ov-file#from-source"
    }
  }
}
