{
  "lang": "rust",
  "homepage": "https://the.exa.website/",
  "desc": {
    "cn": "`ls` 命令的现代化替代品，更具特色且更为用户友好",
    "en": "A modern alternative to the `ls` command, More distinctive and user-friendly"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use exa",
      "reference": "https://github.com/nyrst/asdf-exa"
    },
    "debian/apt": {
      "cmd": "sudo apt install exa",
      "reference": "https://the.exa.website/",
      "dsnap": "exa"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install exa",
      "reference": "https://the.exa.website/",
      "dsnap": "exa"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S exa",
      "reference": "https://the.exa.website/"
    },
    "kali/apt": {
      "cmd": "sudo apt install exa",
      "reference": "https://the.exa.website/"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install exa",
      "reference": "https://the.exa.website/",
      "dsnap": "exa"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install exa",
      "reference": "https://the.exa.website/"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install exa",
      "reference": "https://the.exa.website/"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge sys-apps/exa",
      "reference": "https://the.exa.website/"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i exa",
      "reference": "https://the.exa.website/"
    }
  },
  "dsnap": {
    "pacman": "exa",
    "zypper": "exa",
    "emerge": "sys-apps/exa",
    "nix": "exa",
    "fedora/dnf": "exa",
    "alpine/apk": "exa",
    "ubuntu/apt": "exa",
    "debian/apt": "exa"
  }
}
