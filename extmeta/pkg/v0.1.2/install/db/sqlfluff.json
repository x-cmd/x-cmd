{
  "lang": "Python",
  "homepage": "https://github.com/sqlfluff/sqlfluff",
  "desc": {
    "cn": "SQL linter 和格式化工具，支持多种 SQL ，如  MySQL、Oracle 等",
    "en": "A modular SQL linter and auto-formatter with support for multiple dialects and templated code"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install sqlfluff",
      "reference": "https://github.com/sqlfluff/sqlfluff#getting-started",
      "dsnap": "sqlfluff"
    },
    "darwin/brew": {
      "cmd": "brew install sqlfluff",
      "reference": "https://formulae.brew.sh/formula/sqlfluff#default"
    }
  },
  "dsnap": {
    "brew": "sqlfluff",
    "/pip": "sqlfluff"
  }
}
