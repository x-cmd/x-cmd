{
  "lang": "C++",
  "homepage": "https://github.com/daipeihust/im-select",
  "desc": {
    "cn": "一个命令行工具，用于在 macOS 上切换输入法",
    "en": "A command-line tool to switch input method on macOS"
  },
  "rule": {
    "darwin/curl": {
      "cmd": "curl -Ls https://raw.githubusercontent.com/daipeihust/im-select/master/install_mac.sh | sh",
      "reference": "https://github.com/daipeihust/im-select?tab=readme-ov-file"
    },
    "darwin/brew": {
      "cmd": "brew tap daipeihust/tap\nbrew install im-select\n",
      "reference": "https://github.com/daipeihust/im-select?tab=readme-ov-file#homebrew"
    }
  },
  "dsnap": {
    "brew": "im-select"
  }
}
