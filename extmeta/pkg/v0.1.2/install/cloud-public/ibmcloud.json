{
  "lang": "go",
  "homepage": "https://github.com/IBM-Cloud/ibm-cloud-cli-release",
  "desc": {
    "cn": "IBM Cloud 的命令行客户端",
    "en": "This is the command line client for IBM Cloud"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use ibmcloud",
      "reference": "https://github.com/triangletodd/asdf-ibmcloud"
    },
    "darwin/curl": {
      "cmd": "curl -fsSL https://clis.cloud.ibm.com/install/osx | sh",
      "reference": "https://cloud.ibm.com/docs/cli?topic=cli-install-ibmcloud-cli#shell_install"
    },
    "linux/curl": {
      "cmd": "curl -fsSL https://clis.cloud.ibm.com/install/osx | sh",
      "reference": "https://cloud.ibm.com/docs/cli?topic=cli-install-ibmcloud-cli#shell_install"
    },
    "win/powershell": {
      "cmd": "x pwsh iex (New-Object Net.WebClient).DownloadString('https://clis.cloud.ibm.com/install/powershell')",
      "reference": "https://cloud.ibm.com/docs/cli?topic=cli-install-ibmcloud-cli#shell_install"
    }
  },
  "dsnap": {
    "/go": "ibmcloud"
  }
}
