{
  "lang": "Python",
  "homepage": "https://github.com/Azure/azure-cli",
  "desc": {
    "cn": "Azure 命令行接口，可连接到 Azure 并对 Azure 资源执行管理命令",
    "en": "The Azure Command-Line Interface to connect to Azure and execute administrative commands on Azure resources"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use azure-cli",
      "reference": "https://github.com/EcoMind/asdf-azure-cli"
    },
    "darwin/brew": {
      "cmd": "brew install azure-cli",
      "reference": "https://learn.microsoft.com/en-us/cli/azure/install-azure-cli-macos"
    },
    "/curl": {
      "cmd": "curl -sL https://aka.ms/InstallAzureCLIDeb | sudo bash",
      "reference": "https://learn.microsoft.com/en-us/cli/azure/install-azure-cli-linux?pivots=apt#option-1-install-with-one-command"
    },
    "/pip": {
      "cmd": "pip install azure-cli",
      "reference": "https://pypi.org/project/azure-cli/"
    }
  }
}
