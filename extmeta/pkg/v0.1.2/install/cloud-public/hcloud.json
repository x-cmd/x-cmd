{
  "lang": "go",
  "homepage": "https://github.com/hetznercloud/cli",
  "desc": {
    "cn": "hcloud 是用于与 Hetzner Cloud 交互的命令行工具。",
    "en": "hcloud is a command-line interface for interacting with Hetzner Cloud."
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use hcloud",
      "reference": "https://github.com/chessmango/asdf-hcloud"
    },
    "darwin/brew": {
      "cmd": "brew install hcloud",
      "reference": "https://github.com/hetznercloud/cli?tab=readme-ov-file#installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install hcloud-cli",
      "reference": "https://packages.ubuntu.com/source/focal/hcloud-cli"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install hcloud",
      "reference": "https://scoop.sh/#/apps?q=hcloud"
    }
  },
  "dsnap": {
    "/go": "hcloud"
  }
}
