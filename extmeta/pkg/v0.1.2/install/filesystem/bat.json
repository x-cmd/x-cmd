{
  "homepage": "https://github.com/sharkdp/bat",
  "desc": {
    "cn": "`cat` 命令的克隆，带有 git 集成，支持语法高亮显示",
    "en": "A `cat` clone with git integration and syntax highlighting support"
  },
  "lang": "go",
  "rule": {
    "/asdf": {
      "cmd": "x asdf use bat",
      "reference": "https://gitlab.com/wt0f/asdf-bat"
    },
    "darwin/brew": {
      "cmd": "brew install bat",
      "reference": "https://formulae.brew.sh/formula/bat#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install bacula-console-qt",
      "reference": "https://command-not-found.com/bat"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install bacula-console-qt",
      "reference": "https://command-not-found.com/bat"
    },
    "alpine/apk": {
      "cmd": "sudo apk add bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S bat",
      "reference": "https://command-not-found.com/bat"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install bacula-console-qt",
      "reference": "https://command-not-found.com/bat"
    },
    "centos/yum": {
      "cmd": "sudo yum install bacula-console-bat",
      "reference": "https://command-not-found.com/bat"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install bat",
      "reference": "https://command-not-found.com/bat"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install bacula-console-qt",
      "reference": "https://command-not-found.com/bat"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "funtoo/emerge": {
      "cmd": "sudo emerge sys-apps/bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge sys-apps/bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install -S bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "freebsd/pkg": {
      "cmd": "pkg install bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install sharkdp.bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install bat",
      "reference": "https://github.com/sharkdp/bat"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install bat",
      "reference": "https://github.com/sharkdp/bat"
    }
  }
}
