{
  "lang": "rust",
  "desc": {
    "cn": "一个功能齐全的 Firefox Send 客户端，可以通过安全、私密和加密的链接，从命令行轻松、安全地共享文件和目录",
    "en": "A feature-rich Firefox Send client that allows easy, secure, and encrypted sharing of files and directories from the command line via secure, private links"
  },
  "homepage": "https://github.com/timvisee/ffsend",
  "rule": {
    "/snap": {
      "cmd": "snap install ffsend",
      "reference": "https://github.com/timvisee/ffsend?tab=readme-ov-file#linux-snap-package"
    },
    "darwin/brew": {
      "cmd": "brew install ffsend",
      "reference": "https://formulae.brew.sh/formula/ffsend#default"
    },
    "darwin/port": {
      "cmd": "sudo port install ffsend",
      "reference": "https://github.com/timvisee/ffsend?tab=readme-ov-file#macos-macports"
    },
    "(win|wsl2)/choco": {
      "cmd": "x scoop install ffsend",
      "reference": "https://github.com/timvisee/ffsend?tab=readme-ov-file#windows-scoop-package"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ffsend",
      "reference": "https://github.com/timvisee/ffsend?tab=readme-ov-file#linux-fedora-package",
      "dsnap": "ffsend"
    }
  },
  "dsnap": {
    "brew": "ffsend",
    "fedora/dnf": "ffsend"
  }
}
