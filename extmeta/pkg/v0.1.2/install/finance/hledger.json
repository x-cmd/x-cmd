{
  "lang": "Haskell",
  "homepage": "https://hledger.org/",
  "desc": {
    "cn": "纯文本记账工具，提供 CLI、TUI 和 Web 界面",
    "en": "A plain text accounting tool that provides CLI, TUI, and web interfaces."
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install hledger",
      "reference": "https://hledger.org/install.html#homebrew-linux-mac-wsl"
    },
    "linux/brew": {
      "cmd": "brew install hledger",
      "reference": "https://hledger.org/install.html#homebrew-linux-mac-wsl"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install hledger",
      "reference": "https://hledger.org/install.html#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install hledger -y",
      "reference": "https://hledger.org/install.html#windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install simonmichael.hledger",
      "reference": "https://hledger.org/install.html#windows"
    },
    "alpine/apk": {
      "cmd": "doas apk add hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux",
      "dsnap": "hledger"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -Sy hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux"
    },
    "debian/apt": {
      "cmd": "sudo apt install hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux",
      "dsnap": "hledger"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install hledger",
      "reference": "https://hledger.org/install.html#linux",
      "dsnap": "hledger"
    },
    "gentoo/emerge": {
      "cmd": "sudo layman -a haskell && sudo emerge hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux",
      "dsnap": "hledger"
    },
    "void/xbps": {
      "cmd": "xbps-install -S hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#linux"
    },
    "freebad/pkg": {
      "cmd": "pkg install hs-hledger hs-hledger-ui hs-hledger-web",
      "reference": "https://hledger.org/install.html#bsd"
    },
    "openbad/pkg_add": {
      "cmd": "pkg_add hledger",
      "reference": "https://hledger.org/install.html#bsd"
    },
    "linux/nix-shell": {
      "cmd": "nix-shell -p hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#nix-linux-mac"
    },
    "darwin/nix-shell": {
      "cmd": "nix-shell -p hledger hledger-ui hledger-web",
      "reference": "https://hledger.org/install.html#nix-linux-mac"
    }
  },
  "dsnap": {
    "brew": "hledger",
    "fedora/dnf": "hledger",
    "alpine/apk": "hledger",
    "ubuntu/apt": "hledger",
    "debian/apt": "hledger"
  }
}
