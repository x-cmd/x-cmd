{
  "lang": "C",
  "homepage": "https://nano-editor.org/",
  "desc": {
    "cn": "Nano 是一个小而简单的文本编辑器，用于终端",
    "en": "Nano is a small and simple text editor for use on the terminal"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install nano",
      "reference": "https://formulae.brew.sh/formula/nano#default"
    },
    "darwin/port": {
      "cmd": "sudo port install nano",
      "reference": "https://ports.macports.org/port/nano/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add main && x scoop install main/nano",
      "reference": "https://scoop.sh/#/apps?q=nano"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install nano",
      "reference": "https://community.chocolatey.org/packages/nano"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install GNU.Nano",
      "reference": "https://winget.run/pkg/GNU/Nano"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install nano",
      "reference": "https://command-not-found.com/nano"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install nano",
      "reference": "https://command-not-found.com/nano"
    },
    "alpine/apk": {
      "cmd": "sudo apk add nano",
      "reference": "https://command-not-found.com/nano"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S nano",
      "reference": "https://command-not-found.com/nano"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install nano",
      "reference": "https://command-not-found.com/nano"
    },
    "centos/yum": {
      "cmd": "sudo yum install nano",
      "reference": "https://command-not-found.com/nano"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install nano",
      "reference": "https://command-not-found.com/nano"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install nano",
      "reference": "https://command-not-found.com/nano"
    }
  }
}
