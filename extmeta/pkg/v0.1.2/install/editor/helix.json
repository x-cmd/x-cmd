{
  "lang": "Rust",
  "homepage": "https://helix-editor.com",
  "desc": {
    "cn": "一款后现代的多模态文本编辑器，支持多窗口编辑",
    "en": "A post-modern multimodal text editor that supports multi window editing"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install helix",
      "reference": "https://docs.helix-editor.com/install.html#macos"
    },
    "debian/apt": {
      "cmd": "sudo add-apt-repository ppa:maveonair/helix-editor\n&& sudo apt update\n&& sudo apt install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#ubuntu",
      "dsnap": "helix"
    },
    "ubuntu/apt": {
      "cmd": "sudo add-apt-repository ppa:maveonair/helix-editor\n&& sudo apt update\n&& sudo apt install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#ubuntu",
      "dsnap": "helix"
    },
    "alpine/apk": {
      "cmd": "sudo apk add github-cli",
      "reference": "https://github.com/cli/cli/blob/trunk/docs/install_linux.md#alpine-linux",
      "dsnap": "github-cli"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S helix",
      "reference": "https://docs.helix-editor.com/install.html#arch-linux-extra"
    },
    "kali/apt": {
      "cmd": "sudo add-apt-repository ppa:maveonair/helix-editor\n&& sudo apt update\n&& sudo apt install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#ubuntu"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable varlad/helix\n&& sudo dnf install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#fedorarhel",
      "dsnap": "helix"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf copr enable varlad/helix\n&& sudo dnf install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#fedorarhel"
    },
    "raspbian/apt": {
      "cmd": "sudo add-apt-repository ppa:maveonair/helix-editor\n&& sudo apt update\n&& sudo apt install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#ubuntu"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Helix.Helix",
      "reference": "https://docs.helix-editor.com/install.html#winget"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install helix",
      "reference": "https://docs.helix-editor.com/install.html#scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install helix",
      "reference": "https://docs.helix-editor.com/install.html#chocolatey"
    },
    "nix/cachix": {
      "cmd": "cachix use helix",
      "reference": "https://docs.helix-editor.com/install.html#nixos"
    },
    "/snap": {
      "cmd": "snap install --classic helix",
      "reference": "https://docs.helix-editor.com/install.html#snap"
    },
    "win/msys2": {
      "cmd": "sudo pacman -S mingw-w64-ucrt-x86_64-helix",
      "reference": "https://docs.helix-editor.com/install.html#msys2"
    }
  },
  "dsnap": {
    "brew": "helix",
    "pacman": "helix",
    "snap": "helix",
    "winget": "Helix.Helix",
    "scoop": "helix",
    "choco": "helix",
    "msys2": "mingw-w64-ucrt-x86_64-helix",
    "fedora/dnf": "helix",
    "alpine/apk": "github-cli",
    "ubuntu/apt": "helix",
    "debian/apt": "helix"
  }
}
