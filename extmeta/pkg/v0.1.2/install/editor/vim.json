{
  "lang": "C",
  "homepage": "https://www.vim.org/",
  "desc": {
    "cn": "Vim 是旧的 UNIX 编辑器 Vi 的一个大大改进的版本",
    "en": "Vim is a greatly improved version of the good old UNIX editor Vi"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use vim",
      "reference": "https://github.com/tsuyoshicho/asdf-vim"
    },
    "darwin/brew": {
      "cmd": "brew install vim",
      "reference": "https://formulae.brew.sh/formula/vim#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "alpine/apk": {
      "cmd": "apk add vim",
      "reference": "https://command-not-found.com/vim"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S vim",
      "reference": "https://command-not-found.com/vim"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "centos/yum": {
      "cmd": "sudo yum install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install vim",
      "reference": "https://command-not-found.com/vim"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge --ask app-editors/vim",
      "reference": "https://wiki.gentoo.org/wiki/Vim"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install vim",
      "reference": "https://www.cyberciti.biz/faq/how-to-install-vim-on-opensuse-suse-linux-using-zypper/"
    },
    "freebsd/pkg": {
      "cmd": "pkg install vim",
      "reference": "https://www.cyberciti.biz/faq/howto-install-vim-text-editor-under-freebsd/"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add vim",
      "reference": "https://rodolfo.io/openbsd/vim/2015/02/20/install-vim-openbsd.html"
    }
  }
}
