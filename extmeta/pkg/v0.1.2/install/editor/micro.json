{
  "lang": "go",
  "homepage": "https://github.com/zyedidia/micro",
  "desc": {
    "cn": "一款直观且现代化的基于终端的文本编辑器",
    "en": "A modern and intuitive terminal-based text editor"
  },
  "rule": {
    "/curl": {
      "cmd": "curl https://getmic.ro | bash",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "darwin/brew": {
      "cmd": "brew install micro",
      "reference": "https://formulae.brew.sh/formula/micro#default"
    },
    "/snap": {
      "cmd": "snap install micro --classic",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install micro",
      "reference": "https://github.com/zyedidia/micro#installation",
      "dsnap": "micro"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install micro",
      "reference": "https://github.com/zyedidia/micro#installation",
      "dsnap": "micro"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install micro",
      "reference": "https://github.com/zyedidia/micro#installation",
      "dsnap": "micro"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge app-editors/micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install micro-editor",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "solus/eopkg": {
      "cmd": "sudo eopkg install micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "pacstall/pacstall": {
      "cmd": "sudo pacstall -I micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "openbsd/pkg_add": {
      "cmd": "pkd_add -v micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    },
    "netbsd/pkg": {
      "cmd": "pkg_add micro",
      "reference": "https://github.com/zyedidia/micro#installation"
    }
  },
  "dsnap": {
    "brew": "micro",
    "snap": "micro",
    "fedora/dnf": "micro",
    "ubuntu/apt": "micro",
    "debian/apt": "micro"
  }
}
