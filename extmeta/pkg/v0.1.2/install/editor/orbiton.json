{
  "lang": "Go",
  "homepage": "https://github.com/xyproto/orbiton",
  "desc": {
    "en": "Orbiton is a text editor and a simple IDE",
    "cn": "Orbiton 是一款文本编辑器和简易的集成开发环境（IDE）。"
  },
  "rule": {
    "arch/pacman": {
      "cmd": "pacman -S orbiton",
      "reference": "https://github.com/xyproto/orbiton?tab=readme-ov-file#packaging-status"
    },
    "darwin/brew": {
      "cmd": "brew install orbiton",
      "reference": "https://github.com/xyproto/orbiton?tab=readme-ov-file#packaging-status"
    },
    "/go": {
      "cmd": "go install github.com/xyproto/orbiton/v2@latest && mv -i ~/go/bin/orbiton ~/go/bin/o",
      "reference": "https://github.com/xyproto/orbiton?tab=readme-ov-file#quick-start"
    }
  }
}
