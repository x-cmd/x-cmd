{
  "lang": "go",
  "homepage": "https://github.com/noborus/ov",
  "desc": {
    "cn": "功能丰富的终端文本查看器",
    "en": "Feature-rich terminal text viewer"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -L -O https://github.com/noborus/ov/releases/download/v0.32.1/ov_0.32.1_linux_amd64.zip\nunzip ov_0.32.1_linux_amd64.zip\nsudo install ov /usr/local/bin\n",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#28-binary"
    },
    "/dpkg": {
      "cmd": "curl -L -O https://github.com/noborus/ov/releases/download/v0.32.1/ov_0.32.1-1_amd64.deb\nsudo dpkg -i ov_0.32.1-1_amd64.deb\n",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#21-deb-package"
    },
    "/rpm": {
      "cmd": "sudo rpm -ivh https://github.com/noborus/ov/releases/download/v0.32.1/ov_0.32.1-1_amd64.rpm",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#22-rpm-package"
    },
    "darwin/brew": {
      "cmd": "brew install noborus/tap/ov",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#24-homebrewmacos-or-linux"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ov",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#26-arch-linux"
    },
    "/nixpkgs": {
      "cmd": "nix-env -iA nixpkgs.ov",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#27-nix-nixos-linux-or-macos"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install ov",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#23-macports-macos"
    },
    "freebsd/pkg": {
      "cmd": "pkg install ov",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#25-pkg-freebsd"
    },
    "/go": {
      "cmd": "go install github.com/noborus/ov@latest",
      "reference": "https://github.com/noborus/ov?tab=readme-ov-file#29-go-install",
      "dsnap": "github.com/noborus/ov@latest"
    }
  },
  "dsnap": {
    "/go": "github.com/noborus/ov@latest"
  }
}
