{
  "lang": "Go",
  "homepage": "https://litestream.io/",
  "desc": {
    "cn": "Litestream 是 SQLite 的独立灾难恢复工具",
    "en": "Litestream is a standalone disaster recovery tool for SQLite"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install benbjohnson/litestream/litestream",
      "reference": "https://litestream.io/install/mac/"
    },
    "debian/wget": {
      "cmd": "wget https://github.com/benbjohnson/litestream/releases/download/v0.3.13/litestream-v0.3.13-linux-amd64.deb \\\n&& sudo dpkg -i litestream-v0.3.13-linux-amd64.deb\n",
      "reference": "https://litestream.io/install/debian/"
    },
    "/go": {
      "cmd": "go install ./cmd/litestream",
      "reference": "https://litestream.io/install/source/",
      "dsnap": "litestream"
    }
  },
  "dsnap": {
    "/go": "litestream"
  }
}
