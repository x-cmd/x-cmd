{
  "lang": "python",
  "homepage": "https://github.com/dbcli/litecli",
  "desc": {
    "cn": "用于 SQLite 数据库的 CLI，具有自动完成和语法突出显示功能",
    "en": "CLI for SQLite Databases with auto-completion and syntax highlighting"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install -U litecli",
      "reference": "https://github.com/dbcli/litecli#installation",
      "dsnap": "litecli"
    },
    "darwin/brew": {
      "cmd": "brew install litecli",
      "reference": "https://formulae.brew.sh/formula/litecli#default"
    },
    "arch/yay": {
      "cmd": "sudo yay -S litecli",
      "reference": "https://github.com/dbcli/litecli#installation"
    }
  },
  "dsnap": {
    "brew": "litecli",
    "yay": "litecli",
    "/pip": "litecli"
  }
}
