{
  "lang": "go",
  "homepage": "https://github.com/restic/restic",
  "desc": {
    "cn": "Restic 是一个快速，高效且安全的备份程序",
    "en": "Restic is a backup program that is fast, efficient and secure"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use restic",
      "reference": "https://github.com/xataz/asdf-restic"
    },
    "alpine/apk": {
      "cmd": "sudo apk add restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#alpine-linux",
      "dsnap": "restic"
    },
    "darwin/brew": {
      "cmd": "brew install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#macos"
    },
    "darwin/port": {
      "cmd": "sudo port install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#macos"
    },
    "/go": {
      "cmd": "git clone https://github.com/restic/restic\ncd restic\ngo run build.go\n",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#from-source",
      "dsnap": "restic"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#debian",
      "dsnap": "restic"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#debian",
      "dsnap": "restic"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#arch-linux"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#debian"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#fedora",
      "dsnap": "restic"
    },
    "centos/dnf": {
      "cmd": "sudo dnf install epel-release\n&& sudo dnf install restic\n",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#rhel-centos"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf install epel-release\n&& sudo dnf install restic\n",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#rhel-centos"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#debian"
    },
    "nix/": {
      "cmd": "sudo nix-env --install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#nix-nixos"
    },
    "openbsd/pkg_add": {
      "cmd": "sudo pkg_add restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#openbsd"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#freebsd"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#opensuse"
    },
    "solus/eopkg": {
      "cmd": "sudo eopkg install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#solus"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install restic",
      "reference": "https://restic.readthedocs.io/en/stable/020_installation.html#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install restic",
      "reference": "https://community.chocolatey.org/packages/restic"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install restic.restic",
      "reference": "https://winget.run/pkg/restic/restic"
    }
  },
  "dsnap": {
    "brew": "restic",
    "pacman": "restic",
    "/go": "restic",
    "fedora/dnf": "restic",
    "alpine/apk": "restic",
    "ubuntu/apt": "restic",
    "debian/apt": "restic"
  }
}
