{
  "lang": "python",
  "homepage": "https://www.borgbackup.org/",
  "desc": {
    "cn": "BorgBackup (简称: Borg)是一个去重复的备份程序。它可以选择支持压缩和认证加密",
    "en": "BorgBackup (short: Borg) is a deduplicating backup program. Optionally, it supports compression and authenticated encryption"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use borg",
      "reference": "https://github.com/lwiechec/asdf-borg"
    },
    "/pip": {
      "cmd": "pip install borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#using-pip",
      "dsnap": "borgbackup"
    },
    "darwin/brew": {
      "cmd": "brew install borgbackup",
      "reference": "https://formulae.brew.sh/formula/borgbackup#default"
    },
    "debian/apt": {
      "cmd": "sudo apt install borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package",
      "dsnap": "borgbackup"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package",
      "dsnap": "borgbackup"
    },
    "alpine/apk": {
      "cmd": "sudo apk add borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package",
      "dsnap": "borgbackup"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S borg",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install borgbackup",
      "reference": "https://command-not-found.com/borg"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package",
      "dsnap": "borgbackup"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "guixos/guix": {
      "cmd": "guix package --install borg",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "freebsd/ports": {
      "cmd": "cd /usr/ports/archivers/py-borgbackup && make install clean",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "mageia/urpmi": {
      "cmd": "sudo urpmi borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "netbsd/pkg_add": {
      "cmd": "pkg_add py-borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "openindiana/pkg": {
      "cmd": "pkg install borg",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper in borgbackup",
      "reference": "https://borgbackup.readthedocs.io/en/stable/installation.html#distribution-package"
    }
  },
  "dsnap": {
    "brew": "borgbackup",
    "pacman": "borg",
    "/pip": "borgbackup",
    "fedora/dnf": "borgbackup",
    "alpine/apk": "borgbackup",
    "ubuntu/apt": "borgbackup",
    "debian/apt": "borgbackup"
  }
}
