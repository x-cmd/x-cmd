{
  "lang": "python",
  "homepage": "https://github.com/nvbn/thefuck",
  "desc": {
    "cn": "终端命令纠错工具",
    "en": "Terminal command debugging tool"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install thefuck",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "/pip": {
      "cmd": "pip install thefuck",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "mint/pip": {
      "cmd": "sudo apt update\n&& sudo apt install python3-dev python3-pip python3-setuptools\n&& pip3 install thefuck --user\n",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "ubuntu/pip": {
      "cmd": "sudo apt update\n&& sudo apt install python3-dev python3-pip python3-setuptools\n&& pip3 install thefuck --user\n",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "freebsd/pkg": {
      "cmd": "pkg install thefuck",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "chrome/crew": {
      "cmd": "crew install thefuck",
      "reference": "https://github.com/nvbn/thefuck#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S thefuck",
      "reference": "https://github.com/nvbn/thefuck#installation"
    }
  }
}
