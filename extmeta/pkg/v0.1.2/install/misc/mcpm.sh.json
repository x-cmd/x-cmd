{
  "lang": "Python",
  "homepage": "https://github.com/pathintegral-institute/mcpm.sh",
  "desc": {
    "cn": "MCPM 是一个开源的服务和命令行界面(CLI)，用于管理模型上下文协议（MCP）服务器。",
    "en": "MCPM is an open source service and a CLI package management tool for MCP servers."
  },
  "rule": {
    "/curl": {
      "cmd": "curl -sSL https://mcpm.sh/install | bash",
      "reference": "https://github.com/pathintegral-institute/mcpm.sh#-shell-script-one-liner"
    },
    "/brew": {
      "cmd": "brew install mcpm",
      "reference": "https://github.com/pathintegral-institute/mcpm.sh#-homebrew"
    },
    "/pip": {
      "cmd": "pip install mcpm",
      "reference": "https://github.com/pathintegral-institute/mcpm.sh#-pipx-recommended-for-python-tools"
    },
    "/pipx": {
      "cmd": "pipx install mcpm",
      "reference": "https://github.com/pathintegral-institute/mcpm.sh#-pipx-recommended-for-python-tools"
    }
  }
}
