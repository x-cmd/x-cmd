{
  "lang": "rust",
  "desc": {
    "cn": "Atuin 使用 SQLite 数据库替换现有的 shell 历史记录，并记录命令的附加上下文",
    "en": "Atuin replaces the existing shell history with a SQLite database and records additional context for the command"
  },
  "homepage": "https://github.com/atuinsh/atuin",
  "rule": {
    "/curl": {
      "cmd": "bash <(curl https://raw.githubusercontent.com/atuinsh/atuin/main/install.sh)",
      "reference": "https://github.com/atuinsh/atuin?tab=readme-ov-file#script-recommended"
    },
    "darwin/brew": {
      "cmd": "brew install atuin",
      "reference": "https://github.com/atuinsh/atuin?tab=readme-ov-file#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install atuin",
      "reference": "https://github.com/atuinsh/atuin?tab=readme-ov-file#macports"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S atuin",
      "reference": "https://github.com/atuinsh/atuin?tab=readme-ov-file#pacman"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -f '<nixpkgs>' -iA atuin",
      "reference": "https://github.com/atuinsh/atuin?tab=readme-ov-file#nix"
    }
  },
  "dsnap": {
    "brew": "atuin",
    "pacman": "atuin"
  }
}
