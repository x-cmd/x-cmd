{
  "lang": "Rust",
  "homepage": "https://github.com/Hyde46/hoard",
  "desc": {
    "en": "A command organizer lets you save commands that you often use, but are too complicated or long to remember.",
    "cn": "命令组织器可以让你保存经常使用的命令，但这些命令太复杂或太长而难以记忆。"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install hoard-rs",
      "reference": "https://github.com/Hyde46/hoard?tab=readme-ov-file#from-source"
    },
    "arch/paru": {
      "cmd": "paru -S hoard",
      "reference": "https://github.com/Hyde46/hoard?tab=readme-ov-file#aur-arch-linux"
    },
    "darwin/brew": {
      "cmd": "brew tap Hyde46/hoard\nbrew install hoard\n",
      "reference": "https://github.com/Hyde46/hoard?tab=readme-ov-file#homebrew-macos"
    },
    "darwin/port": {
      "cmd": "sudo port install hoard-cli",
      "reference": "https://github.com/Hyde46/hoard?tab=readme-ov-file#macports-macos"
    }
  }
}
