{
  "lang": "Rust",
  "homepage": "https://github.com/phiresky/ripgrep-all",
  "desc": {
    "cn": "rga 是一个面向行的搜索工具，允许你在多种文件类型中使用正则表达式进行查找。",
    "en": "rga is a line-oriented search tool that allows you to look for a regex in a multitude of file types."
  },
  "rule": {
    "arch/pacman": {
      "cmd": "sudo pacman -S ripgrep-all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#arch-linux"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge sys-apps/ripgrep-all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#gentoo-linux"
    },
    "nix/nix-env": {
      "cmd": "nix-env -iA nixpkgs.ripgrep-all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#nix"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ripgrep-all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#chocolatey"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install rga",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#scoop"
    },
    "darwin/brew": {
      "cmd": "brew install rga",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#homebrewlinuxbrew"
    },
    "linux/brew": {
      "cmd": "brew install rga",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#homebrewlinuxbrew"
    },
    "darwin/port": {
      "cmd": "sudo port install ripgrep-all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#macports"
    },
    "/cargo": {
      "cmd": "cargo install --locked ripgrep_all",
      "reference": "https://github.com/phiresky/ripgrep-all?tab=readme-ov-file#compile-from-source",
      "dsnap": "ripgrep_all"
    }
  },
  "dsnap": {
    "/cargo": "ripgrep_all"
  }
}
