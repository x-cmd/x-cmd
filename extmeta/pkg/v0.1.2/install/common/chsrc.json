{
  "lang": "C",
  "homepage": "https://github.com/RubyMetric/chsrc",
  "desc": {
    "cn": "全平台命令行换源工具",
    "en": "Full platform command line source swap tool"
  },
  "rule": {
    "/yay": {
      "cmd": "yay -S chsrc-bin",
      "reference": "https://chsrc.run/"
    },
    "linux/curl": {
      "cmd": "curl https://chsrc.run/posix | sudo bash",
      "reference": "https://chsrc.run/"
    },
    "darwin/curl": {
      "cmd": "curl https://chsrc.run/posix | sudo bash",
      "reference": "https://chsrc.run/"
    },
    "darwin/brew": {
      "cmd": "brew install chsrc",
      "reference": "https://chsrc.run/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install chsrc",
      "reference": "https://chsrc.run/"
    },
    "win/powershell": {
      "cmd": "x pwsh \"& { $(iwr -useb https://chsrc.run/windows) } -Version pre\" | iex",
      "reference": "https://chsrc.run/"
    }
  },
  "dsnap": {
    "brew": "chsrc"
  }
}
