{
  "lang": "perl",
  "homepage": "https://beyondgrep.com/",
  "desc": {
    "cn": "ack 是一个类似 grep 的源代码搜索工具",
    "en": "ack is a grep-like source code search tool"
  },
  "rule": {
    "/curl": {
      "cmd": "curl https://beyondgrep.com/ack-v3.7.0 > ~/bin/ack && chmod 0755 ~/bin/ack",
      "reference": "https://beyondgrep.com/install/"
    },
    "darwin/brew": {
      "cmd": "brew install ack",
      "reference": "https://formulae.brew.sh/formula/ack#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install ack",
      "reference": "https://scoop.sh/#/apps?q=ack"
    }
  }
}
