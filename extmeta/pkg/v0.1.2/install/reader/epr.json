{
  "lang": "Python",
  "homepage": "https://github.com/wustho/epr",
  "desc": {
    "cn": "CLI Epub 阅读器",
    "en": "CLI Epub Reader"
  },
  "rule": {
    "/pip3": {
      "cmd": "pip3 install epr-reader",
      "reference": "https://github.com/wustho/epr?tab=readme-ov-file#installation"
    },
    "darwin/brew": {
      "cmd": "brew install epr",
      "reference": "https://github.com/wustho/epr?tab=readme-ov-file#installation"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install epr",
      "reference": "https://github.com/wustho/epr?tab=readme-ov-file#installation"
    },
    "/yay": {
      "cmd": "yay -S epr-git",
      "reference": "https://github.com/wustho/epr?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "brew": "epr",
    "/pip": "epr-reader"
  }
}
