{
  "lang": "c",
  "homepage": "https://flatpak.org/",
  "desc": {
    "cn": "Flatpak 是一个用于在 Linux 上构建、分发和运行沙箱桌面应用程序的系统",
    "en": "Flatpak is a system for building, distributing, and running sandboxed desktop applications on Linux"
  },
  "rule": {
    "debian/apt": {
      "cmd": "sudo apt install flatpak",
      "reference": "https://flatpak.org/setup/Debian"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install flatpak",
      "reference": "https://flatpak.org/setup/Ubuntu"
    },
    "chrome/apt": {
      "cmd": "sudo apt install flatpak",
      "reference": "https://flatpak.org/setup/Chrome%20OS"
    },
    "rhel/yum": {
      "cmd": "sudo yum install flatpak",
      "reference": "https://flatpak.org/setup/Red%20Hat%20Enterprise%20Linux"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install flatpak",
      "reference": "https://flatpak.org/setup/openSUSE"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S flatpak",
      "reference": "https://flatpak.org/setup/Arch"
    },
    "rocky/dnf": {
      "cmd": "sudo dnf install flatpak",
      "reference": "https://flatpak.org/setup/Rocky%20Linux"
    },
    "gentoo/emerge": {
      "cmd": "echo -e 'sys-apps/flatpak ~amd64\\nacct-user/flatpak ~amd64\\nacct-group/flatpak ~amd64\\ndev-util/ostree ~amd64' >> /etc/portage/package.accept_keywords/flatpak\n&& sudo emerge sys-apps/flatpak\n",
      "reference": "https://flatpak.org/setup/Gentoo"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install apt",
      "reference": "https://command-not-found.com/apt-get"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install apt",
      "reference": "https://command-not-found.com/apt-get"
    }
  }
}
