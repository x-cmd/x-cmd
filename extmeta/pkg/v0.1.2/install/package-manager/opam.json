{
  "lang": "OCaml",
  "homepage": "https://opam.ocaml.org/",
  "desc": {
    "cn": "opam 是一个基于源代码的包管理器，专为 OCaml 设计。",
    "en": "opam is a source-based package manager for OCaml."
  },
  "rule": {
    "darwin/curl": {
      "cmd": "bash -c \"sh <(curl -fsSL https://opam.ocaml.org/install.sh)\"",
      "reference": "https://opam.ocaml.org/doc/Install.html#Binary-distribution"
    },
    "linux/curl": {
      "cmd": "bash -c \"sh <(curl -fsSL https://opam.ocaml.org/install.sh)\"",
      "reference": "https://opam.ocaml.org/doc/Install.html#Binary-distribution"
    },
    "win/powershell": {
      "cmd": "x pwsh Invoke-Expression \"& { $(Invoke-RestMethod https://opam.ocaml.org/install.ps1) }\"",
      "reference": "https://opam.ocaml.org/doc/Install.html#Binary-distribution"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Arch-Linux"
    },
    "arch/yay": {
      "cmd": "yay -S opam-git",
      "reference": "https://opam.ocaml.org/doc/Install.html#Arch-Linux"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Debian",
      "dsnap": "opam"
    },
    "exherbo/cave": {
      "cmd": "cave resolve -x dev-ocaml/opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Debian"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Fedora-CentOS-and-RHEL",
      "dsnap": "opam"
    },
    "centos/dnf": {
      "cmd": "sudo dnf install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Fedora-CentOS-and-RHEL"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Fedora-CentOS-and-RHEL"
    },
    "megeia/urpmi": {
      "cmd": "sudo urpmi opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Mageia"
    },
    "openbsd/": {
      "cmd": "pkg_add opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#OpenBSD"
    },
    "freebad/": {
      "cmd": "pkg install ocaml-opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#FreeBSD"
    },
    "darwin/brew": {
      "cmd": "brew install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#macOS"
    },
    "darwin/port": {
      "cmd": "sudo port install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#macOS"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Ubuntu",
      "dsnap": "opam"
    },
    "guix/guix": {
      "cmd": "sudo guix install opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Guix-amp-Guix-System"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Git.Git OCaml.opam",
      "reference": "https://opam.ocaml.org/doc/Install.html#Windows"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/opam",
      "reference": "https://scoop.sh/#/apps?q=opam&id=27fc742eb0eb0f53e5ed84d5c1cc4bff7254ea16"
    }
  },
  "dsnap": {
    "brew": "opam",
    "winget": "opam",
    "fedora/dnf": "opam",
    "ubuntu/apt": "opam",
    "debian/apt": "opam"
  }
}
