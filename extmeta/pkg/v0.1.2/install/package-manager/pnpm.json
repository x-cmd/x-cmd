{
  "lang": "node",
  "homepage": "https://github.com/pnpm/pnpm",
  "desc": {
    "cn": "快速、节省磁盘空间的包管理器",
    "en": "Fast, disk space efficient package manager"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use pnpm",
      "reference": "https://github.com/jonathanmorley/asdf-pnpm"
    },
    "win/powershell": {
      "cmd": "x pwsh iwr https://get.pnpm.io/install.ps1 -useb | iex",
      "reference": "https://pnpm.io/installation#on-windows"
    },
    "/curl": {
      "cmd": "curl -fsSL https://get.pnpm.io/install.sh | sh -",
      "reference": "https://pnpm.io/installation#on-posix-systems"
    },
    "/wget": {
      "cmd": "wget -qO- https://get.pnpm.io/install.sh | sh -",
      "reference": "https://pnpm.io/installation#on-posix-systems"
    },
    "alpine/wget": {
      "cmd": "wget -qO- https://get.pnpm.io/install.sh | ENV=\"$HOME/.shrc\" SHELL=\"$(which sh)\" sh -",
      "reference": "https://pnpm.io/installation#on-alpine-linux"
    },
    "darwin/brew": {
      "cmd": "brew install pnpm",
      "reference": "https://pnpm.io/installation#using-homebrew"
    },
    "/npm": {
      "cmd": "npm install -g pnpm",
      "reference": "https://pnpm.io/installation#using-npm"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install nodejs-lts pnpm",
      "reference": "https://pnpm.io/installation#using-scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install pnpm",
      "reference": "https://pnpm.io/installation#using-choco"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install pnpm",
      "reference": "https://pnpm.io/installation#using-winget"
    },
    "/volta": {
      "cmd": "volta install pnpm",
      "reference": "https://pnpm.io/installation#using-volta"
    }
  }
}
