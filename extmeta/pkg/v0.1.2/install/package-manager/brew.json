{
  "lang": "Ruby",
  "homepage": "https://brew.sh/",
  "desc": {
    "cn": "MacOS (或 Linux)缺少的包管理器",
    "en": "The missing package manager for macOS (or Linux)"
  },
  "rule": {
    "/curl": {
      "cmd": "/bin/bash -c \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)\"",
      "reference": "https://brew.sh/"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install linuxbrew-wrapper",
      "reference": "https://command-not-found.com/brew"
    },
    "debian//apt": {
      "cmd": "sudo apt-get install linuxbrew-wrapper",
      "reference": "https://command-not-found.com/brew"
    },
    "kali//apt": {
      "cmd": "sudo apt-get install linuxbrew-wrapper",
      "reference": "https://command-not-found.com/brew"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install linuxbrew-wrapper",
      "reference": "https://command-not-found.com/brew"
    }
  },
  "dsnap": {
    "brew": "linuxbrew-wrapper"
  }
}
