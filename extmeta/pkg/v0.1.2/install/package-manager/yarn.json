{
  "lang": "javascript",
  "homepage": "https://yarnpkg.com/",
  "desc": {
    "cn": "Yarn 是一个包管理器，同时也是项目管理器",
    "en": "Yarn is a package manager that doubles down as project manager"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use yarn",
      "reference": "https://github.com/twuni/asdf-yarn"
    },
    "/npm": {
      "cmd": "npm i -g yarn",
      "reference": "https://www.npmjs.com/package/yarn",
      "dsnap": "yarn"
    },
    "darwin/brew": {
      "cmd": "brew install yarn",
      "reference": "https://formulae.brew.sh/formula/yarn#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install yarn",
      "reference": "https://scoop.sh/#/apps?q=yarn"
    }
  },
  "dsnap": {
    "/npm": "yarn"
  }
}
