{
  "lang": "ruby",
  "homepage": "https://cocoapods.org/",
  "desc": {
    "cn": "CocoaPods 是 Swift 和 Objective-C Cocoa 项目的依赖管理器",
    "en": "CocoaPods is a dependency manager for Swift and Objective-C Cocoa projects"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use cocoapods",
      "reference": "https://github.com/ronnnnn/asdf-cocoapods"
    },
    "/gem": {
      "cmd": "gem install cocoapods",
      "reference": "https://cocoapods.org/"
    },
    "darwin/brew": {
      "cmd": "brew install cocoapods",
      "reference": "https://formulae.brew.sh/formula/cocoapods#default"
    }
  },
  "dsnap": {
    "gem": "cocoapods"
  }
}
