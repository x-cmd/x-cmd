{
  "lang": "C++",
  "homepage": "https://nixos.org/",
  "desc": {
    "cn": "Nix 是一种采用独特方法进行包管理和系统配置的工具",
    "en": "Nix is a tool that takes a unique approach to package management and system configuration"
  },
  "rule": {
    "linux/curl": {
      "cmd": "curl -L https://nixos.org/nix/install | sh -s -- --daemon",
      "reference": "https://nix.dev/install-nix"
    },
    "/curl": {
      "cmd": "curl -L https://nixos.org/nix/install | sh",
      "reference": "https://nix.dev/install-nix"
    },
    "(win|wsl2)/curl": {
      "cmd": "curl -L https://nixos.org/nix/install | sh -s -- --no-daemon",
      "reference": "https://nix.dev/install-nix"
    },
    "/nix": {
      "cmd": "x nix --xinistall",
      "reference": "https://nixos.org/manual/nix/stable/installation/installing-binary"
    }
  }
}
