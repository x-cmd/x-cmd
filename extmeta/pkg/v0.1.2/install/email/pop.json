{
  "lang": "go",
  "homepage": "https://github.com/charmbracelet/pop",
  "desc": {
    "cn": "从你的终端发送电子邮件",
    "en": "Send emails from your terminal"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install pop",
      "reference": "https://github.com/charmbracelet/pop?tab=readme-ov-file#installation"
    },
    "arch/yay": {
      "cmd": "sudo yay -S charm-pop-bin",
      "reference": "https://github.com/charmbracelet/pop?tab=readme-ov-file#installation"
    },
    "/nixpkgs": {
      "cmd": "nix-env -iA nixpkgs.pop",
      "reference": "https://github.com/charmbracelet/pop?tab=readme-ov-file#installation"
    },
    "/go": {
      "cmd": "go install github.com/charmbracelet/pop@latest",
      "reference": "https://github.com/charmbracelet/pop?tab=readme-ov-file#installation",
      "dsnap": "github.com/charmbracelet/pop@latest"
    }
  },
  "dsnap": {
    "brew": "pop",
    "yay": "charm-pop-bin",
    "nixpkgs": "pop",
    "/go": "github.com/charmbracelet/pop@latest"
  }
}
