{
  "lang": "Rust",
  "homepage": "https://pimalaya.org/himalaya/cli/latest/",
  "desc": {
    "cn": "用于管理基于 email-lib 电子邮件的命令行工具",
    "en": "The Command-Line Interface to manage emails based on email-lib"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -sSL https://pimalaya.org/himalaya/cli/install.sh | PREFIX=~/.local sh",
      "reference": "https://pimalaya.org/himalaya/cli/latest/quickstart.html#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#arch-linux"
    },
    "manjaro/pacman": {
      "cmd": "sudo pacman -S himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#arch-linux"
    },
    "arch/yay": {
      "cmd": "yay -S himalaya-git",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#arch-linux"
    },
    "darwin/brew": {
      "cmd": "brew install himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#homebrew"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#scoop"
    },
    "/cargo": {
      "cmd": "cargo install himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#cargo"
    },
    "/nix-env": {
      "cmd": "nix-env -i himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#nix"
    },
    "nix/flakes": {
      "cmd": "nix profile install himalaya",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#nix"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable atim/himalaya && \\\nsudo dnf install himalaya\n",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#fedora-linuxcentosrhel"
    },
    "centos/dnf": {
      "cmd": "sudo dnf copr enable atim/himalaya && \\\nsudo dnf install himalaya\n",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#fedora-linuxcentosrhel"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf copr enable atim/himalaya && \\\nsudo dnf install himalaya\n",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#fedora-linuxcentosrhel"
    },
    "rocky/dnf": {
      "cmd": "sudo dnf copr enable atim/himalaya && \\\nsudo dnf install himalaya\n",
      "reference": "https://pimalaya.org/himalaya/cli/latest/installation.html#fedora-linuxcentosrhel"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper addrepo https://download.opensuse.org/repositories/openSUSE:Factory/standard/openSUSE:Factory.repo && \\\nsudo zypper refresh && \\\nsudo zypper install himalaya\n",
      "reference": "https://software.opensuse.org//download.html?project=openSUSE%3AFactory&package=himalaya"
    }
  }
}
