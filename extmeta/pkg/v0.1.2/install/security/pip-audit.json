{
  "lang": "Python",
  "homepage": "https://github.com/pypa/pip-audit",
  "desc": {
    "cn": "用于扫描 Python 环境已知漏洞的工具",
    "en": "A tool for scanning Python environments for known vulnerabilities"
  },
  "rule": {
    "/pip": {
      "cmd": "python -m pip install pip-audit",
      "reference": "https://github.com/pypa/pip-audit?tab=readme-ov-file#installation",
      "dsnap": "pip-audit"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge pip-audit",
      "reference": "https://github.com/pypa/pip-audit?tab=readme-ov-file#third-party-packages"
    },
    "darwin/brew": {
      "cmd": "brew install pip-audit",
      "reference": "https://formulae.brew.sh/formula/pip-audit#default"
    }
  },
  "dsnap": {
    "/pip": "pip-audit"
  }
}
