{
  "lang": "Go",
  "homepage": "https://github.com/anchore/grype",
  "desc": {
    "cn": "针对容器镜像和文件系统的漏洞扫描器",
    "en": "A vulnerability scanner for container images and filesystems"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -sSfL https://raw.githubusercontent.com/anchore/grype/main/install.sh | sh -s -- -b /usr/local/bin",
      "reference": "https://github.com/anchore/grype?tab=readme-ov-file#recommended"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install grype -y",
      "reference": "https://github.com/anchore/grype?tab=readme-ov-file#chocolatey"
    },
    "darwin/brew": {
      "cmd": "brew tap anchore/grype && brew install grype",
      "reference": "https://github.com/anchore/grype?tab=readme-ov-file#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install grype",
      "reference": "https://github.com/anchore/grype?tab=readme-ov-file#macports"
    }
  },
  "dsnap": {
    "/go": "anchore/grype"
  }
}
