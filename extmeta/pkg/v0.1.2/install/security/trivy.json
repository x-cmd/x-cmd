{
  "lang": "Go",
  "homepage": "https://github.com/aquasecurity/trivy",
  "desc": {
    "cn": "查找容器、Kubernetes、代码存储库、云等中的漏洞、错误配置、秘密、SBOM",
    "en": "Find vulnerabilities, security issues, and secrets in containers, Kubernetes, code repositories, cloud"
  },
  "rule": {
    "centos/yum": {
      "cmd": "sudo yum -y install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#rhelcentos-official"
    },
    "rhel/yum": {
      "cmd": "sudo yum -y install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#rhelcentos-official"
    },
    "/rpm": {
      "cmd": "rpm -ivh https://github.com/aquasecurity/trivy/releases/download/v0.49.1/trivy_0.49.1_Linux-64bit.rpm",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#rhelcentos-official"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#debianubuntu-official",
      "dsnap": "trivy"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#debianubuntu-official",
      "dsnap": "trivy"
    },
    "/deb": {
      "cmd": "wget https://github.com/aquasecurity/trivy/releases/download/v0.49.1/trivy_0.49.1_Linux-64bit.deb \\\n&& sudo dpkg -i trivy_0.49.1_Linux-64bit.deb\n",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#debianubuntu-official"
    },
    "darwin/brew": {
      "cmd": "brew install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#homebrew-official"
    },
    "darwin/port": {
      "cmd": "sudo port install trivy",
      "reference": "https://aquasecurity.github.io/trivy/v0.49/getting-started/installation/#macports-community"
    },
    "/asdf": {
      "cmd": "x asdf use trivy",
      "reference": "https://github.com/zufardhiyaulhaq/asdf-trivy?tab=readme-ov-file#install"
    }
  },
  "dsnap": {
    "brew": "trivy",
    "ubuntu/apt": "trivy",
    "debian/apt": "trivy"
  }
}
