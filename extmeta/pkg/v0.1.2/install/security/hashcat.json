{
  "lang": "C",
  "homepage": "https://github.com/hashcat/hashcat",
  "desc": {
    "cn": "一款自称为世界上最快、最先进的密码破解工具，支持多种密码哈希算法，如 LM 哈希、MD5、SHA 系列等。",
    "en": "A tool proclaims itself the world's fastest, most advanced password cracker, boasting support for a wide array of password hashing algorithms, including LM hash, MD5, and the SHA family."
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install hashcat",
      "reference": "https://formulae.brew.sh/formula/hashcat"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install hashcat",
      "reference": "https://packages.ubuntu.com/search?suite=default&section=all&arch=any&keywords=hashcat&searchon=names"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install hashcat",
      "reference": "https://packages.fedoraproject.org/pkgs/hashcat/hashcat/"
    },
    "alpine/apk": {
      "cmd": "sudo apk add hashcat",
      "reference": "https://pkgs.alpinelinux.org/package/edge/testing/x86_64/hashcat"
    }
  }
}
