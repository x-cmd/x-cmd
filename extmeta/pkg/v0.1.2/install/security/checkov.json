{
  "lang": "python",
  "homepage": "https://www.checkov.io/",
  "desc": {
    "cn": "CheckOV是用于基础架构（IAC）的静态代码分析工具，也是图像和开源软件包的软件组成分析（SCA）工具",
    "en": "Checkov is a static code analysis tool for infrastructure as code (IaC) and also a software composition analysis (SCA) tool for images and open source packages"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use checkov",
      "reference": "https://github.com/bosmak/asdf-checkov"
    },
    "/pip3": {
      "cmd": "pip3 install checkov",
      "reference": "https://github.com/bridgecrewio/checkov?tab=readme-ov-file#installation"
    },
    "/pip": {
      "cmd": "pip install checkov",
      "reference": "https://www.checkov.io/1.Welcome/Quick%20Start.html#install-checkov-from-pypi",
      "dsnap": "checkov"
    },
    "darwin/brew": {
      "cmd": "brew install checkov",
      "reference": "https://github.com/bridgecrewio/checkov?tab=readme-ov-file#installation"
    }
  },
  "dsnap": {
    "brew": "checkov",
    "/pip": "checkov"
  }
}
