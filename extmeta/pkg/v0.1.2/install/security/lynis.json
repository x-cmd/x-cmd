{
  "lang": "shell",
  "homepage": "https://github.com/CISOfy/lynis",
  "desc": {
    "cn": "lynis 是一个基于 UNIX 的系统的安全审计工具",
    "en": "lynis is a security auditing tool for systems based on UNIX"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install lynis",
      "reference": "https://formulae.brew.sh/formula/lynis#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install lynis",
      "reference": "https://command-not-found.com/lynis",
      "dsnap": "lynis"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install lynis",
      "reference": "https://command-not-found.com/lynis",
      "dsnap": "lynis"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S lynis",
      "reference": "https://command-not-found.com/lynis"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install lynis",
      "reference": "https://command-not-found.com/lynis"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install lynis",
      "reference": "https://command-not-found.com/lynis",
      "dsnap": "lynis"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install lynis",
      "reference": "https://command-not-found.com/lynis"
    },
    "rhel/yum": {
      "cmd": "sudo yum install lynis",
      "reference": "https://cisofy.com/documentation/lynis/get-started/#installation-package"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install lynis",
      "reference": "https://cisofy.com/documentation/lynis/get-started/#installation-package"
    },
    "/git": {
      "cmd": "cd /usr/local \\\n&& git clone https://github.com/CISOfy/lynis \\\n&&  cd lynis \\\n&& lynis audit system\n",
      "reference": "https://cisofy.com/documentation/lynis/get-started/#installation-package"
    },
    "/wget": {
      "cmd": "wget https://cisofy.com/files/lynis-3.0.9.tar.gz",
      "reference": "https://cisofy.com/documentation/lynis/get-started/#installation-package"
    },
    "/curl": {
      "cmd": "curl https://cisofy.com/files/lynis-3.0.9.tar.gz -o lynis.tar.gz",
      "reference": "https://cisofy.com/documentation/lynis/get-started/#installation-package"
    }
  },
  "dsnap": {
    "brew": "lynis",
    "pacman": "lynis",
    "yum": "lynis",
    "zypper": "lynis",
    "fedora/dnf": "lynis",
    "ubuntu/apt": "lynis",
    "debian/apt": "lynis"
  }
}
