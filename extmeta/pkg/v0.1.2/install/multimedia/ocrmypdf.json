{
  "lang": "python",
  "homepage": "https://github.com/ocrmypdf/OCRmyPDF",
  "desc": {
    "cn": "用于将 PDF 文档中的图像文本转换为可搜索文本（OCR）的开源工具",
    "en": "Open source tool for converting image text in PDF documents to searchable text (OCR)"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install --user ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-with-python-pip"
    },
    "/git": {
      "cmd": "pip install git+https://github.com/ocrmypdf/OCRmyPDF.git",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-head-revision-from-sources"
    },
    "darwin/brew": {
      "cmd": "brew install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#homebrew"
    },
    "debian/apt": {
      "cmd": "sudo apt install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#debian-and-ubuntu-20-04-or-newer"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#debian-and-ubuntu-20-04-or-newer"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S base-devel\n&& curl -O https://aur.archlinux.org/cgit/aur.git/snapshot/ocrmypdf.tar.gz\n&& tar xvzf ocrmypdf.tar.gz\n&& cd ocrmypdf\n&& makepkg -sri\n&& sudo pacman -S tesseract-data-eng\n",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#arch-linux-aur"
    },
    "alpine/apk": {
      "cmd": "sudo apk add ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#alpine-linux"
    },
    "gentoo/emerge": {
      "cmd": "sudo eselect repository enable guru\n&& sudo emaint sync --repo guru\n&& sudo emerge --ask app-text/OCRmyPDF\n",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#gentoo-linux"
    },
    "kali/apt": {
      "cmd": "sudo apt install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#debian-and-ubuntu-20-04-or-newer"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ocrmypdf tesseract-osd",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#fedora"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#debian-and-ubuntu-20-04-or-newer"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install googlechrome",
      "reference": "https://scoop.sh/#/apps?q=Google+Chrome"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install python3\nx choco install --pre tesseract\nx choco install ghostscript\nx choco install pngquant\n",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-on-windows"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install -e --id Python.Python.3.11\n&& x winget install -e --id UB-Mannheim.TesseractOCR\n&& x winget install -e --id ArtifexSoftware.GhostScript\n",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-on-windows"
    },
    "win/pip": {
      "cmd": "python3 -m pip install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-on-windows"
    },
    "(win|wsl2)/symlink": {
      "cmd": "wsl sudo ln -s  /home/$USER/.local/bin/ocrmypdf /usr/local/bin/ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#windows-subsystem-for-linux"
    },
    "freebsd/pkg": {
      "cmd": "pkg install textproc/py-ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-on-freebsd"
    },
    "/snap": {
      "cmd": "sudo snap install ocrmypdf",
      "reference": "https://ocrmypdf.readthedocs.io/en/latest/installation.html#installing-ocrmypdf"
    }
  }
}
