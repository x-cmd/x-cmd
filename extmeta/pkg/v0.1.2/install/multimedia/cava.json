{
  "lang": "C",
  "homepage": "https://github.com/karlstav/cava",
  "desc": {
    "cn": "Cava 是一个用于终端或桌面的条形频谱音频可视化工具（SDL）。",
    "en": "Cava is a bar spectrum audio visualizer for terminal or desktop (SDL)."
  },
  "rule": {
    "freebsd/pkg": {
      "cmd": "pkg install cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#freebsd"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper in cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#opensuse"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#fedora"
    },
    "arch/pacaur": {
      "cmd": "sudo pacaur -S cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#arch"
    },
    "debian/apt": {
      "cmd": "sudo apt install cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#ubuntudebian",
      "dsnap": "cava"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#ubuntudebian",
      "dsnap": "cava"
    },
    "darwin/brew": {
      "cmd": "brew install cava",
      "reference": "https://github.com/karlstav/cava?tab=readme-ov-file#macos"
    }
  },
  "dsnap": {
    "brew": "cava",
    "ubuntu/apt": "cava",
    "debian/apt": "cava"
  }
}
