{
  "lang": "Go",
  "homepage": "https://github.com/maaslalani/slides",
  "desc": {
    "en": "Terminal based presentation tool",
    "cn": "基于终端的演示工具"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install slides",
      "reference": "https://github.com/maaslalani/slides?tab=readme-ov-file#installation"
    },
    "arch/yay": {
      "cmd": "yay -S slides",
      "reference": "https://github.com/maaslalani/slides?tab=readme-ov-file#installation"
    },
    "/nix-env": {
      "cmd": "nix-env -iA nixpkgs.slides",
      "reference": "https://github.com/maaslalani/slides?tab=readme-ov-file#installation"
    },
    "linux/snapd": {
      "cmd": "sudo snap install slides",
      "reference": "https://github.com/maaslalani/slides?tab=readme-ov-file#installation"
    },
    "/go": {
      "cmd": "go install github.com/maaslalani/slides@latest",
      "reference": "https://github.com/maaslalani/slides?tab=readme-ov-file#installation",
      "dsnap": "slides"
    }
  },
  "dsnap": {
    "brew": "slides",
    "/go": "slides"
  }
}
