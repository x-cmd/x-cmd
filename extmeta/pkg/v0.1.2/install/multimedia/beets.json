{
  "lang": "Python",
  "homepage": "https://beets.io/",
  "desc": {
    "cn": "Beets 是专为音乐迷打造的媒体库管理系统",
    "en": "Beets is the media library management system for obsessive music geeks"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install beets",
      "reference": "https://github.com/beetbox/beets#install",
      "dsnap": "beets"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install beets beets-plugins beets-doc",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "freebsd/pkg": {
      "cmd": "pkg install audio/beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "solus/eopkg": {
      "cmd": "sudo eopkg install beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "nix/nixpkgs": {
      "cmd": "sudo nix-env -i beets",
      "reference": "https://beets.readthedocs.io/en/stable/guides/main.html#installing"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install beets",
      "reference": "https://community.chocolatey.org/packages/beets"
    }
  },
  "dsnap": {
    "/pip": "beets"
  }
}
