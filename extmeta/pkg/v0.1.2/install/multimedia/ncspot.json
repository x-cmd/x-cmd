{
  "lang": "Rust",
  "homepage": "https://github.com/hrkfdn/ncspot",
  "desc": {
    "cn": "ncspot 是一个基于 ncurses 的 Spotify 客户端，使用 Rust 编写，并依赖 librespot 库。",
    "en": "ncspot is an ncurses Spotify client written in Rust using librespot."
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install ncspot",
      "reference": "https://crates.io/crates/ncspot",
      "dsnap": "ncspot"
    },
    "darwin/brew": {
      "cmd": "brew install ncspot",
      "reference": "https://formulae.brew.sh/formula/ncspot#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/ncspot",
      "reference": "https://scoop.sh/#/apps?q=ncspot"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install hrkfdn.ncspot",
      "reference": "https://winget.run/search?query=hrkfdn.ncspot"
    }
  },
  "dsnap": {
    "brew": "ncspot",
    "/cargo": "ncspot"
  }
}
