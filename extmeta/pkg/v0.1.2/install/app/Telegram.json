{
  "lang": "C++",
  "homepage": "https://telegram.org/",
  "desc": {
    "en": "Telegram is an instant messaging application that allows users to send and receive messages, photos, audio, videos, and other types of files over the internet",
    "cn": "Telegram是一种即时通讯应用程序，它允许用户通过互联网发送和接收消息、照片、音频、视频和其他类型的文件"
  },
  "rule": {
    "/flatpak": {
      "cmd": "flatpak install flathub org.telegram.desktop",
      "reference": "https://flathub.org/apps/org.telegram.desktop"
    },
    "arch/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/arch"
    },
    "centos/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/centos"
    },
    "debian/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/debian"
    },
    "elementary/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/elementary"
    },
    "fedora/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/fedora"
    },
    "neon/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/kde-neon"
    },
    "kubuntu/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/kubuntu"
    },
    "manjaro/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/manjaro"
    },
    "pop/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/pop"
    },
    "opensuse/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/opensuse"
    },
    "rhel/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/rhel"
    },
    "ubuntu/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/ubuntu"
    },
    "kali/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/ubuntu"
    },
    "raspbian/snap": {
      "cmd": "sudo snap install telegram-desktop",
      "reference": "https://snapcraft.io/install/telegram-desktop/ubuntu"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/telegram\n",
      "reference": "https://scoop.sh/#/apps?q=telegram"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install telegram",
      "reference": "https://community.chocolatey.org/packages/telegram"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Telegram.TelegramDesktop",
      "reference": "https://winget.run/pkg/Telegram/TelegramDesktop"
    },
    "darwin/brew": {
      "cmd": "brew install --cask telegram",
      "reference": "https://formulae.brew.sh/cask/telegram#default"
    }
  },
  "dsnap": {
    "fedora/dnf": "telegram-desktop",
    "alpine/apk": "telegram-desktop"
  }
}
