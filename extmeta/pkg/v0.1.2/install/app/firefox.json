{
  "lang": "C++",
  "homepage": "https://www.mozilla.org/en-US/firefox/",
  "desc": {
    "cn": "火狐是自由及开源，由 Mozilla 基金会及其子公司 Mozilla 公司开发的网页浏览器",
    "en": "Firefox is a free and open source web browser developed by the Mozilla Foundation and its subsidiary, the Mozilla Corporation"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install --cask firefox",
      "reference": "https://formulae.brew.sh/cask/firefox#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/firefox",
      "reference": "https://scoop.sh/#/apps?q=firefox&id=6643da2c8c4f1db4008e36e14271e538634b7e76"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install firefox",
      "reference": "https://community.chocolatey.org/packages/Firefox"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install -e --id Mozilla.Firefox",
      "reference": "https://winget.run/pkg/Mozilla/Firefox"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install firefox",
      "reference": "https://command-not-found.com/firefox",
      "dsnap": "firefox"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install firefox",
      "reference": "https://command-not-found.com/firefox",
      "dsnap": "firefox"
    },
    "alpine/apk": {
      "cmd": "sudo apk add firefox",
      "reference": "https://command-not-found.com/firefox",
      "dsnap": "firefox"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S firefox",
      "reference": "https://command-not-found.com/firefox"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install firefox",
      "reference": "https://command-not-found.com/firefox"
    },
    "centos/yum": {
      "cmd": "sudo yum install firefox",
      "reference": "https://command-not-found.com/firefox"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install firefox",
      "reference": "https://command-not-found.com/firefox",
      "dsnap": "firefox"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install firefox",
      "reference": "https://command-not-found.com/firefox"
    },
    "/flatpak": {
      "cmd": "sudo flatpak install flathub org.mozilla.firefox",
      "reference": "https://flathub.org/apps/org.mozilla.firefox"
    },
    "nix/": {
      "cmd": "nix-shell -p firefox",
      "reference": "https://search.nixos.org/packages?channel=unstable&show=firefox&from=0&size=50&sort=relevance&type=packages&query=firefox"
    }
  },
  "dsnap": {
    "brew": "firefox",
    "pacman": "firefox",
    "yum": "firefox",
    "flatpak": "org.mozilla.firefox",
    "nix": "firefox",
    "fedora/dnf": "firefox",
    "alpine/apk": "firefox",
    "ubuntu/apt": "firefox",
    "debian/apt": "firefox"
  }
}
