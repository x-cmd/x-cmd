{
  "lang": "c++",
  "homepage": "https://github.com/flameshot-org/flameshot",
  "desc": {
    "en": "Powerful yet simple to use screenshot software",
    "cn": "功能强大但易于使用的屏幕截图软件"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install --cask flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#macos"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#macos"
    },
    "debian/apt": {
      "cmd": "sudo apt install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "kali/apt": {
      "cmd": "sudo apt install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install flameshot",
      "reference": "https://github.com/flameshot-org/flameshot#packages-from-repository"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/flameshot\n",
      "reference": "https://scoop.sh/#/apps?q=flameshot"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install flameshot",
      "reference": "https://community.chocolatey.org/packages/flameshot"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Flameshot.Flameshot",
      "reference": "https://winget.run/pkg/Flameshot/Flameshot"
    },
    "/flatpak": {
      "cmd": "sudo flatpak install flathub org.flameshot.Flameshot",
      "reference": "https://flathub.org/apps/org.flameshot.Flameshot"
    },
    "arch/snap": {
      "cmd": "sudo snap install flameshot",
      "reference": "https://snapcraft.io/install/flameshot/arch"
    },
    "centos/snap": {
      "cmd": "sudo snap install flameshot",
      "reference": "https://snapcraft.io/install/flameshot/centos"
    },
