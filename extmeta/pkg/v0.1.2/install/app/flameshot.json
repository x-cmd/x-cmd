      "reference": "https://snapcraft.io/install/flameshot/debian"
    },
    "elementary/snap": {
      "cmd": "sudo snap install flameshot",
      "reference": "https://snapcraft.io/install/flameshot/elementary"
    },
    "fedora/snap": {
      "cmd": "sudo snap install flameshot",
      "reference": "https://snapcraft.io/install/flameshot/fedora"
    },
    "neon/snap": {
      "cmd": "sudo snap install flameshot",
      "reference": "https://snapcraft.io/install/flameshot/kde-neon"
    },
    "kubuntu/snap": {
