{
  "lang": "C++",
  "homepage": "https://weixin.qq.com/",
  "desc": {
    "cn": "微信（WeChat）是腾讯公司推出的一个为智能终端提供即时通讯服务的免费应用程序",
    "en": "WeChat is a free application launched by Tencent to provide instant messaging services for smart terminals"
  },
  "rule": {
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/wechat\n",
      "reference": "https://scoop.sh/#/apps?q=wechat"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install wechat",
      "reference": "https://community.chocolatey.org/packages/wechat"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Tencent.WeChat",
      "reference": "https://winget.run/pkg/Tencent/WeChat"
    },
    "darwin/brew": {
      "cmd": "brew install --cask wechat",
      "reference": "https://formulae.brew.sh/cask/wechat#default"
    },
    "arch/snap": {
      "cmd": "sudo snap install electronic-wechat",
      "reference": "https://snapcraft.io/install/electronic-wechat/arch"
    },
    "centos/snap": {
      "cmd": "sudo snap install electronic-wechat",
      "reference": "https://snapcraft.io/install/electronic-wechat/centos"
    },
