{
  "lang": "C++",
  "homepage": "https://visualstudio.microsoft.com/",
  "desc": {
    "cn": "适用于 Windows 上 .NET 和 C++ 开发人员的最全面 IDE",
    "en": "The most comprehensive IDE for .NET and C++ developers on Windows"
  },
  "rule": {
    "(win|wsl2)/choco": {
      "cmd": "x choco install visualstudio2022community",
      "reference": "https://community.chocolatey.org/packages/visualstudio2022community"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Microsoft.VisualStudio.2022.Community",
      "reference": "https://winget.run/pkg/Microsoft/VisualStudio.2022.Community"
    },
    "darwin/brew": {
      "cmd": "brew install --cask visual-studio",
      "reference": "https://formulae.brew.sh/cask/visual-studio#default"
    }
  },
  "dsnap": {
    "brew": "visual-studio"
  }
}
