{
  "lang": "c++",
  "homepage": "https://store.steampowered.com/",
  "desc": {
    "en": "Steam is Valve's digital distribution platform for video games",
    "cn": "Steam 是 Valve 公司在推出的电子游戏数字发行平台"
  },
  "rule": {
    "/flatpak": {
      "cmd": "flatpak install flathub com.valvesoftware.Steam",
      "reference": "https://flathub.org/apps/com.valvesoftware.Steam"
    },
    "arch/snap": {
      "cmd": "sudo snap install steam",
      "reference": "https://snapcraft.io/install/steam/arch"
    },
    "centos/snap": {
      "cmd": "sudo snap install steam",
      "reference": "https://snapcraft.io/install/steam/centos"
    },
