    },
    "ubuntu/snap": {
      "cmd": "sudo snap install steam",
      "reference": "https://snapcraft.io/install/steam/ubuntu"
    },
    "kali/snap": {
      "cmd": "sudo snap install steam",
      "reference": "https://snapcraft.io/install/steam/ubuntu"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add games && x scoop install games/steam\n",
      "reference": "https://scoop.sh/#/apps?q=steam"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install steam",
      "reference": "https://community.chocolatey.org/packages/steam"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Valve.Steam",
      "reference": "https://winget.run/pkg/Valve/Steam"
    },
    "darwin/brew": {
      "cmd": "brew install --cask steam",
      "reference": "https://formulae.brew.sh/cask/steam#default"
    }
  },
  "dsnap": null
}
