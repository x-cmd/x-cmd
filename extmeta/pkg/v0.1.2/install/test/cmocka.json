{
  "lang": "c",
  "homepage": "https://cmocka.org/",
  "desc": {
    "cn": "C 的单元测试框架",
    "en": "Unit testing framework for C"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install cmocka",
      "reference": "https://formulae.brew.sh/formula/cmocka#default"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install libcmocka-dev",
      "reference": "https://gitlab.com/cmocka/cmocka/-/blob/master/INSTALL.md?ref_type=heads",
      "dsnap": "libcmocka-dev"
    }
  },
  "dsnap": {
    "brew": "cmocka",
    "ubuntu/apt": "libcmocka-dev"
  }
}
