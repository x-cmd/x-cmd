{
  "lang": "perl",
  "homepage": "https://learn.perl.org/installing/",
  "desc": {
    "cn": "一种通用脚本语言，具有强大的文本处理和正则表达式功能",
    "en": "A general scripting language with powerful text processing and regular expression functions"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use perl",
      "reference": "https://github.com/ouest/asdf-perl"
    },
    "darwin/curl": {
      "cmd": "curl -L http://xrl.us/installperlosx | bash",
      "reference": "https://learn.perl.org/installing/osx.html"
    },
    "linux/curl": {
      "cmd": "curl -L http://xrl.us/installperlnix | bash",
      "reference": "https://learn.perl.org/installing/unix_linux.html"
    }
  },
  "dsnap": {
    "brew": "perl",
    "/go": "perl",
    "fedora/dnf": "perl",
    "alpine/apk": "perl"
  }
}
