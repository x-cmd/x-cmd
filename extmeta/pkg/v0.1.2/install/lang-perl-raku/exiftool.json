{
  "lang": "perl",
  "homepage": "https://exiftool.org/",
  "desc": {
    "en": "Perl lib for reading and writing EXIF metadata",
    "cn": "用于读取和写入 EXIF 元数据的 Perl 库"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install exiftool",
      "reference": "https://formulae.brew.sh/formula/exiftool#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install exiftool",
      "reference": "https://scoop.sh/#/apps?q=ExifTool"
    }
  },
  "dsnap": {
    "brew": "exiftool"
  }
}
