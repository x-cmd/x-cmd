{
  "lang": "go",
  "homepage": "https://fly.io/",
  "desc": {
    "en": "flyctl is a command-line interface for fly.io",
    "cn": "Flyctl 是 fly.io 的命令行界面"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install flyctl",
      "reference": "https://github.com/superfly/flyctl?tab=readme-ov-file#homebrew-macos-linux-wsl"
    },
    "/curl": {
      "cmd": "curl -L https://fly.io/install.sh | sh",
      "reference": "https://github.com/superfly/flyctl?tab=readme-ov-file#install-script"
    },
    "win/powershell": {
      "cmd": "x pwsh iwr https://fly.io/install.ps1 -useb | iex",
      "reference": "https://github.com/superfly/flyctl?tab=readme-ov-file#windows"
    }
  },
  "dsnap": {
    "brew": "flyctl"
  }
}
