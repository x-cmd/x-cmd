{
  "lang": "python",
  "homepage": "https://github.com/ansible/ansible",
  "desc": {
    "cn": "Ansible 是一个极其简单的 IT 自动化平台，使您的应用程序和系统更易于部署和维护",
    "en": "Ansible is a radically simple IT automation platform that makes your applications and systems easier to deploy and maintain"
  },
  "rule": {
    "/pip": {
      "cmd": "python3 -m pip install --user ansible",
      "reference": "https://docs.ansible.com/ansible/latest/installation_guide/intro_installation.html#pip-install"
    },
    "/pipx": {
      "cmd": "pipx install --include-deps ansible",
      "reference": "https://docs.ansible.com/ansible/latest/installation_guide/intro_installation.html#installing-and-upgrading-ansible-with-pipx"
    },
    "darwin/brew": {
      "cmd": "brew install ansible",
      "reference": "https://formulae.brew.sh/formula/ansible#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "alpine/apk": {
      "cmd": "sudo apk add ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "centos/yum": {
      "cmd": "sudo yum install ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ansible",
      "reference": "https://command-not-found.com/ansible"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install ansible",
      "reference": "https://command-not-found.com/ansible"
    }
  }
}
