{
  "lang": "java",
  "homepage": "https://github.com/jbangdev/jbang",
  "desc": {
    "cn": "让学生、教育工作者和专业开发人员能够以前所未有的轻松方式创建、编辑和运行独立的 source-only Java 程序",
    "en": "Enables students, educators, and professional developers to create, edit, and run standalone source-only Java programs easier than ever"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use jbang",
      "reference": "https://github.com/joschi/asdf-jbang"
    },
    "/curl": {
      "cmd": "curl -Ls https://sh.jbang.dev | bash -s - app setup",
      "reference": "https://www.jbang.dev/download/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add jbangdev https://github.com/jbangdev/scoop-bucket\n&& x scoop install jbang\n",
      "reference": "https://www.jbang.dev/download/"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install jbang",
      "reference": "https://www.jbang.dev/download/"
    },
    "win/powershell": {
      "cmd": "x pwsh iex \"& { $(iwr https://ps.jbang.dev) } [jbang arguments]\"",
      "reference": "https://www.jbang.dev/download/"
    },
    "/sdk": {
      "cmd": "sdk install jbang",
      "reference": "https://www.jbang.dev/download/"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable @jbangdev/jbang\n&& sudo dnf install jbang\n",
      "reference": "https://www.jbang.dev/download/"
    },
    "darwin/brew": {
      "cmd": "brew install jbangdev/tap/jbang",
      "reference": "https://www.jbang.dev/download/"
    }
  },
  "dsnap": {
    "brew": "jbangdev/tap/jbang"
  }
}
