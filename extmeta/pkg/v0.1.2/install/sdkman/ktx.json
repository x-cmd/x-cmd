{
  "lang": "Kotlin",
  "homepage": "https://github.com/mpetuska/ktx",
  "desc": {
    "cn": "用于 Kotlin 和 JVM 的 npx，安装和执行 jar 或 kotlin 脚本，就像任何其他命令行实用程序一样",
    "en": "npx for kotlin and the JVM,Install and execute jars or kotlin scripts just like any other command line utility"
  },
  "rule": {
    "/sdk": {
      "cmd": "sdk install ktx",
      "reference": "https://github.com/mpetuska/ktx?tab=readme-ov-file#recommended-sdkman"
    },
    "/curl": {
      "cmd": "curl https://raw.githubusercontent.com/mpetuska/ktx/master/scripts/install.sh | bash",
      "reference": "https://github.com/mpetuska/ktx?tab=readme-ov-file#install-script"
    },
    "/build": {
      "cmd": "curl https://raw.githubusercontent.com/mpetuska/ktx/master/scripts/install-snapshot.sh | bash",
      "reference": "https://github.com/mpetuska/ktx?tab=readme-ov-file#build-from-source"
    }
  }
}
