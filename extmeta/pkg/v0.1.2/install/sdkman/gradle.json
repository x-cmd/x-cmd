{
  "lang": "Groovy/Java",
  "homepage": "https://gradle.org/install/#with-a-package-manager",
  "desc": {
    "cn": "自动化(构建、测试和部署)工具。Groovy 或 Kotlin",
    "en": "Automation (build, test and deployment) tools. Groovy or Kotlin"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use gradle",
      "reference": "https://github.com/rfrancis/asdf-gradle"
    },
    "darwin/brew": {
      "cmd": "brew install gradle",
      "reference": "https://formulae.brew.sh/formula/gradle#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install gradle",
      "reference": "https://command-not-found.com/gradle",
      "dsnap": "gradle"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install gradle",
      "reference": "https://command-not-found.com/gradle",
      "dsnap": "gradle"
    },
    "alpine/apk": {
      "cmd": "sudo apk add gradle",
      "reference": "https://command-not-found.com/gradle",
      "dsnap": "gradle"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S gradle",
      "reference": "https://command-not-found.com/gradle"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install gradle",
      "reference": "https://command-not-found.com/gradle"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install gradle",
      "reference": "https://command-not-found.com/gradle",
      "dsnap": "gradle"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install gradle",
      "reference": "https://command-not-found.com/gradle"
    }
  },
  "dsnap": {
    "brew": "gradle",
    "pacman": "gradle",
    "fedora/dnf": "gradle",
    "alpine/apk": "gradle",
    "ubuntu/apt": "gradle",
    "debian/apt": "gradle"
  }
}
