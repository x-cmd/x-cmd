{
  "lang": "java",
  "homepage": "https://avro.apache.org/",
  "desc": {
    "cn": "Apache Avro™ 是记录数据的领先序列化格式，也是流数据管道的首选",
    "en": "Apache Avro™ is the leading serialization format for record data, and first choice for streaming data pipelines"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install avro-cpp",
      "reference": "https://formulae.brew.sh/formula/avro-cpp#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install avro-tools",
      "reference": "https://scoop.sh/#/apps?q=avro"
    }
  },
  "dsnap": {
    "brew": "avro-cpp"
  }
}
