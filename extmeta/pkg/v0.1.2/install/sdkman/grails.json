{
  "lang": "Groovy/Java",
  "homepage": "https://grails.org/index.html",
  "desc": {
    "cn": "一个强大的基于 Groovy 的 JVM web 应用程序框架，构建在 Spring Boot 之上",
    "en": "A powerful Groovy-based web application framework for the JVM built on top of Spring Boot"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use grails",
      "reference": "https://github.com/weibemoura/asdf-grails"
    },
    "/sdk": {
      "cmd": "sdk install grails",
      "reference": "https://docs.grails.org/6.1.0/guide/gettingStarted.html#downloadingAndInstalling"
    },
    "darwin/brew": {
      "cmd": "brew install grails",
      "reference": "https://formulae.brew.sh/formula/grails#default"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S grails",
      "reference": "https://command-not-found.com/grails"
    }
  },
  "dsnap": {
    "brew": "grails"
  }
}
