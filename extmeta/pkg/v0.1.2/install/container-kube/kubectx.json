{
  "lang": "Go",
  "homepage": "https://github.com/ahmetb/kubectx",
  "desc": {
    "cn": "可以轻松切换 kubectl 上下文并创建别名的工具",
    "en": "Tool that can switch between kubectl contexts easily and create aliases"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use kubectx",
      "reference": "https://gitlab.com/wt0f/asdf-kubectx"
    },
    "darwin/brew": {
      "cmd": "brew install kubectx",
      "reference": "https://formulae.brew.sh/formula/kubectx#default"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install kubectx",
      "reference": "https://github.com/ahmetb/kubectx#macports-macos"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install kubens kubectx",
      "reference": "https://github.com/ahmetb/kubectx#windows-installation-using-chocolatey"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add main\n&& x scoop install main/kubens main/kubectx\n",
      "reference": "https://github.com/ahmetb/kubectx#windows-installation-using-scoop"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install --id ahmetb.kubectx\n&& x winget install --id ahmetb.kubens\n",
      "reference": "https://github.com/ahmetb/kubectx#windows-installation-using-winget"
    },
    "debian/apt": {
      "cmd": "sudo apt install kubectx",
      "reference": "https://github.com/ahmetb/kubectx#apt-debian"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S kubectx",
      "reference": "https://github.com/ahmetb/kubectx#pacman-arch-linux"
    }
  },
  "dsnap": {
    "brew": "kubectx"
  }
}
