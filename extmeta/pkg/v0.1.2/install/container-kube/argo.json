{
  "lang": "go",
  "homepage": "https://argoproj.github.io/",
  "desc": {
    "cn": "适用于 Kubernetes 的开源工具，用于运行工作流、管理集群和正确执行 GitOps",
    "en": "Open source tools for Kubernetes to run workflows, manage clusters, and do GitOps right"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use argo",
      "reference": "https://github.com/sudermanjr/asdf-argo"
    },
    "darwin/brew": {
      "cmd": "brew install argo",
      "reference": "https://formulae.brew.sh/formula/argo#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install argo",
      "reference": "https://scoop.sh/#/apps?q=argo"
    }
  },
  "dsnap": {
    "/go": "argo"
  }
}
