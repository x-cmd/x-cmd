{
  "lang": "Rust",
  "homepage": "https://kcl-lang.io/",
  "desc": {
    "cn": "KCL 是一种开源的基于约束的记录和功能语言，主要用于配置和策略场景",
    "en": "KCL is an open-source constraint-based record & functional language mainly used in configuration and policy scenarios"
  },
  "rule": {
    "darwin/curl": {
      "cmd": "curl -fsSL https://kcl-lang.io/script/install-cli.sh | /bin/bash",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#macos"
    },
    "linux/wget": {
      "cmd": "wget -q https://kcl-lang.io/script/install-cli.sh -O - | /bin/bash",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#linux"
    },
    "win/powershell": {
      "cmd": "x pwsh powershell -Command \"iwr -useb https://kcl-lang.io/script/install-cli.ps1 | iex\"",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#windows-1"
    },
    "darwin/brew": {
      "cmd": "brew install kcl-lang/tap/kcl@0.7.0",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#homebrew-macos"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add kcl-lang https://github.com/kcl-lang/scoop-bucket.git \\\n&& x scoop install kcl-lang/kcl\n",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#scoop-windows"
    },
    "/go": {
      "cmd": "go install kcl-lang.io/cli/cmd/kcl@latest",
      "reference": "https://kcl-lang.io/docs/user_docs/getting-started/install#from-go",
      "dsnap": "kcl-lang.io/cli/cmd/kcl@latest"
    }
  },
  "dsnap": {
    "brew": "kcl-lang/tap/kcl@0.7.0",
    "/go": "kcl-lang.io/cli/cmd/kcl@latest"
  }
}
