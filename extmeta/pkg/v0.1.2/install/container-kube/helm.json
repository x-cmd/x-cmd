{
  "homepage": "https://github.com/helm/helm",
  "desc": {
    "cn": "helm 是 Kubernetes 的包管理器",
    "en": "helm is the package manager for Kubernetes"
  },
  "lang": "go",
  "rule": {
    "/asdf": {
      "cmd": "x asdf use helm",
      "reference": "https://github.com/Antiarchitect/asdf-helm"
    },
    "/curl": {
      "cmd": "curl -fsSL -o get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3\n&& chmod 700 get_helm.sh\n&& ./get_helm.sh\n",
      "reference": "https://helm.sh/docs/intro/install/#from-script"
    },
    "darwin/brew": {
      "cmd": "brew install helm",
      "reference": "https://formulae.brew.sh/formula/helm#default"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S helm",
      "reference": "https://command-not-found.com/helm"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install helm",
      "reference": "https://helm.sh/docs/intro/install/#from-dnfyum-fedora"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install helm",
      "reference": "https://helm.sh/docs/intro/install/#from-scoop-windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install kubernetes-helm",
      "reference": "https://helm.sh/docs/intro/install/#from-chocolatey-windows"
    },
    "/snap": {
      "cmd": "sudo snap install helm --classic",
      "reference": "https://helm.sh/docs/intro/install/#from-snap"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install helm",
      "reference": "https://helm.sh/docs/intro/install/#from-pkg-freebsd"
    }
  },
  "dsnap": {
    "/go": "helm"
  }
}
