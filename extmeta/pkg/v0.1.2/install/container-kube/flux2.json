{
  "lang": "Go",
  "homepage": "https://fluxcd.io/",
  "desc": {
    "cn": "Flux 是一套开放、可扩展的 Kubernetes 持续渐进式交付解决方案",
    "en": "Flux is a set of continuous and progressive delivery solutions for Kubernetes that are open and extensible"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install fluxcd/tap/flux",
      "reference": "https://fluxcd.io/flux/installation/#install-the-flux-cli"
    },
    "/curl": {
      "cmd": "curl -s https://fluxcd.io/install.sh | sudo bash",
      "reference": "https://fluxcd.io/flux/installation/#install-the-flux-cli"
    },
    "/nix-env": {
      "cmd": "nix-env -i fluxcd",
      "reference": "https://fluxcd.io/flux/installation/#install-the-flux-cli"
    },
    "/yay": {
      "cmd": "yay -S flux-bin",
      "reference": "https://fluxcd.io/flux/installation/#install-the-flux-cli"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install flux",
      "reference": "https://fluxcd.io/flux/installation/#install-the-flux-cli"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/flux",
      "reference": "https://scoop.sh/#/apps?q=flux"
    },
    "/asdf": {
      "cmd": "x asdf use flux",
      "reference": "https://github.com/tablexi/asdf-flux2?tab=readme-ov-file#install"
    }
  }
}
