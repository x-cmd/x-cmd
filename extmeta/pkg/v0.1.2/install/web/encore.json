{
  "lang": "Go",
  "homepage": "https://encore.dev/",
  "desc": {
    "en": "Encore is the Development Platform that automatically provisions type-safe infrastructure, from developing locally to scaling production in your cloud on AWS/GCP",
    "cn": "Encore 是自动提供类型安全基础设施的开发平台，从本地开发到在 AWS/GCP 上在云中扩展生产"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install encoredev/tap/encore",
      "reference": "https://encore.dev/docs/quick-start#1-install-the-encore-cli"
    },
    "/curl": {
      "cmd": "curl -L https://encore.dev/install.sh | bash",
      "reference": "https://encore.dev/docs/quick-start#1-install-the-encore-cli"
    },
    "win/powershell": {
      "cmd": "x pwsh iwr https://encore.dev/install.ps1 | iex",
      "reference": "https://encore.dev/docs/quick-start#1-install-the-encore-cli"
    }
  },
  "dsnap": {
    "brew": "encore"
  }
}
