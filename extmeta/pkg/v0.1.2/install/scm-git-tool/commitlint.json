{
  "homepage": "https://commitlint.js.org/",
  "lang": "node",
  "desc": {
    "cn": "校验 git commit 提交信息",
    "en": "Lint your git commit messages"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install commitlint",
      "reference": "https://formulae.brew.sh/formula/commitlint#default"
    },
    "win/npm": {
      "cmd": "npm install --save-dev @commitlint/config-conventional @commitlint/cli",
      "reference": "https://commitlint.js.org/#/guides-local-setup?id=install-commitlint"
    }
  },
  "dsnap": {
    "brew": "commitlint",
    "/npm": "@commitlint/config-conventional @commitlint/cli"
  }
}
