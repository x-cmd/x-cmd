{
  "lang": "Go",
  "homepage": "https://github.com/rgburke/grv",
  "desc": {
    "cn": "GRV 是一个基于终端的界面，用于查看 Git 仓库。",
    "en": "GRV is a terminal based interface for viewing Git repositories."
  },
  "rule": {
    "/wget": {
      "cmd": "wget -O grv https://github.com/rgburke/grv/releases/download/v0.3.2/grv_v0.3.2_linux64 && \\\nchmod +x ./grv && \\\n./grv -repoFilePath /path/to/repo\n",
      "reference": "https://github.com/rgburke/grv?tab=readme-ov-file#linux"
    },
    "darwin/brew": {
      "cmd": "brew install grv",
      "reference": "https://github.com/rgburke/grv?tab=readme-ov-file#mac"
    },
    "freebsd/pkg": {
      "cmd": "pkg install grv",
      "reference": "https://github.com/rgburke/grv?tab=readme-ov-file#freebsd"
    }
  },
  "dsnap": {
    "/go": "grv"
  }
}
