{
  "lang": "c",
  "homepage": "https://jonas.github.io/tig/",
  "desc": {
    "cn": "tig 是一个基于 nucurses 的 git 文本模式界面",
    "en": "tig is an ncurses-based text-mode interface for git"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install tig",
      "reference": "https://formulae.brew.sh/formula/tig#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux",
      "dsnap": "tig"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux",
      "dsnap": "tig"
    },
    "alpine/apk": {
      "cmd": "sudo apk add tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux",
      "dsnap": "tig"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux",
      "dsnap": "tig"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-linux"
    },
    "freebsd/pkg": {
      "cmd": "pkg install tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-on-freebsd"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i tig",
      "reference": "https://github.com/jonas/tig/blob/master/INSTALL.adoc#installation-using-nix"
    }
  },
  "dsnap": {
    "brew": "tig",
    "pacman": "tig",
    "pkg": "tig",
    "nix": "tig",
    "fedora/dnf": "tig",
    "alpine/apk": "tig",
    "ubuntu/apt": "tig",
    "debian/apt": "tig"
  }
}
