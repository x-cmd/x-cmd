{
  "lang": "Rust",
  "homepage": "https://github.com/jj-vcs/jj",
  "desc": {
    "cn": "既简单又强大的与 Git 兼容的 VCS",
    "en": "A Git-compatible VCS that is both simple and powerful"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo binstall --strategies crate-meta-data jj-cli",
      "reference": "https://jj-vcs.github.io/jj/latest/install-and-setup/#cargo-binstall",
      "dsnap": "jj-cli"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S jujutsu",
      "reference": "https://jj-vcs.github.io/jj/latest/install-and-setup/#arch-linux"
    },
    "arch/yay": {
      "cmd": "yay -S jujutsu-git",
      "reference": "https://jj-vcs.github.io/jj/latest/install-and-setup/#arch-linux"
    },
    "darwin/brew": {
      "cmd": "brew install jj",
      "reference": "https://jj-vcs.github.io/jj/latest/install-and-setup/#homebrew"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av dev-vcs/jj",
      "reference": "https://jj-vcs.github.io/jj/latest/install-and-setup/#gentoo-linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/jj",
      "reference": "https://scoop.sh/#/apps?q=jj&id=c8cb53bd4c375b583d1517ed887b0fae5e92bbb7"
    }
  },
  "dsnap": {
    "/cargo": "jj-cli"
  }
}
