{
  "lang": "python",
  "homepage": "https://hatch.pypa.io/latest/",
  "desc": {
    "en": "Modern, extensible Python project management",
    "cn": "现代、可扩展的 Python 项目管理"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#pip",
      "dsnap": "hatch"
    },
    "/pipx": {
      "cmd": "pipx install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#pipx"
    },
    "darwin/brew": {
      "cmd": "brew install hatch",
      "reference": "https://formulae.brew.sh/formula/hatch#default"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge hatch",
      "reference": "https://hatch.pypa.io/latest/install/#conda"
    },
    "/mamba": {
      "cmd": "mamba install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#conda"
    },
    "debian/apt": {
      "cmd": "sudo add-apt-repository ppa:tomtomtom/yt-dlp\nsudo apt update\nsudo apt install yt-dlp\n",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#apt"
    },
    "ubuntu/apt": {
      "cmd": "sudo add-apt-repository ppa:tomtomtom/yt-dlp\nsudo apt update\nsudo apt install yt-dlp\n",
      "reference": "https://github.com/yt-dlp/yt-dlp/wiki/Installation#apt"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#fedora",
      "dsnap": "hatch"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#macports"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install hatch",
      "reference": "https://hatch.pypa.io/latest/install/#void-linux"
    }
  },
  "dsnap": {
    "pipx": "hatch",
    "brew": "hatch",
    "conda": "hatch",
    "mamba": "hatch",
    "fedora/dnf": "hatch",
    "darwin/port": "hatch",
    "void/xbps": "hatch",
    "/pip": "hatch"
  }
}
