{
  "lang": "Python",
  "homepage": "https://github.com/pdm-project/pdm",
  "desc": {
    "cn": "pdm 是一个 Python 依赖管理工具，可以让你使用 pyproject.toml 文件来管理项目的依赖和包。它支持多版本的 Python，虚拟环境，插件系统等功能。（python 版本 3.7 或更高版本）",
    "en": "pdm is a Python dependency manager that uses pyproject.toml file to manage project dependencies and packages. It supports multiple Python versions, virtual environments, plugin system and more. (python version 3.7 or higher)"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use pdm",
      "reference": "https://github.com/1oglop1/asdf-pdm"
    },
    "/pipx": {
      "cmd": "pipx install pdm",
      "reference": "https://github.com/pdm-project/pdm?tab=readme-ov-file#alternative-installation-methods"
    },
    "/pip": {
      "cmd": "pip install --user pdm",
      "reference": "https://github.com/pdm-project/pdm?tab=readme-ov-file#alternative-installation-methods"
    },
    "darwin/brew": {
      "cmd": "brew install pdm",
      "reference": "https://github.com/pdm-project/pdm?tab=readme-ov-file#alternative-installation-methods"
    },
    "/curl": {
      "cmd": "curl -sSL https://pdm-project.org/install-pdm.py | python3 -",
      "reference": "https://github.com/pdm-project/pdm?tab=readme-ov-file#via-install-script"
    },
    "(win|wsl2)/powershell": {
      "cmd": "x pwsh (Invoke-WebRequest -Uri https://pdm-project.org/install-pdm.py -UseBasicParsing).Content | python -",
      "reference": "https://github.com/pdm-project/pdm?tab=readme-ov-file#via-install-script"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add frostming https://github.com/frostming/scoop-frostming.git\n&& x scoop install pdm\n",
      "reference": "https://pdm-project.org/latest/#other-installation-methods"
    }
  }
}
