{
  "lang": "python",
  "homepage": "https://python-poetry.org/docs/#installation",
  "desc": {
    "cn": "python 包和依赖管理工具 (python 3.8+)",
    "en": "python package and dependency management tool (python 3.8+)"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use poetry",
      "reference": "https://github.com/asdf-community/asdf-poetry"
    },
    "/pipx": {
      "cmd": "pipx install poetry",
      "reference": "https://python-poetry.org/docs/#installing-with-pipx"
    },
    "darwin/brew": {
      "cmd": "brew install poetry",
      "reference": "https://formulae.brew.sh/formula/poetry#default"
    },
    "/curl": {
      "cmd": "curl -sSL https://install.python-poetry.org | python3 -",
      "reference": "https://python-poetry.org/docs/#installing-with-the-official-installer"
    },
    "win/powershell": {
      "cmd": "x pwsh (Invoke-WebRequest -Uri https://install.python-poetry.org -UseBasicParsing).Content | py -",
      "reference": "https://python-poetry.org/docs/#installing-with-the-official-installer"
    }
  }
}
