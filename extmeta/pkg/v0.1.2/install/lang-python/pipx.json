{
  "lang": "python",
  "homepage": "https://github.com/pypa/pipx",
  "desc": {
    "cn": "在隔离环境中安装和运行 Python 应用程序",
    "en": "Install and Run Python Applications in Isolated Environments"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use pipx",
      "reference": "https://github.com/joe733/asdf-pipx"
    },
    "darwin/brew": {
      "cmd": "brew install pipx",
      "reference": "https://pipx.pypa.io/latest/#on-macos"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install pipx",
      "reference": "https://command-not-found.com/pipx"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install pipx",
      "reference": "https://command-not-found.com/pipx"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install pipx",
      "reference": "https://command-not-found.com/pipx"
    }
  },
  "dsnap": {
    "brew": "pipx"
  }
}
