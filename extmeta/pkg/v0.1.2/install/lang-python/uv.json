{
  "lang": "rust",
  "desc": {
    "cn": "一个用 Rust 开发的极其快速的 Python 包和项目管理器",
    "en": "An extremely fast Python package and project manager, written in Rust."
  },
  "homepage": "https://github.com/astral-sh/uv",
  "rule": {
    "(linux|darwin)/curl": {
      "cmd": "curl -LsSf https://astral.sh/uv/install.sh | sh",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    },
    "win/": {
      "cmd": "powershell -c \"irm https://astral.sh/uv/install.ps1 | iex\"",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    },
    "/pipx": {
      "cmd": "pipx install uv",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    },
    "/pip": {
      "cmd": "pip install uv",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    },
    "/cargo": {
      "cmd": "cargo install uv",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    },
    "/brew": {
      "cmd": "brew install uv",
      "reference": "https://docs.astral.sh/uv/getting-started/installation/#installing-uv"
    }
  }
}
