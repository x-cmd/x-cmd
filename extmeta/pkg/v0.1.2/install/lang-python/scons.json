{
  "lang": "python",
  "homepage": "https://scons.org/",
  "desc": {
    "cn": "SCons 是一个开源软件构建工具",
    "en": "SCons is an Open Source software construction tool"
  },
  "rule": {
    "/pip": {
      "cmd": "python -m pip install scons",
      "reference": "https://scons.org/doc/production/HTML/scons-user.html#sect-install-scons",
      "dsnap": "scons"
    },
    "darwin/brew": {
      "cmd": "brew install scons",
      "reference": "https://formulae.brew.sh/formula/scons#default"
    }
  },
  "dsnap": {
    "brew": "scons",
    "/pip": "scons"
  }
}
