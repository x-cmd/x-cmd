{
  "lang": "python",
  "homepage": "https://github.com/pypa/flit",
  "desc": {
    "en": "Flit is a simple way to put Python packages and modules on PyPI.",
    "cn": "Flit是一种将 Python 包和模块放在 PyPI 上的简单方法"
  },
  "rule": {
    "/pip": {
      "cmd": "python3 -m pip install flit",
      "reference": "https://flit.pypa.io/en/stable/#install",
      "dsnap": "flit"
    },
    "darwin/brew": {
      "cmd": "brew install flit",
      "reference": "https://formulae.brew.sh/formula/flit#default"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install python3-flit",
      "reference": "https://command-not-found.com/flit",
      "dsnap": "flit"
    }
  },
  "dsnap": {
    "brew": "flit",
    "/pip": "flit",
    "fedora/dnf": "flit"
  }
}
