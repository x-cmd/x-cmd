{
  "lang": "haskell",
  "homepage": "https://pandoc.org/",
  "desc": {
    "cn": "一个开源的文档转换工具，支持将多种文档格式相互转换，包括 Markdown、HTML、PDF、DOCX 等",
    "en": "An open-source document conversion tool that supports converting multiple document formats to each other, including Markdown, HTML, PDF, DOCX, and more"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install pandoc",
      "reference": "https://formulae.brew.sh/formula/pandoc#default"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install --source winget --exact --id JohnMacFarlane.Pandoc",
      "reference": "https://pandoc.org/installing.html#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x cchoco install pandoc",
      "reference": "https://pandoc.org/installing.html#windows"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install pandoc",
      "reference": "https://command-not-found.com/pandoc",
      "dsnap": "pandoc"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install pandoc",
      "reference": "https://command-not-found.com/pandoc",
      "dsnap": "pandoc"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S pandoc",
      "reference": "https://command-not-found.com/pandoc"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install pandoc",
      "reference": "https://command-not-found.com/pandoc"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install pandoc",
      "reference": "https://command-not-found.com/pandoc",
      "dsnap": "pandoc"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install pandoc",
      "reference": "https://command-not-found.com/pandoc"
    }
  },
  "dsnap": {
    "brew": "pandoc",
    "winget": "JohnMacFarlane.Pandoc",
    "choco": "pandoc",
    "pacman": "pandoc",
    "fedora/dnf": "pandoc",
    "ubuntu/apt": "pandoc",
    "debian/apt": "pandoc"
  }
}
