{
  "lang": "Lua",
  "homepage": "https://xmake.io/",
  "desc": {
    "cn": "Xmake 是一个基于 Lua 的轻量级跨平台构建工具",
    "en": "Xmake is a cross-platform build utility based on the Lua scripting language"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -fsSL https://xmake.io/shget.text | bash",
      "reference": "https://github.com/xmake-io/xmake?tab=readme-ov-file#with-curl"
    },
    "/wget": {
      "cmd": "wget https://xmake.io/shget.text -O - | bash",
      "reference": "https://github.com/xmake-io/xmake?tab=readme-ov-file#with-wget"
    },
    "win/powershell": {
      "cmd": "Invoke-Expression (Invoke-Webrequest 'https://xmake.io/psget.text' -UseBasicParsing).Content",
      "reference": "https://github.com/xmake-io/xmake?tab=readme-ov-file#with-powershell"
    }
  }
}
