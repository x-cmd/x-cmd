{
  "lang": "Python",
  "homepage": "https://mesonbuild.com/",
  "desc": {
    "cn": "Meson 是一种开源构建系统，既要快，又更重要的是，尽可能用户友好",
    "en": "Meson is an open source build system meant to be both extremely fast, and, even more importantly, as user friendly as possible"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use meson",
      "reference": "https://github.com/asdf-community/asdf-meson"
    },
    "/pip3": {
      "cmd": "pip3 install meson",
      "reference": "https://mesonbuild.com/Quick-guide.html#installation-using-python"
    },
    "darwin/brew": {
      "cmd": "brew install meson",
      "reference": "https://formulae.brew.sh/formula/meson#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install meson",
      "reference": "https://command-not-found.com/meson"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install meson",
      "reference": "https://command-not-found.com/meson"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S meson",
      "reference": "https://command-not-found.com/meson"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install meson",
      "reference": "https://command-not-found.com/meson"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install meson",
      "reference": "https://command-not-found.com/meson"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install meson",
      "reference": "https://command-not-found.com/meson"
    },
    "/pip": {
      "cmd": "python3 -m pip install meson",
      "reference": "https://github.com/mesonbuild/meson?tab=readme-ov-file#installing-from-source"
    }
  }
}
