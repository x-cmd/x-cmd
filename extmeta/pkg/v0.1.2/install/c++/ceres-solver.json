{
  "lang": "c++",
  "homepage": "http://ceres-solver.org/",
  "desc": {
    "cn": "Ceres Solver 是一个开源的 C + + 库，用于建模和解决大型、复杂的优化问题",
    "en": "Ceres Solver is an open source C++ library for modeling and solving large, complicated optimization problems"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install ceres-solver",
      "reference": "http://ceres-solver.org/installation.html#macos"
    },
    "darwin/port": {
      "cmd": "sudo port install ceres-solver",
      "reference": "http://ceres-solver.org/installation.html#macos"
    }
  },
  "dsnap": {
    "brew": "ceres-solver"
  }
}
