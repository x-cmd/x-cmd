{
  "lang": "JavaScript",
  "homepage": "https://github.com/DavidAnson/markdownlint-cli2",
  "desc": {
    "cn": "快速、灵活、基于配置的命令行界面，用于使用 markdownlint 库对 Markdown/CommonMark 文件进行 linting",
    "en": "A fast, flexible, configuration-based command-line interface for linting Markdown/CommonMark files with the markdownlint library"
  },
  "rule": {
    "/npm": {
      "cmd": "npm install markdownlint-cli2 --global",
      "reference": "https://github.com/DavidAnson/markdownlint-cli2?tab=readme-ov-file#install",
      "dsnap": "markdownlint-cli2"
    },
    "darwin/brew": {
      "cmd": "brew install markdownlint-cli2",
      "reference": "https://github.com/DavidAnson/markdownlint-cli2?tab=readme-ov-file#install"
    }
  },
  "dsnap": {
    "brew": "markdownlint-cli2",
    "/npm": "markdownlint-cli2"
  }
}
