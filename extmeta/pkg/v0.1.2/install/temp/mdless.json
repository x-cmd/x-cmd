{
  "lang": "Ruby",
  "homepage": "https://github.com/ttscoff/mdless",
  "desc": {
    "cn": "mdless 是一个实用程序，可提供终端中标记文件的格式化和突出显示的视图",
    "en": "mdless is a utility that provides a formatted and highlighted view of Markdown files in Terminal"
  },
  "rule": {
    "/gem": {
      "cmd": "gem install mdless",
      "reference": "https://github.com/ttscoff/mdless?tab=readme-ov-file#gem-install"
    },
    "darwin/brew": {
      "cmd": "brew install mdless",
      "reference": "https://github.com/ttscoff/mdless?tab=readme-ov-file#homebrew"
    }
  },
  "dsnap": {
    "brew": "mdless"
  }
}
