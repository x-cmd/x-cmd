{
  "lang": "c++",
  "desc": {
    "cn": "笔记本和 Markdown 编辑器",
    "en": "Notebooks and Markdown editors"
  },
  "homepage": "https://github.com/dvorka/mindforger",
  "rule": {
    "debian/apt": {
      "cmd": "sudo apt install mindforger",
      "reference": "https://github.com/dvorka/mindforger/wiki/Installation#debian"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install mindforger",
      "reference": "https://github.com/dvorka/mindforger/wiki/Installation#ubuntu"
    },
    "darwin/brew": {
      "cmd": "brew install mindforger",
      "reference": "https://github.com/dvorka/mindforger/wiki/Installation#macos"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install mindforger-MAJOR.MINOR.REVISION.rpm",
      "reference": "https://github.com/dvorka/mindforger/wiki/Installation#fedora"
    }
  }
}
