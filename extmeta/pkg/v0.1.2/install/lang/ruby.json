{
  "lang": "Ruby",
  "homepage": "https://www.ruby-lang.org/",
  "desc": {
    "cn": "Ruby 是一种解释型的面向对象编程语言，常用于 Web 开发。",
    "en": "Ruby is an interpreted object-oriented programming language often used for web development."
  },
  "rule": {
    "debian/apt": {
      "cmd": "sudo apt-get install ruby-full",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#apt"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install ruby-full",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#apt"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install ruby-full",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#apt"
    },
    "mint/apt": {
      "cmd": "sudo apt-get install ruby-full",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#apt"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install ruby-full",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#apt"
    },
    "centos/yum": {
      "cmd": "sudo yum install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#yum"
    },
    "fedora/yum": {
      "cmd": "sudo yum install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#yum"
    },
    "rhel/yum": {
      "cmd": "sudo yum install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#yum"
    },
    "/snap": {
      "cmd": "sudo snap install ruby --classic",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#snap"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge dev-lang/ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#portage"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#pacman"
    },
    "manjaro/pacman": {
      "cmd": "sudo pacman -S ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#pacman"
    },
    "darwin/brew": {
      "cmd": "brew install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#homebrew"
    },
    "freebsd/pkg": {
      "cmd": "pkg install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#freebsd"
    },
    "openbsd/pkg": {
      "cmd": "doas pkg_add ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#openbsd"
    },
    "openindiana/pkg": {
      "cmd": "pkg install runtime/ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#openindiana"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/ruby",
      "reference": "https://scoop.sh/#/apps?q=ruby&id=91ca43614f32771193826fcb32068d75507885a0"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ruby",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#chocolatey"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install RubyInstallerTeam.Ruby.3.4.1",
      "reference": "https://www.ruby-lang.org/en/documentation/installation/#winget"
    }
  }
}
