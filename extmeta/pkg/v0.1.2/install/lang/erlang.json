{
  "lang": "erlang",
  "homepage": "https://www.erlang.org/",
  "desc": {
    "cn": "Erlang 是一种编程语言，用于构建对高可用性有要求的大规模可扩展软实时系统",
    "en": "Erlang is a programming language used to build massively scalable soft real-time systems with requirements on high availability"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install erlang",
      "reference": "https://formulae.brew.sh/formula/erlang#default"
    },
    "/apt": {
      "cmd": "sudo apt-get install erlang",
      "reference": "https://github.com/erlang/otp?tab=readme-ov-file#binary-distributions"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install erlang",
      "reference": "https://scoop.sh/#/apps?q=erlang"
    }
  },
  "dsnap": {
    "brew": "erlang"
  }
}
