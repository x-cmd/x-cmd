{
  "lang": "Go",
  "homepage": "https://d2lang.com/",
  "desc": {
    "cn": "D2 是一个将文本转换为图表的图表脚本语言，它代表了声明性图表",
    "en": "D2 is a diagram scripting language that turns text to diagrams. It stands for Declarative Diagramming"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -fsSL https://d2lang.com/install.sh | sh -s --",
      "reference": "https://d2lang.com/tour/install#install-script"
    },
    "darwin/brew": {
      "cmd": "brew install d2",
      "reference": "https://formulae.brew.sh/formula/d2#default"
    },
    "/go": {
      "cmd": "go install oss.terrastruct.com/d2",
      "reference": "https://d2lang.com/tour/install#install-from-source"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install d2",
      "reference": "https://scoop.sh/#/apps?q=d2"
    }
  }
}
