{
  "lang": "kotlin",
  "homepage": "https://kotlinlang.org/",
  "desc": {
    "cn": "Kotlin 是一种现代但已经成熟的编程语言，旨在让开发人员更快乐",
    "en": "Kotlin is a modern but already mature programming language designed to make developers happier"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use kotlin",
      "reference": "https://github.com/asdf-community/asdf-kotlin"
    },
    "darwin/brew": {
      "cmd": "brew install kotlin",
      "reference": "https://formulae.brew.sh/formula/kotlin#default"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S kotlin",
      "reference": "https://command-not-found.com/kotlin"
    }
  },
  "dsnap": {
    "brew": "kotlin",
    "pacman": "kotlin"
  }
}
