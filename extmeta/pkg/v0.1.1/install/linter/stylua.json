{
  "lang": "Rust",
  "homepage": "https://github.com/JohnnyMorganz/StyLua",
  "desc": {
    "cn": "Lua 5.1、5.2、5.3、5.4、LuaJIT 和Luau的确定性代码格式化程序，使用full-moon构建",
    "en": "An opinionated code formatter for Lua 5.1, 5.2, 5.3, 5.4 and Luau, built using full-moon"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install stylua",
      "reference": "https://github.com/JohnnyMorganz/StyLua?tab=readme-ov-file#from-cratesio"
    },
    "/npm": {
      "cmd": "npx @johnnymorganz/stylua-bin --help",
      "reference": "https://github.com/JohnnyMorganz/StyLua?tab=readme-ov-file#npm"
    },
    "darwin/brew": {
      "cmd": "brew install stylua",
      "reference": "https://github.com/JohnnyMorganz/StyLua?tab=readme-ov-file#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install stylua",
      "reference": "https://ports.macports.org/port/stylua/"
    },
    "/aftman": {
      "cmd": "aftman add johnnymorganz/stylua@0.14.2",
      "reference": "https://github.com/JohnnyMorganz/StyLua?tab=readme-ov-file#other-installation-methods"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add main && x scoop install main/stylua",
      "reference": "https://scoop.sh/#/apps?q=stylua"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install stylua",
      "reference": "https://community.chocolatey.org/packages/stylua"
    }
  }
}
