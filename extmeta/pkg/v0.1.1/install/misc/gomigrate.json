{
  "lang": "go",
  "homepage": "https://github.com/golang-migrate/migrate",
  "desc": {
    "cn": "(数据库) 数据库迁移工具 (MySQL PostgreSQL SQLite)",
    "en": "Database migrations. CLI and Golang library"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use gomigrate",
      "reference": "https://github.com/joschi/asdf-gomigrate"
    },
    "darwin/brew": {
      "cmd": "brew install golang-migrate",
      "reference": "https://vale.sh/docs/vale-cli/installation/#package-managers"
    },
    "/curl": {
      "cmd": "curl -L https://github.com/golang-migrate/migrate/releases/download/$version/migrate.$os-$arch.tar.gz | tar xvz",
      "reference": "https://github.com/golang-migrate/migrate/tree/master/cmd/migrate#download-pre-built-binary-windows-macos-or-linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install migrate",
      "reference": "https://github.com/golang-migrate/migrate/tree/master/cmd/migrate#windows"
    },
    "/go": {
      "cmd": "go get -tags 'postgres' -u github.com/golang-migrate/migrate/cmd/migrate",
      "reference": "https://github.com/golang-migrate/migrate/tree/master/cmd/migrate#versioned"
    }
  }
}
