{
  "lang": "c",
  "homepage": "https://geoff.greer.fm/ag/",
  "desc": {
    "cn": "类似于 ack 的代码搜索工具，但速度更快",
    "en": "A code-searching tool similar to ack, but faster"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#macos"
    },
    "/port": {
      "cmd": "sudo port install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#macos"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install silversearcher-ag",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install silversearcher-ag",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "rhel/yum": {
      "cmd": "sudo yum install epel-release.noarch the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -a sys-apps/the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "slackware/sbopkg": {
      "cmd": "sudo sbopkg -i the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "centos/yum": {
      "cmd": "sudo yum install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "nix/nixpkgs": {
      "cmd": "sudo nix-env -iA silver-searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#linux"
    },
    "freebsd/pkg": {
      "cmd": "pkg install the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#bsd"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add the_silver_searcher",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#bsd"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install main/ag",
      "reference": "https://scoop.sh/#/apps?q=ag"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ag",
      "reference": "https://community.chocolatey.org/packages/discord"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install \"The Silver Searcher\"",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#windows"
    },
    "win/msys2": {
      "cmd": "sudo pacman -S mingw-w64-{i686,x86_64}-ag",
      "reference": "https://github.com/ggreer/the_silver_searcher?tab=readme-ov-file#windows"
    }
  }
}
