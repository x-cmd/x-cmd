{
  "lang": "rust",
  "homepage": "https://github.com/sharkdp/diskus",
  "desc": {
    "cn": "Diskus 是一个非常简单的计算工作目录总大小的程序",
    "en": "Diskus is a very simple program that computes the total size of the current directory"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install diskus",
      "reference": "https://github.com/sharkdp/diskus?tab=readme-ov-file#via-cargo"
    },
    "darwin/brew": {
      "cmd": "brew install diskus",
      "reference": "https://github.com/sharkdp/diskus?tab=readme-ov-file#on-macos"
    },
    "nix/": {
      "cmd": "nix-env -iA nixos.diskus",
      "reference": "https://github.com/sharkdp/diskus?tab=readme-ov-file#on-nixos"
    },
    "debian/wget": {
      "cmd": "wget \"https://github.com/sharkdp/diskus/releases/download/v0.7.0/diskus_0.7.0_amd64.deb\"\nsudo dpkg -i diskus_0.7.0_amd64.deb\n",
      "reference": "https://github.com/sharkdp/diskus?tab=readme-ov-file#on-debian-based-systems"
    },
    "/pacman": {
      "cmd": "pacman -S diskus",
      "reference": "https://github.com/sharkdp/diskus?tab=readme-ov-file#on-arch-based-systems"
    }
  }
}
