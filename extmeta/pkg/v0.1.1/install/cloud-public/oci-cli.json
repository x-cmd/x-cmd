{
  "lang": "python",
  "homepage": "https://github.com/oracle/oci-cli",
  "desc": {
    "cn": "Oracle 云基础设施的命令行界面",
    "en": "Command Line Interface for Oracle Cloud Infrastructure"
  },
  "rule": {
    "/pip3": {
      "cmd": "pip install oci-cli",
      "reference": "https://pypi.org/project/oci-cli"
    },
    "darwin/brew": {
      "cmd": "brew install oci-cli",
      "reference": "https://github.com/oracle/oci-cli#mac-os-x"
    },
    "linux/curl": {
      "cmd": "bash -c \"$(curl -L https://raw.githubusercontent.com/oracle/oci-cli/master/scripts/install/install.sh)\"",
      "reference": "https://github.com/oracle/oci-cli#linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install oci-cli",
      "reference": "https://github.com/oracle/oci-cli#fedora-linux"
    },
    "oracle/yum": {
      "cmd": "sudo yum install python36-oci-cli",
      "reference": "https://github.com/oracle/oci-cli#oracle-linux-7"
    },
    "win/powershell": {
      "cmd": "x pwsh powershell -NoProfile -ExecutionPolicy Bypass -Command \"iex ((New-Object System.Net.WebClient).DownloadString('https://raw.githubusercontent.com/oracle/oci-cli/master/scripts/install/install.ps1'))\"",
      "reference": "https://github.com/oracle/oci-cli#windows"
    }
  }
}
