{
  "lang": "javascript",
  "desc": {
    "cn": "Heroku CLI 用于从命令行管理 Heroku 应用程序",
    "en": "Heroku CLI for managing Heroku applications from the command line"
  },
  "homepage": "https://github.com/heroku/cli",
  "rule": {
    "/curl": {
      "cmd": "curl https://cli-assets.heroku.com/install.sh | sh",
      "reference": "https://github.com/heroku/cli"
    },
    "darwin/brew": {
      "cmd": "brew tap heroku/brew && brew install heroku",
      "reference": "https://github.com/heroku/cli"
    },
    "win/choco": {
      "cmd": "choco install heroku-cli",
      "reference": "https://github.com/heroku/cli"
    }
  }
}
