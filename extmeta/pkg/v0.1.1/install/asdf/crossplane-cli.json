{
  "lang": "Go",
  "homepage": "https://www.crossplane.io/",
  "desc": {
    "cn": "Crossplane 是一个构建云本地控制平面的框架，不需要编写代码",
    "en": "Crossplane is a framework for building cloud native control planes without needing to write code"
  },
  "rule": {
    "/helm": {
      "cmd": "helm repo add crossplane-stable https://charts.crossplane.io/stable",
      "reference": "https://docs.crossplane.io/latest/software/install/"
    },
    "/asdf": {
      "cmd": "x asdf use crossplane-cli",
      "reference": "https://github.com/joke/asdf-crossplane-cli?tab=readme-ov-file#install"
    }
  }
}
