{
  "lang": "ruby",
  "homepage": "https://asciidoctor.org/",
  "desc": {
    "cn": "Asciidoctor 是一个快速、开源、基于 Ruby 的文本处理器",
    "en": "Asciidoctor is a fast, open source, Ruby-based text processor"
  },
  "rule": {
    "alpine/apk": {
      "cmd": "sudo apk add asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#apk-alpine-linux"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#apk-alpine-linux"
    },
    "/apt": {
      "cmd": "sudo apt-get install -y asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#apt"
    },
    "/dnf": {
      "cmd": "sudo dnf install -y asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#dnf"
    },
    "darwin/brew": {
      "cmd": "brew install asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#macports"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ruby",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#chocolatey"
    },
    "/gem": {
      "cmd": "gem install asciidoctor",
      "reference": "https://github.com/asciidoctor/asciidoctor?tab=readme-ov-file#gem-install"
    }
  }
}
