{
  "lang": "Go",
  "homepage": "https://gohugo.io/",
  "desc": {
    "cn": "Hugo 是一个用 Go 编写的静态站点生成器",
    "en": "Hugo is a static site generator written in Go"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install hugo",
      "reference": "https://gohugo.io/installation/macos/#homebrew"
    },
    "darwin/port": {
      "cmd": "sudo port install hugo",
      "reference": "https://gohugo.io/installation/macos/#macports"
    },
    "/snap": {
      "cmd": "sudo snap install hugo",
      "reference": "https://gohugo.io/installation/linux/#snap"
    },
    "alpine/apk": {
      "cmd": "doas apk add --no-cache --repository=https://dl-cdn.alpinelinux.org/alpine/edge/community hugo",
      "reference": "https://gohugo.io/installation/linux/#alpine-linux"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S hugo",
      "reference": "https://gohugo.io/installation/linux/#arch-linux"
    },
    "debian/apt": {
      "cmd": "sudo apt install hugo",
      "reference": "https://gohugo.io/installation/linux/#debian"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install hugo",
      "reference": "https://gohugo.io/installation/linux/#fedora"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install hugo",
      "reference": "https://gohugo.io/installation/linux/#opensuse"
    },
    "solus/eopkg": {
      "cmd": "sudo eopkg install hugo",
      "reference": "https://gohugo.io/installation/linux/#solus"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install hugo-extended",
      "reference": "https://gohugo.io/installation/windows/#scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install hugo-extended",
      "reference": "https://gohugo.io/installation/windows/#chocolatey"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Hugo.Hugo.Extended",
      "reference": "https://gohugo.io/installation/windows/#winget"
    },
    "dragonflybsd/pkg": {
      "cmd": "sudo pkg install gohugo",
      "reference": "https://gohugo.io/installation/bsd/#dragonfly-bsd"
    },
    "freebsd/pkg": {
      "cmd": "sudo pkg install gohugo",
      "reference": "https://gohugo.io/installation/bsd/#freebsd"
    },
    "openbsd/pkg_add": {
      "cmd": "doas pkg_add hugo",
      "reference": "https://gohugo.io/installation/bsd/#openbsd"
    },
    "netbsd/pkgin": {
      "cmd": "sudo pkgin install go-hugo",
      "reference": "https://gohugo.io/installation/bsd/#netbsd"
    }
  }
}
