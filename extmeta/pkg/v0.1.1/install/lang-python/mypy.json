{
  "lang": "python",
  "homepage": "https://www.mypy-lang.org",
  "desc": {
    "cn": "一个可选的静态类型检查器，它将 Python 代码转换为有效的 Python 3.5+代码，使用类型注释或类型推断来帮助发现代码中的错误",
    "en": "An optional static type checker for Python that aims to combine the benefits of dynamic (or \"duck\") typing and static typing"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install -U mypy",
      "reference": "https://github.com/python/mypy?tab=readme-ov-file#quick-start"
    },
    "darwin/brew": {
      "cmd": "brew install mypy",
      "reference": "https://formulae.brew.sh/formula/mypy#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install mypy",
      "reference": "https://command-not-found.com/mypy"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install mypy",
      "reference": "https://command-not-found.com/mypy"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S mypy",
      "reference": "https://command-not-found.com/mypy"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install mypy",
      "reference": "https://command-not-found.com/mypy"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install mypy",
      "reference": "https://command-not-found.com/mypy"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install mypy",
      "reference": "https://command-not-found.com/mypy"
    }
  }
}
