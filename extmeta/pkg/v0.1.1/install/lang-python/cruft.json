{
  "homepage": "https://github.com/cruft/cruft",
  "lang": "python",
  "desc": {
    "cn": "用于将打包和构建项目所必需的内容与其他代码分开（基于 CookieCutter）",
    "en": "Allows you to maintain all the necessary cruft for packaging and building projects separate from the code you intentionally write. Built on-top of CookieCutter."
  },
  "rule": {
    "/pip3": {
      "cmd": "pip3 install cruft",
      "reference": "https://cruft.github.io/cruft/#installation"
    },
    "/poetry": {
      "cmd": "poetry add cruft",
      "reference": "https://cruft.github.io/cruft/#installation"
    },
    "/pipenv": {
      "cmd": "pipenv install cruft",
      "reference": "https://cruft.github.io/cruft/#installation"
    },
    "darwin/brew": {
      "cmd": "brew install cruft",
      "reference": "https://formulae.brew.sh/formula/cruft#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install cruft",
      "reference": "https://command-not-found.com/cruft"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install cruft",
      "reference": "https://command-not-found.com/cruft"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install cruft",
      "reference": "https://command-not-found.com/cruft"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install cruft",
      "reference": "https://command-not-found.com/cruft"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install extras/cruft",
      "reference": "https://scoop.sh/#/apps?q=cruft"
    }
  }
}
