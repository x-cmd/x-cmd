{
  "lang": "rust",
  "desc": {
    "cn": "用于在控制台中显示好看的 ANSI 字体",
    "en": "A pretty ANSI font for the console"
  },
  "homepage": "https://github.com/dominikwilkowski/cfonts",
  "rule": {
    "darwin/brew": {
      "cmd": "brew install cfonts",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#homebrew"
    },
    "arch/yay": {
      "cmd": "yay -S cfonts",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#arch-user-repository"
    },
    "darwin/port": {
      "cmd": "sudo port install cfonts",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#macports"
    },
    "/cargo": {
      "cmd": "cargo install cfonts",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#cargo"
    },
    "/npm": {
      "cmd": "npm i cfonts -g",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#nodejs-1"
    },
    "/yarn": {
      "cmd": "yarn global add cfonts",
      "reference": "https://github.com/dominikwilkowski/cfonts?tab=readme-ov-file#yarn"
    }
  }
}
