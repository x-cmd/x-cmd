{
  "lang": "go",
  "homepage": "https://ohmyposh.dev/",
  "desc": {
    "cn": "Oh My Posh 是一个自定义提示引擎，可以用函数或变量来调整提示字符串",
    "en": "Oh My Posh is a custom prompt engine for any shell that has the ability to adjust the prompt string with a function or variable"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -s https://ohmyposh.dev/install.sh | bash -s",
      "reference": "https://ohmyposh.dev/docs/installation/linux"
    },
    "darwin/brew": {
      "cmd": "brew install jandedobbeleer/oh-my-posh/oh-my-posh",
      "reference": "https://ohmyposh.dev/docs/installation/linux"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install JanDeDobbeleer.OhMyPosh -s winget",
      "reference": "https://ohmyposh.dev/docs/installation/windows"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install https://github.com/JanDeDobbeleer/oh-my-posh/releases/latest/download/oh-my-posh.json",
      "reference": "https://ohmyposh.dev/docs/installation/windows"
    },
    "win/powershell": {
      "cmd": "x pwsh Set-ExecutionPolicy Bypass -Scope Process -Force; Invoke-Expression ((New-Object System.Net.WebClient).DownloadString('https://ohmyposh.dev/install.ps1'))",
      "reference": "https://ohmyposh.dev/docs/installation/windows"
    }
  }
}
