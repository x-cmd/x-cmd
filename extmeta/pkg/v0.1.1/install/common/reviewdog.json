{
  "lang": "go",
  "desc": {
    "cn": "reviewdog 提供了一种通过轻松与任何 linter 工具集成来自动将审阅评论发布到代码托管服务（例如 GitHub）的方法",
    "en": "reviewdog provides a way to post review comments to code hosting services, such as GitHub, automatically by integrating with any linter tools with ease"
  },
  "homepage": "https://github.com/reviewdog/reviewdog",
  "rule": {
    "/curl": {
      "cmd": "curl -sfL https://raw.githubusercontent.com/reviewdog/reviewdog/master/install.sh | sh -s",
      "reference": "https://github.com/reviewdog/reviewdog?tab=readme-ov-file#installation"
    },
    "darwin/brew": {
      "cmd": "brew install reviewdog/tap/reviewdog",
      "reference": "https://github.com/reviewdog/reviewdog?tab=readme-ov-file#installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install reviewdog",
      "reference": "https://github.com/reviewdog/reviewdog?tab=readme-ov-file#installation"
    }
  }
}
