{
  "lang": "c",
  "homepage": "https://cairographics.org/",
  "desc": {
    "cn": "Cairo 是一个支持多种输出设备的 2D 图形库",
    "en": "Cairo is a 2D graphics library with support for multiple output devices"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install cairo",
      "reference": "https://formulae.brew.sh/formula/cairo#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install libcairo2-dev",
      "reference": "https://cairographics.org/download/"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install libcairo2-dev",
      "reference": "https://cairographics.org/download/"
    },
    "fedora/yum": {
      "cmd": "sudo yum install cairo-devel",
      "reference": "https://cairographics.org/download/"
    },
    "opensue/zypper": {
      "cmd": "sudo zypper install cairo-devel",
      "reference": "https://cairographics.org/download/"
    },
    "darwin/port": {
      "cmd": "sudo port install cairo",
      "reference": "https://cairographics.org/download/"
    }
  }
}
