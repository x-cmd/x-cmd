{
  "lang": "python",
  "homepage": "https://asciinema.org",
  "desc": {
    "cn": "asciinema 是用于记录终端会话并将其共享到网络上的 CLI 工具",
    "en": "asciinema is a suite of tools for recording, replaying, and sharing terminal sessions."
  },
  "rule": {
    "/pip": {
      "cmd": "python3 -m pip install asciinema",
      "reference": "https://github.com/asciinema/asciinema#installation"
    },
    "/pip3": {
      "cmd": "sudo pip3 install asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-via-pip"
    },
    "/pipx": {
      "cmd": "pipx install asciinema",
      "reference": "https://github.com/asciinema/asciinema#installation"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "fedora/yum": {
      "cmd": "sudo yum install asciinema",
      "reference": "hhttps://asciinema.org/docs/installation#installing-on-linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install zypper in asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-add-repository ppa:zanchey/asciinema && \\\nsudo apt-get update  && \\\nsudo apt-get install asciinema\n",
      "reference": "https://asciinema.org/docs/installation#installing-on-linux"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install asciinema",
      "reference": "hhttps://command-not-found.com/asciinema"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install asciinema",
      "reference": "hhttps://command-not-found.com/asciinema"
    },
    "alpine/apk": {
      "cmd": "sudo apk add asciinema",
      "reference": "https://command-not-found.com/asciinema"
    },
    "darwin/brew": {
      "cmd": "brew install asciinema",
      "reference": "https://formulae.brew.sh/formula/asciinema#default"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-macos"
    },
    "darwin/nix": {
      "cmd": "nix-env -i asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-macos"
    },
    "freebsd/pkg": {
      "cmd": "pkg install py39-asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-freebsd"
    },
    "freebsd/ports": {
      "cmd": "cd /usr/ports/textproc/py-asciinema \\\n&& make install\n",
      "reference": "https://asciinema.org/docs/installation#installing-on-freebsd"
    },
    "openbsd/pkg_add": {
      "cmd": "pkg_add asciinema",
      "reference": "https://asciinema.org/docs/installation#installing-on-openbsd"
    }
  }
}
