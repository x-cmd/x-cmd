      "cmd": "sudo gem install kramdown",
      "reference": "https://kramdown.gettalong.org/installation.html"
    },
    "darwin/gem": {
      "cmd": "sudo gem install kramdown",
      "reference": "https://kramdown.gettalong.org/installation.html"
    },
    "win/gem": {
      "cmd": "sudo gem install kramdown",
      "reference": "https://kramdown.gettalong.org/installation.html"
    }
  }
