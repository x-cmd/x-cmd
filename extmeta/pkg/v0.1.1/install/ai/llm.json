{
  "lang": "Python",
  "homepage": "https://github.com/simonw/llm",
  "desc": {
    "cn": "用于与大语言模型进行交互的 CLI",
    "en": "Access large language models from the command-line"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install llm",
      "reference": "https://llm.datasette.io/en/stable/setup.html#installation"
    },
    "/pipx": {
      "cmd": "pipx install llm",
      "reference": "https://llm.datasette.io/en/stable/setup.html#installation"
    },
    "darwin/brew": {
      "cmd": "brew install llm",
      "reference": "https://formulae.brew.sh/formula/llm#default"
    }
  }
}
