{
  "lang": "Go",
  "homepage": "https://ollama.com/",
  "desc": {
    "cn": "启动并运行 Llama 2、 Mistral 和其他大型语言模型",
    "en": "Get up and running with Llama 2, Mistral, and other large language models"
  },
  "rule": {
    "darwin/": {
      "cmd": "x ollama install",
      "reference": "https://ollama.com/download"
    },
    "linux/": {
      "cmd": "x ollama install",
      "reference": "https://ollama.com/download"
    },
    "linux/curl": {
      "cmd": "curl -fsSL https://ollama.com/install.sh | sh",
      "reference": "https://github.com/ollama/ollama?tab=readme-ov-file#linux"
    },
    "darwin/brew": {
      "cmd": "brew install ollama",
      "reference": "https://formulae.brew.sh/formula/ollama#default"
    }
  }
}
