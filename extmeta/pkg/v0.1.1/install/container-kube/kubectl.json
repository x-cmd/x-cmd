{
  "lang": "go",
  "homepage": "https://github.com/kubernetes/kubectl",
  "desc": {
    "cn": "kubectl 是 Kubernetes 命令行工具",
    "en": "kubectl is the Kubernetes command-line tool"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use kubectl",
      "reference": "https://github.com/asdf-community/asdf-kubectl"
    },
    "linux/snap": {
      "cmd": "sudo snap install kubectl --classic",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-linux/#install-using-other-package-management"
    },
    "linux/brew": {
      "cmd": "brew install kubectl",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-linux/#install-using-other-package-management"
    },
    "darwin/brew": {
      "cmd": "brew install kubectl",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-macos/#install-with-homebrew-on-macos"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install kubectl",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-macos/#install-with-macports-on-macos"
    },
    "win/powershell": {
      "cmd": "x pwsh curl.exe -LO \"https://dl.k8s.io/release/v1.28.2/bin/windows/amd64/kubectl.exe\"",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-windows/"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install kubernetes-cli",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-windows/"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install kubectl",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-windows/"
    },
    "win/winget": {
      "cmd": "x winget install -e --id Kubernetes.kubectl",
      "reference": "https://kubernetes.io/docs/tasks/tools/install-kubectl-windows/"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install kubernetes-client",
      "reference": "https://command-not-found.com/kubectl"
    },
    "centos/yum": {
      "cmd": "sudo yum install kubernetes-client",
      "reference": "https://command-not-found.com/kubectl"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install kubernetes-client",
      "reference": "https://command-not-found.com/kubectl"
    }
  }
}
