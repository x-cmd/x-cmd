{
  "lang": "Go",
  "homepage": "https://azure.github.io/kubelogin/",
  "desc": {
    "cn": "kubelogin 是一个实现 azure 身份验证的客户端凭证 (exec) 插件",
    "en": "kubelogin is a client-go credential (exec) plugin implementing azure authentication"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install Azure/kubelogin/kubelogin",
      "reference": "https://azure.github.io/kubelogin/install.html#homebrew"
    },
    "/asdf": {
      "cmd": "x asdf use kubelogin",
      "reference": "https://azure.github.io/kubelogin/install.html#linux"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install kubectl azure-kubelogin",
      "reference": "https://azure.github.io/kubelogin/install.html#using-scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install kubernetes-cli azure-kubelogin",
      "reference": "https://azure.github.io/kubelogin/install.html#using-chocolatey"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install --id=Kubernetes.kubectl  -e \\\n&& x winget install --id=Microsoft.Azure.Kubelogin  -e\n",
      "reference": "https://azure.github.io/kubelogin/install.html#using-winget"
    }
  }
}
