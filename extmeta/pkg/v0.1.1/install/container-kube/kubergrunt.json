{
  "lang": "Go",
  "homepage": "https://github.com/gruntwork-io/kubergrunt",
  "desc": {
    "cn": "Kubergrunt 是一个独立的 go 二进制文件，包含一系列命令来填补 Terraform、Helm 和 Kubectl 之间的空白",
    "en": "Kubergrunt is a standalone go binary with a collection of commands to fill in the gaps between Terraform, Helm, and Kubectl"
  },
  "rule": {
    "/gruntwork": {
      "cmd": "gruntwork-install --binary-name \"kubergrunt\" --repo \"https://github.com/gruntwork-io/kubergrunt\" --tag \"v0.5.13\"",
      "reference": "https://github.com/gruntwork-io/kubergrunt?tab=readme-ov-file#installation"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install kubergrunt",
      "reference": "https://github.com/gruntwork-io/kubergrunt?tab=readme-ov-file#3rd-party-package-managers"
    },
    "/go": {
      "cmd": "go build -o bin/kubergrunt ./cmd",
      "reference": "https://github.com/gruntwork-io/kubergrunt?tab=readme-ov-file#building-from-source"
    },
    "/asdf": {
      "cmd": "x asdf use kubergrunt",
      "reference": "https://github.com/NeoHsu/asdf-kubergrunt?tab=readme-ov-file#install"
    }
  }
}
