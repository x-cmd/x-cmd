{
  "lang": "Rust",
  "homepage": "https://github.com/altsem/gitu",
  "desc": {
    "cn": "受 Magit 启发的 TUI Git 客户端",
    "en": "A TUI Git client inspired by Magit"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install gitu --locked",
      "reference": "https://github.com/altsem/gitu/blob/master/docs/installing.md#using-cargo"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S gitu",
      "reference": "https://github.com/altsem/gitu/blob/master/docs/installing.md#arch-linux"
    },
    "darwin/brew": {
      "cmd": "brew install gitu",
      "reference": "https://formulae.brew.sh/formula/gitu#default"
    }
  }
}
