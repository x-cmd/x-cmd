{
  "lang": "rust",
  "homepage": "https://crates.io/crates/git-absorb",
  "desc": {
    "cn": "git absorb 会自动识别哪些提交是可以安全修改的，哪些阶段性更改属于每个提交。然后它将编写修复程序",
    "en": "git absorb will automatically identify which commits are safe to modify, and which staged changes belong to each of those commits. It will then write fixup"
  },
  "rule": {
    "/cargo": {
      "cmd": "cargo install git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#compiling-from-source"
    },
    "darwin/brew": {
      "cmd": "brew install git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#installing"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#installing"
    },
    "debian/apt": {
      "cmd": "sudo apt install git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#installing"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#installing"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install git-absorb",
      "reference": "https://github.com/tummychow/git-absorb?tab=readme-ov-file#installing"
    }
  }
}
