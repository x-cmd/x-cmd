{
  "lang": "rust",
  "desc": {
    "cn": "命令行 Git 信息工具",
    "en": "Command-line Git information tool"
  },
  "homepage": "https://github.com/o2sh/onefetch",
  "rule": {
    "/cargo": {
      "cmd": "cargo install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "/snap": {
      "cmd": "snap install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "/build": {
      "cmd": "git clone https://github.com/o2sh/onefetch\n&& cd onefetch\n&& make install\n",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "alpine/apk": {
      "cmd": "apk update; apk add onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "arch/pacman": {
      "cmd": "pacman -S onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf copr enable varlad/onefetch\nsudo dnf install onefetch\n",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "freebsd/pkg": {
      "cmd": "pkg install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "funtoo/emerge": {
      "cmd": "emerge app-misc/onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "darwin/brew": {
      "cmd": "brew install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "netbsd/pkg_add": {
      "cmd": "pkg_add onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "/nix-env": {
      "cmd": "nix-env -i onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "opensuse/zypper": {
      "cmd": "zypper install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "ubuntu/apt": {
      "cmd": "sudo add-apt-repository ppa:o2sh/onefetch && \\\nsudo apt-get update && \\\nsudo apt-get install onefetch\n",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install -S onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras\n&& x scoop install onefetch\n",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install onefetch",
      "reference": "https://github.com/o2sh/onefetch/wiki/Installation"
    }
  }
}
