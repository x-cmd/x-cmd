{
  "lang": "go",
  "homepage": "https://github.com/evilmartians/lefthook",
  "desc": {
    "cn": "快速而强大的 Git hooks 管理器适用于任何类型的项目",
    "en": "Fast and powerful Git hooks manager for any type of projects"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use lefthook",
      "reference": "https://github.com/jtzero/asdf-lefthook"
    },
    "darwin/brew": {
      "cmd": "brew install lefthook",
      "reference": "https://formulae.brew.sh/formula/lefthook#default"
    },
    "ubuntu/apt": {
      "cmd": "curl -1sLf 'https://dl.cloudsmith.io/public/evilmartians/lefthook/setup.deb.sh' | sudo -E bash\n&& sudo apt install lefthook\n",
      "reference": "https://formulae.brew.sh/formula/lefthook#default"
    },
    "debian/apt": {
      "cmd": "curl -1sLf 'https://dl.cloudsmith.io/public/evilmartians/lefthook/setup.deb.sh' | sudo -E bash\n&& sudo apt install lefthook\n",
      "reference": "https://formulae.brew.sh/formula/lefthook#default"
    },
    "fedora/yum": {
      "cmd": "curl -1sLf 'https://dl.cloudsmith.io/public/evilmartians/lefthook/setup.rpm.sh' | sudo -E bash\n&& sudo yum install lefthook\n",
      "reference": "https://formulae.brew.sh/formula/lefthook#default"
    },
    "centos/yum": {
      "cmd": "curl -1sLf 'https://dl.cloudsmith.io/public/evilmartians/lefthook/setup.rpm.sh' | sudo -E bash\n&& sudo yum install lefthook\n",
      "reference": "https://formulae.brew.sh/formula/lefthook#default"
    },
    "/npm": {
      "cmd": "npm install lefthook --save-dev",
      "reference": "https://github.com/evilmartians/lefthook/blob/master/docs/install.md"
    },
    "/pip": {
      "cmd": "python3 -m pip install --user lefthook",
      "reference": "https://github.com/evilmartians/lefthook/blob/master/docs/install.md"
    },
    "/snap": {
      "cmd": "snap install --classic lefthook",
      "reference": "https://github.com/evilmartians/lefthook/blob/master/docs/install.md"
    },
    "arch/yay": {
      "cmd": "sudo yay -S lefthook",
      "reference": "https://github.com/evilmartians/lefthook/blob/master/docs/install.md"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install lefthook",
      "reference": "https://scoop.sh/#/apps?q=lefthook"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install evilmartians.lefthook",
      "reference": "https://github.com/evilmartians/lefthook/blob/master/docs/install.md#-winget-for-windows"
    }
  }
}
