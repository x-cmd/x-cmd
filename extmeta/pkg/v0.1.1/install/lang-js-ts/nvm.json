{
  "lang": "shell",
  "homepage": "https://github.com/nvm-sh",
  "desc": {
    "cn": "nvm 是 Node.js 的版本管理器，设计为按用户安装并按 shell 调用",
    "en": "nvm is a version manager for node.js, designed to be installed per-user, and invoked per-shell"
  },
  "rule": {
    "/curl": {
      "cmd": "curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.0/install.sh | bash",
      "reference": "https://github.com/nvm-sh/nvm#install--update-script"
    },
    "/wget": {
      "cmd": "wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.5/install.sh | bash",
      "reference": "https://github.com/nvm-sh/nvm#install--update-script"
    }
  }
}
