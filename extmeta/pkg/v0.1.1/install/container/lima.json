{
  "lang": "go",
  "homepage": "https://lima-vm.io/",
  "desc": {
    "cn": "Lima 启动具有自动文件共享和端口转发功能的 Linux 虚拟机(类似于 WSL2)",
    "en": "Lima launches Linux virtual machines with automatic file sharing and port forwarding (similar to WSL2)"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use lima",
      "reference": "https://github.com/CrouchingMuppet/asdf-lima"
    },
    "darwin/brew": {
      "cmd": "brew install lima",
      "reference": "https://github.com/lima-vm/lima?tab=readme-ov-file#getting-started"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install lima",
      "reference": "https://lima-vm.io/docs/installation/"
    },
    "/nixpkgs": {
      "cmd": "nix-env -i lima",
      "reference": "https://lima-vm.io/docs/installation/"
    }
  }
}
