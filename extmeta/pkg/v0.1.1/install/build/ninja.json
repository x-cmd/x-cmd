{
  "lang": "C++",
  "homepage": "https://ninja-build.org/",
  "desc": {
    "cn": "Ninja 是一个注重速度的小型构建系统",
    "en": "Ninja is a small build system with a focus on speed"
  },
  "rule": {
    "arch/pacman": {
      "cmd": "sudo pacman -S ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install ninja-build",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install ninja-build",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install ninja-build",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge dev-util/ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper in ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "alpine/apk": {
      "cmd": "sudo apk add ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install -S ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#linux"
    },
    "darwin/brew": {
      "cmd": "brew install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#mac"
    },
    "darwin/port": {
      "cmd": "sudo port install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#mac"
    },
    "freebsd/pkg": {
      "cmd": "pkg install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#freebsd"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#windows"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#windows"
    },
    "/conda": {
      "cmd": "conda install -c conda-forge ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#user-level-package-managers"
    },
    "/pip": {
      "cmd": "python -m pip install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#user-level-package-managers"
    },
    "/spack": {
      "cmd": "spack install ninja",
      "reference": "https://github.com/ninja-build/ninja/wiki/Pre-built-Ninja-packages#user-level-package-managers"
    }
  }
}
