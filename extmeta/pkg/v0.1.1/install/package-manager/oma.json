    },
    "debian/apt": {
      "cmd": "sudo apt install oma",
      "reference": "https://github.com/aosc-dev/oma"
    },
    "kali/apt": {
      "cmd": "sudo apt install oma",
      "reference": "https://github.com/aosc-dev/oma"
    }
  }
}
