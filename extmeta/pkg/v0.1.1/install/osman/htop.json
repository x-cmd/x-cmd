{
  "lang": "C",
  "homepage": "https://htop.dev/",
  "desc": {
    "cn": "htop 是一个跨平台的交互式进程查看器。",
    "en": "htop is a cross-platform interactive process viewer."
  },
  "rule": {
    "gobol/": {
      "cmd": "Compile htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "debian/apt": {
      "cmd": "sudo apt install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "kali/apt": {
      "cmd": "sudo apt install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "raspbian/apt": {
      "cmd": "sudo apt install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "mint/apt": {
      "cmd": "sudo apt install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge sys-process/htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S htop",
      "reference": "https://htop.dev/downloads.html#binaries"
    },
    "darwin/brew": {
      "cmd": "brew install htop",
      "reference": "https://formulae.brew.sh/formula/htop#default"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper install htop",
      "reference": "https://software.opensuse.org//download.html?project=openSUSE%3AFactory&package=htop"
    }
  }
}
