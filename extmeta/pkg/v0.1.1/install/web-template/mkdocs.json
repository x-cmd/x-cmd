{
  "lang": "python",
  "homepage": "https://github.com/mkdocs/mkdocs",
  "desc": {
    "cn": "MkDocs 是一个快速、简单、华丽的静态站点生成器，适用于构建项目文档",
    "en": "MkDocs is a fast, simple and downright gorgeous static site generator that's geared towards building project documentation"
  },
  "rule": {
    "/pip": {
      "cmd": "pip install mkdocs",
      "reference": "https://www.mkdocs.org/getting-started/#installation"
    },
    "darwin/brew": {
      "cmd": "brew install mkdocs",
      "reference": "https://formulae.brew.sh/formula/mkdocs#default"
    },
    "win/pip": {
      "cmd": "python -m pip install mkdocs",
      "reference": "https://www.mkdocs.org/user-guide/installation/#installing-mkdocs"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install mkdocs",
      "reference": "https://command-not-found.com/mkdocs"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install mkdocs",
      "reference": "https://command-not-found.com/mkdocs"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install mkdocs",
      "reference": "https://command-not-found.com/mkdocs"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install mkdocs",
      "reference": "https://command-not-found.com/mkdocs"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install mkdocs",
      "reference": "https://community.chocolatey.org/packages/mkdocs"
    }
  }
}
