{
  "lang": "C++",
  "homepage": "https://thrift.apache.org/",
  "desc": {
    "cn": "Thrift 是一个轻量级的、独立于语言的用于点对点 RPC 实现的软件栈",
    "en": "Thrift is a lightweight, language-independent software stack for point-to-point RPC implementation"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use thrift",
      "reference": "https://github.com/alisaifee/asdf-thrift"
    },
    "darwin/brew": {
      "cmd": "brew install thrift",
      "reference": "https://formulae.brew.sh/formula/thrift#default"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install thrift",
      "reference": "https://scoop.sh/#/apps?q=thrift"
    }
  }
}
