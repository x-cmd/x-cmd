{
  "lang": "c#",
  "homepage": "https://github.com/microsoft/PowerToys",
  "desc": {
    "en": "Microsoft PowerToys is a set of utilities for power users to tune and streamline their Windows experience for greater productivity",
    "cn": "MicrosoftPowerToys 是一组工具，供高级用户优化和简化 Windows 体验，以提高生产力"
  },
  "rule": {
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install powertoys",
      "reference": "https://scoop.sh/#/apps?q=powertoys"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install powertoys",
      "reference": "https://community.chocolatey.org/packages/powertoys"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install Microsoft.PowerToys -s winget",
      "reference": "https://github.com/microsoft/PowerToys?tab=readme-ov-file#via-winget"
    }
  }
}
