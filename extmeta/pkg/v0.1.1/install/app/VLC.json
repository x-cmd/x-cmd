{
  "lang": "C",
  "homepage": "https://www.videolan.org/vlc/",
  "desc": {
    "en": "VLC is a free and open source cross-platform multimedia player and framework that plays most multimedia files as well as DVDs, Audio CDs, VCDs, and various streaming protocols",
    "cn": "VLC 是一款自由、开源的跨平台多媒体播放器及框架，可播放大多数多媒体文件，以及 DVD、音频 CD、VCD 及各类流媒体协议"
  },
  "rule": {
    "darwin/brew": {
      "cmd": "brew install --cask vlc",
      "reference": "https://formulae.brew.sh/cask/vlc#default"
    },
    "debian/apt": {
      "cmd": "sudo apt-get install vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "ubuntu/apt": {
      "cmd": "sudo apt-get install vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "alpine/apk": {
      "cmd": "sudo apk add vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "opensuse/zypper": {
      "cmd": "sudo zypper ref && sudo zypper in vlc",
      "reference": "https://en.opensuse.org/VLC#From_openSUSE_official_repository"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "kali/apt": {
      "cmd": "sudo apt-get install vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install vlc",
      "reference": "https://www.videolan.org/vlc/download-fedora.html"
    },
    "raspbian/apt": {
      "cmd": "sudo apt-get install vlc",
      "reference": "https://command-not-found.com/vlc"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install vlc",
      "reference": "https://community.chocolatey.org/packages/vlc"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install VideoLAN.VLC",
      "reference": "https://winget.run/pkg/VideoLAN/VLC"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop bucket add extras && x scoop install extras/vlc\n",
      "reference": "https://scoop.sh/#/apps?q=vlc"
    },
    "debian/snap": {
      "cmd": "sudo snap install vlc",
      "reference": "https://www.videolan.org/vlc/download-debian.html"
    },
    "ubuntu/snap": {
      "cmd": "sudo snap install vlc",
      "reference": "https://www.videolan.org/vlc/download-ubuntu.html"
    },
    "rhel/yum": {
      "cmd": "sudo yum install vlc",
      "reference": "https://www.videolan.org/vlc/download-redhat.html"
    },
    "centos/yum": {
      "cmd": "sudo yum install vlc",
      "reference": "https://www.videolan.org/vlc/download-redhat.html"
    }
  }
}
