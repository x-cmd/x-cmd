{
  "lang": "zig",
  "homepage": "https://ziglang.org/",
  "desc": {
    "cn": "Zig是一个通用的编程语言和工具链，用于维护稳健、高效和可重用的软件",
    "en": "Zig is a general-purpose programming language and toolchain for maintaining robust, optimal and reusable software"
  },
  "rule": {
    "/asdf": {
      "cmd": "x asdf use zig",
      "reference": "https://github.com/cheetah/asdf-zig"
    },
    "darwin/brew": {
      "cmd": "brew install zig",
      "reference": "https://formulae.brew.sh/formula/zig#default"
    },
    "darwin/port": {
      "cmd": "sudo port selfupdate && sudo port install zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#macports"
    },
    "dragonflybsd/ravensw": {
      "cmd": "sudo ravensw install zig-single-standard",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#dragonflybsd-ravenports"
    },
    "ubuntu/snap": {
      "cmd": "sudo snap install zig --classic --beta",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#ubuntu-snap"
    },
    "arch/pacman": {
      "cmd": "sudo pacman -S zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#arch-linux"
    },
    "fedora/dnf": {
      "cmd": "sudo dnf install zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#fedora"
    },
    "silverblue/ostree": {
      "cmd": "sudo rpm-ostree install zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#fedora-silverblue"
    },
    "rhel/dnf": {
      "cmd": "sudo dnf copr enable varlad/helix\n&& sudo dnf install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#fedorarhel"
    },
    "raspbian/apt": {
      "cmd": "sudo add-apt-repository ppa:maveonair/helix-editor\n&& sudo apt update\n&& sudo apt install helix\n",
      "reference": "https://docs.helix-editor.com/install.html#ubuntu"
    },
    "(win|wsl2)/winget": {
      "cmd": "x winget install zig.zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#windows-winget"
    },
    "(win|wsl2)/scoop": {
      "cmd": "x scoop install zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#windows-scoop"
    },
    "(win|wsl2)/choco": {
      "cmd": "x choco install zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#windows-choco"
    },
    "/snap": {
      "cmd": "snap install --classic helix",
      "reference": "https://docs.helix-editor.com/install.html#snap"
    },
    "win/msys2": {
      "cmd": "sudo pacman -S mingw-w64-x86_64-zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#windows-msys2"
    },
    "freebsd/pkg": {
      "cmd": "pkg install lang/zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#freebsd"
    },
    "gentoo/emerge": {
      "cmd": "sudo emerge -av dev-lang/zig-bin",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#gentoo"
    },
    "nix/nixpkgs": {
      "cmd": "nix-env -i zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#nixos"
    },
    "void/xbps": {
      "cmd": "sudo xbps-install -Su zig",
      "reference": "https://github.com/ziglang/zig/wiki/Install-Zig-from-a-Package-Manager#void-linux"
    }
  }
}
