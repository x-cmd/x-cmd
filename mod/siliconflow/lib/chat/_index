# shellcheck shell=dash

___x_cmd_siliconflow_chat(){
    local X_help_cmd='___x_cmd help -m siliconflow chat'; help:arg-null:parse
    local op="$1";
    case "$op" in
        request|exec)
            shift; ___x_cmd_siliconflow_chat_"$op" "$@" ;;
        *)  N=siliconflow M="Not support such [subcmd=$op]" log:ret:64
    esac
}

___x_cmd_siliconflow_chat_request(){
    local X_help_cmd='___x_cmd help -m siliconflow chat request'; help:arg:parse
    ___x_cmd chat --exec --provider siliconflow "$@"
}

___x_cmd_siliconflow_chat_exec(){
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER='siliconflow'   \
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER_NAME='SiliconCloud'  \
    ___X_CMD_OPENAI_CHAT_ACTUAL_ENDPOINT="$___X_CMD_SILICONFLOW_DEFAULT_ENDPOINT"    \
    ___x_cmd openai chat exec "$@"
}
