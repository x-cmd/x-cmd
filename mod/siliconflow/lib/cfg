# shellcheck shell=dash disable=SC2034

xrc cfgy
___x_cmd_siliconflow_cfg(){
    [ "$#" -gt 0 ] || {
        ___x_cmd_siliconflow_init
        return
    }

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m siliconflow --cfg ;;
        apikey=*)       ___x_cmd_siliconflow_cfg___invoke "$op" "$@"
                        ! ___x_cmd_siliconflow_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias siliconflow sili
                        ;;
        *)              ___x_cmd_siliconflow_cfg___invoke "$op" "$@" ;;
    esac
}

___x_cmd_siliconflow_cur(){
    local X_help_cmd=; X_help_cmd='___x_cmd help -m siliconflow --cur' help:arg:parse
    ___x_cmd_siliconflow_cfg --current "$@"
}

___x_cmd_siliconflow_init(){
    local cur_apikey=; local cur_model=; local cur_maxtoken=; local cur_temperature=; local cur_proxy=;

    if [ -f "$(___x_cmd_siliconflow_cur --get config)" ]; then
        ___x_cmd_siliconflow_cur cur_apikey:=apikey cur_model:=model cur_maxtoken:=maxtoken cur_temperature:=temperature cur_proxy:=proxy 2>/dev/null
    fi

    siliconflow:info "To get SiliconCloud API key -> https://cloud.siliconflow.cn/me/account/ak"

    ___x_cmd_siliconflow_cfg___invoke --init ${cur_apikey:+"--ctrl_exit_strategy"} \
        apikey      "Set up the SiliconCloud API key"                               \
                    "$cur_apikey"   '=~*' "^[A-Za-z0-9-]+$" --                  \
        model       "Set up the SiliconCloud API model"                             \
                    "${cur_model:-"$___X_CMD_SILICONFLOW_DEFAULT_FIRST_MODEL"}" '=' \
                    deepseek-ai/DeepSeek-R1 deepseek-ai/DeepSeek-V3 Qwen/QwQ-32B THUDM/glm-4-9b-chat --  \
        maxtoken    "Set up the SiliconCloud API maxtoken"                          \
                    "${cur_maxtoken:-4096}"     '=' 2048 4096 8192 --         \
        temperature "Set up the SiliconCloud API temperature"                       \
                    "${cur_temperature:-"1.0"}" --                              \
        proxy       "Set up the network proxy for API requests (optional)"      \
                    "$cur_proxy" '=~'    "^([a-z0-9]+://)?[0-9.:]+$" || return $?

    ! ___x_cmd_siliconflow_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias siliconflow sili
}

___x_cmd_siliconflow_has_apikey(){
    local apikey=
    ___x_cmd_siliconflow_cur apikey:= 2>/dev/null
    [ -n "$apikey" ] || {
        siliconflow:error "Please setting up your apikey first ==> 'x siliconflow --cfg apikey=<your apikey>'"
        siliconflow:warn "You can get the SiliconCloud API Key from ==>  https://cloud.siliconflow.cn/me/account/ak"
        return 1
    }
}

___X_CMD_SILICONFLOW_CFG_VARLIST="apikey,model,maxtoken,temperature,seed,proxy,endpoint"
___x_cmd_siliconflow_cfg___invoke(){
    ___x_cmd_cfgy_obj   \
        --prefix            ___X_CMD_SILICONFLOW_CFG_DATA                \
        --default-config    "${___X_CMD_ROOT_CFG}/siliconflow/X.cfg.yml" \
        --current-config    "${___X_CMD_SILICONFLOW_LOCAL_CONFIG}"       \
        --current-profile   "${___X_CMD_SILICONFLOW_LOCAL_PROFILE}"      \
        --varlist           "$___X_CMD_SILICONFLOW_CFG_VARLIST"          \
        "$@"
}

