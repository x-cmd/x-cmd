# shellcheck shell=dash disable=SC2034

xrc cfgy
___x_cmd_moonshot_cfg(){
    [ "$#" -gt 0 ] || {
        ___x_cmd_moonshot_init
        return
    }

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m moonshot --cfg ;;
        apikey=*)       ___x_cmd_moonshot_cfg___invoke "$op" "$@"
                        ! ___x_cmd_moonshot_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias moonshot kimi
                        ;;
        *)              ___x_cmd_moonshot_cfg___invoke "$op" "$@" ;;
    esac
}

___x_cmd_moonshot_cur(){
    local X_help_cmd=; X_help_cmd='___x_cmd help -m moonshot --cur' help:arg:parse
    ___x_cmd_moonshot_cfg --current "$@"
}

___x_cmd_moonshot_init(){
    local cur_apikey=; local cur_model=; local cur_maxtoken=; local cur_temperature=; local cur_proxy=; local cur_endpoint=;

    if [ -f "$(___x_cmd_moonshot_cur --get config)" ]; then
        ___x_cmd_moonshot_cur cur_apikey:=apikey cur_model:=model cur_maxtoken:=maxtoken cur_temperature:=temperature cur_proxy:=proxy cur_endpoint:=endpoint 2>/dev/null
    fi

    moonshot:info "To get Moonshot's API key -> https://platform.moonshot.cn/console/api-keys"

    ___x_cmd_moonshot_cfg___invoke --init ${cur_apikey:+"--ctrl_exit_strategy"} \
        apikey      "Set up the API key of Moonshot AI"                         \
                    "$cur_apikey"   '=~*' "^[A-Za-z0-9-]+$" --                  \
        model       "Set up the Moonshot AI model"                              \
                    "${cur_model:-"$___X_CMD_MOONSHOT_DEFAULT_FIRST_MODEL"}"   '=' kimi-latest kimi-k2-0711-preview moonshot-v1-8k moonshot-v1-32k moonshot-v1-128k --  \
        maxtoken    "Set up the Moonshot AI maxtoken"                           \
                    "${cur_maxtoken:-4096}"   '=~' "^[0-9]+$" --                \
        temperature "Set up the Moonshot AI temperature"                       \
                    "${cur_temperature:-"1.0"}" --                              \
        proxy       "Set up the network proxy for API requests (optional)"      \
                    "$cur_proxy" '=~'    "^([a-z0-9]+://)?[0-9.:]+$" --         \
        endpoint    "Set up the endpoint (optional)"                            \
                    "${cur_endpoint:-"$___X_CMD_MOONSHOT_DEFAULT_ENDPOINT"}"|| return $?

    ! ___x_cmd_moonshot_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias moonshot kimi
}

___X_CMD_MOONSHOT_CFG_VARLIST="apikey,model,maxtoken,temperature,seed,proxy,endpoint"
___x_cmd_moonshot_cfg___invoke(){
    ___x_cmd_cfgy_obj                                                 \
        --prefix            ___X_CMD_MOONSHOT_CFG_DATA                \
        --default-config    "${___X_CMD_ROOT_CFG}/moonshot/X.cfg.yml" \
        --current-config    "${___X_CMD_MOONSHOT_LOCAL_CONFIG}"       \
        --current-profile   "${___X_CMD_MOONSHOT_LOCAL_PROFILE}"      \
        --varlist           "$___X_CMD_MOONSHOT_CFG_VARLIST"          \
        "$@"
}

___x_cmd_moonshot_has_apikey(){
    local apikey=
    ___x_cmd_moonshot_cur apikey:= 2>/dev/null
    [ -n "$apikey" ] || {
        moonshot:error "Please setting up your apikey first ==> 'x moonshot --cfg apikey=<your apikey>'"
        moonshot:info "You can get the gemini apikey from ==> https://platform.moonshot.cn/console/api-keys"
        return 1
    }
}

___x_cmd_moonshot___get_apikey_endpoint_proxy_(){
    apikey=""; endpoint=""; proxy=""
    ___x_cmd_moonshot_has_apikey || return $?
    ___x_cmd_moonshot_cur apikey:=  endpoint:= proxy:= 2>/dev/null
    endpoint="${endpoint:-"$___X_CMD_MOONSHOT_DEFAULT_ENDPOINT"}"
}


