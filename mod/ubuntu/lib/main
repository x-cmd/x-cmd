# shellcheck shell=dash

xrc:mod:lib     ubuntu   __runcmd

___x_cmd_ubuntu___main(){
    [ "$#" -gt 0 ] ||   set -- bash

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m ubuntu "$@";    return 0 ;;

        --|snap)        ___x_cmd_ubuntu_snap            "$@" ;;
        *)              ___x_cmd_ubuntu_snap "$op"      "$@" ;;
    esac
}


___x_cmd_ubuntu_snap(){
    ___x_cmd docker snap --imagetype ubuntu "$@"
}

