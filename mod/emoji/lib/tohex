# shellcheck shell=dash
___x_cmd_emoji_tohex(){
    local X_help_cmd='___x_cmd_emoji_help tohex'
    help:arg:parse
    local emoji="${1:? Provide a emoji}"
    local hex=""
    local i=0
    local char

    while [ "$i" -lt "${#emoji}" ]; do
        char="$(printf "%s" "$emoji" | cut -c "$((i + 1))")"
        hex="$hex\\x$(printf "%02X" "'$char")"
        i=$((i + 1))
    done

    printf "%s" "$hex"
}
