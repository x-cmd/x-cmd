
# show top top 1000

___x_cmd_aur_top(){
    local n=""

    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)      ___x_cmd help -m aur top "$@"; return 0 ;;
            *)              break
        esac
        shift
    done

    n="${1:-1000}"

    local filter=0.000
    if [ "$n" -le 1000 ]; then
        filter=0.1
    elif [ "$n" -le 10000 ]; then
        filter=0.001
    fi

    ___X_CMD_AUR_TOP_N="$n" ___x_cmd_aur_fz --filter "$filter" -p
}
