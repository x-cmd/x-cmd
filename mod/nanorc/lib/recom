
___X_CMD_NANORC_X_CMD_RECOM="
set autoindent
set nonewlines
set locking
set linenumbers

bind ^z undo main
bind ^y redo main
bind ^f whereis main

bind F1 exit main
bind F2 savefile main
bind F3 findnext main
"

# set nohelp

___x_cmd_nanorc_recom(){
    local xcmdrc="$___X_CMD_NANORC_DATA/rc/x-cmd.nanorc"
    nanorc:info "Refresh nanorc -> $xcmdrc"
    printf "%s\n" "$___X_CMD_NANORC_X_CMD_RECOM" >"$xcmdrc"
}
