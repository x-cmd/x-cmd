
___x_cmd_kimi___install(){
    ! ___x_cmd hascmd kimi || return 0

    kimi:info "Installing kimi-cli using uv with Python 3.13..."
    ___x_cmd uv tool install --python 3.13 kimi-cli || {
        kimi:erro "Failed to install kimi-cli"
        return 1
    }

}

___x_cmd_kimi___upgrade(){
    ___x_cmd uv tool upgrade kimi-cli --no-cache
}

___x_cmd_kimi___uninstall(){
    ___x_cmd uv tool uninstall kimi-cli
}


