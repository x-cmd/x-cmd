# shellcheck shell=dash

___x_cmd log init aider
xrc:mod:lib     aider   __runcmd

___x_cmd_aider___main(){
    [ "$#" -gt 0 ] ||   set -- --runmain

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m aider "$@";    return 0 ;;
        --|--runmain)   ___x_cmd_aider___runmain       "$@" ;;
        --runcmd)       ___x_cmd_aider___runcmd        "$@" ;;
        *)              ___x_cmd_aider___runmain "$op" "$@" ;;
    esac
}
