# shellcheck shell=dash

___x_cmd log init codex
xrc:mod:lib     codex   __runcmd skill other/_index unit

___x_cmd_codex___main(){
    [ "$#" -gt 0 ] ||   set -- --runmain

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m codex "$@";    return 0 ;;

        ds|deepseek)    ___x_cmd_codex_ds              "$@" ;;
        kimi)           ___x_cmd_codex_kimi            "$@" ;;
        glm|zhipu)      ___x_cmd_codex_zhipu           "$@" ;;
        sili|siliconflow)
                        ___x_cmd_codex_sili            "$@" ;;
        doubao)         ___x_cmd_codex_doubao          "$@" ;;
        hub)            ___x_cmd_codex_hub             "$@" ;;

        skill)          ___x_cmd_codex_skill           "$@" ;;
        --|--runmain)   ___x_cmd_codex___runmain       "$@" ;;
        --runcmd)       ___x_cmd_codex___runcmd        "$@" ;;
        --unit_get_agentfile_)
                        ___x_cmd_codex___"${op#--}"    "$@" ;;
        *)              ___x_cmd_codex___runmain "$op" "$@" ;;
    esac
}
