# Section: Reopen
# https://docs.gitlab.com/ee/api/issues.html#edit-issue
___x_cmd_gl_issue_reopen(){
    param:scope     ___x_cmd_github
    param:dsl       '
options:
    #1             "The internal iid of a project issue"                                                   <>
    --project      "The ID or URL-encoded path of the project owned by the authenticated user"             <>
    --json|-j      "output json data"
'
    param:run

    local state_event=reopen

    ___x_cmd_gl_param_init_owner_project
    ___x_cmd_gl_curl put "/projects/${owner_project}/issues/${1}" -- state_event | _____x_cmd_gl_issue_ui_utils Reopen
}
# EndSection

# Section: Close
# https://docs.gitlab.com/ee/api/issues.html#list-merge-requests-that-close-a-particular-issue-on-merge
___x_cmd_gl_issue_close(){
     param:scope     ___x_cmd_github
    param:dsl       '
options:
    #1             "The internal iid of a project issue"                                                   <>
    --project      "The ID or URL-encoded path of the project owned by the authenticated user"             <>
    --json|-j      "output json data"
'
    param:run

    local state_event=close

    ___x_cmd_gl_param_init_owner_project
    ___x_cmd_gl_curl put "/projects/${owner_project}/issues/${1}" -- state_event | _____x_cmd_gl_issue_ui_utils Close
}
# EndSection

# Section: issue utils
# https://docs.gitlab.com/ee/api/issues_statistics.html#get-issues-statistics
_____x_cmd_gl_issue_ui_utils()(
    if [ -n "$ENFORCE_JSON" ] || [ -n "$json" ]; then
        cat
        ___x_cmd_gl_http_error
        return
    fi

    local data
    local msg
    local error_msg
    case "$1" in
        Creating|Edit)
            data="iid=.iid title=.title state=.state url=.web_url author=.author.username"
            msg="$1 issue successfully."
            error_msg="Failed to $1 issue."
            ;;
        Reopen|Close)
            data="iid=.iid state=.state"
            msg="$1 issue successfully."
            error_msg="Failed to $1 issue."
            ;;
    esac
    eval x jo env . id=.id error=. "$data"
    if [ -n "$id" ]; then
        ___x_cmd_ui_tf true "$msg" "id: $id" ${iid+"iid: $iid"} ${title+"title: $title"} ${state+"state: $state"} ${author+"author: $author"} ${url+"url: $url"}
    else
        ___x_cmd_ui_tf false "$error_msg"
        ___x_cmd_gl____handle_resp
        return 1
    fi
)
# EndSection