    --sort                      "Order groups in asc or desc order."                                    <>=""
    --search                    "Return the list of authorized groups matching the search criteria"     <>=""
    --order_by                  "Order groups by"                                                       <>=""
    --skip_groups               "Skip the group IDs passed"                                             <>=""
    --min_access_level          "Limit to groups where current user has at least this access level"     <>:Number=""
    --owned                     "Limit to groups explicitly owned by the current user"
    --statistics                "Include group statistics"
    --all_available             "Show all the groups you have access to"
    --top_level_only            "Limit to top level groups, excluding all subgroups"
    --with_custom_attributes    "Include custom attributes in response"

    --json|-j                   "output json data"
'
    param:run

    local ___gl_error_msg="get subgroup list fail"
    ___X_CMD_UI_STATIC=1 ___gl_ui_mutual '___ui_table_json Id=.id Name=.name Path=.path Visibility=.visibility Url=.web_url -- $@' \
        ___x_cmd_gl_get_multi "/groups/$1/subgroups" sort search order_by skip_groups min_access_level
}

___x_cmd_gl_groups_info(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    #1                          "The ID or URL-encoded path of the group"                                   <>
    --with_projects             "Include details from projects that belong to the specified group"
    --with_custom_attributes    "Include custom attributes in response"

    --json|-j                   "output json data"
'
    param:run

    ___x_cmd_gl_curl get "/groups/$1" |_____x_cmd_groups_ui_utils Info
}
# EndSection

# Section: create
___x_cmd_gl_groups_create(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    #1                          "groups name"                   <>
    -p|--path                   "groups path"                   <>=""
    --description               "The group description."        <>=""
    --visibility                "The groups visibility."        <>="" = "" private internal public
    --subgroup_creation_level   "Allowed to create subgroups."  <>="" = "" maintainer owner
'
    param:run
    local name="$1"
    local gl_path="$name"
    [ -z "$p" ] || gl_path="$p"
    local gen_gl_json
    gen_gl_json="$(param:option2json -p +name path=gl_path)"

    ___x_cmd_gl_curl post "/groups" "gen_gl_json" || _____x_cmd_groups_ui_utils Creating
}
# EndSection

# Section: create subgroup
# TODO:
___x_cmd_gl_subgroup_create(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    --parent_id         "parent groups id."    <>
    --subgroup_path     "subgroup path"        <>=""
    --name              "subgroup name"        <>

    --json|-j           "output json data"
'
    param:run
    local group_path="$subgroup_path"
    [ -n "$group_path" ] || group_path="$name"
    gen_gl_json="$(param:option2json -subgroup_path path=group_path)"
    ___x_cmd_gl_curl post "/groups" "gen_gl_json"| _____x_cmd_groups_ui_utils Creating
}
# EndSection

# Section:groups update
___x_cmd_gl_groups_edit(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    #1                          "The ID of the group."          <>
    -p|--path                   "groups path"                   <>=""
    --name                      "The name of the group"         <>=""
    --description               "The group description."        <>=""
    --visibility                "The groups visibility."        <>="" = "" private internal public
    --subgroup_creation_level   "Allowed to create subgroups."  <>="" = "" maintainer owner

    --json|-j                   "output json data"
'
    param:run

    local gen_gl_json
    gen_gl_json="$(param:option2json -p ${p+"group_path:$p"})"

    ___x_cmd_gl_curl put "/groups/$1" "gen_gl_json" | _____x_cmd_groups_ui_utils Edit
}
# EndSection

___x_cmd_gl_groups_rm(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    #1                       "The ID of the group."
    --full_path              "Full path of subgroup"                                            <>=""
    --permanently_remove     "Immediately deletes a subgroup if it is marked for deletion"

    --yes|-y                 "Ignore remove prompt interception"
'
    param:run

    if [ $# -eq 0 ];then
        gl_log error "Please provide groups ID"
        return 1
    fi

    local id
    for id in "$@"; do
        {
            [ "$yes" = "true" ] || ___x_cmd_ui_yesno "Are you sure groups to remove: $(___x_cmd_ui bold red "$id") ?" || continue
            ___x_cmd_gl_curl delete "/groups/$id" | (
                x jo env . error=.
                if ___x_cmd_gl_http_error; then
                    ___x_cmd_ui_tf  true "del groups $id successfully."
                else
                    ___x_cmd_ui_tf false "del groups $id failure."
                    return 1
                fi
            )

        }
    done
}

# Section: groups repo
___x_cmd_gl_groups_repo(){
    param:subcmd ___x_cmd_gl_groups_repo    \
        ls          "list repo"
        # create      "groups repo create"
    param:subcmd:try
    param:run

    ___x_cmd_gl_groups_repo _param_help_doc

    return 1
}

___x_cmd_gl_groups_repo_ls(){
    param:scope     ___x_cmd_gl
    param:dsl       '
options:
    #1              "The ID or group path"          <>:Address
    --page          "page"                          <>:NatureNumber=1
    --per_page      "per_page"                      <>:NatureNumber=20
    --visibility    "Limit by visibility"           <>=""
    --archived      "Limit by archived status"

    --json|-j       "output json data"
'
    param:run

    local ___gl_error_msg="get repo list fail"
    ___X_CMD_UI_STATIC=1 ___gl_ui_mutual '___ui_table_json Id=.id Name=.name Path=.path Visibility=.visibility Url=.web_url -- $@' \
        ___x_cmd_gl_get_multi "/groups/$1/projects" page per_page visibility archived
}
