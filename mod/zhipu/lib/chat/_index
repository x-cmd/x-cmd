# shellcheck shell=dash

___x_cmd_zhipu_chat(){
    local X_help_cmd='___x_cmd help -m zhipu chat'; help:arg-null:parse
    local op="$1";
    case "$op" in
        request|exec)
            shift; ___x_cmd_zhipu_chat_"$op" "$@" ;;
        --def-model_)
            shift; ___x_cmd_zhipu_chat_def_model_ "$@" ;;
        *)  N=zhipu M="Not support such [subcmd=$op]" log:ret:64
    esac
}

___x_cmd_zhipu_chat_def_model_(){
    x_="$___X_CMD_ZHIPU_DEFAULT_FIRST_MODEL"
}

___x_cmd_zhipu_chat_request(){
    local X_help_cmd='___x_cmd help -m zhipu chat request'; help:arg:parse
    ___x_cmd chat --exec --provider zhipu "$@"
}

___x_cmd_zhipu_chat_exec(){
    local endpoint=""
    ___x_cmd_moonshot_cur endpoint:=endpoint 2>/dev/null
    endpoint="${endpoint:-"$___X_CMD_ZHIPU_DEFAULT_ENDPOINT"}"

    ___X_CMD_OPENAI_CHAT_ACTUAL_URL_NOT_V1=1 \
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER='zhipu'   \
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER_NAME='Zhipu AI'  \
    ___X_CMD_OPENAI_CHAT_ACTUAL_ENDPOINT="$endpoint"    \
    ___x_cmd openai chat exec "$@"
}
