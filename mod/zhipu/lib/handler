# shellcheck shell=dash
___x_cmd_zhipu_handler(){
    local op="$1"
    case "$op" in
        stream_output|get_response|get_history_record)
            shift;  "___x_cmd_zhipu_handler___$op" "$@" ;;
        *) ;;
    esac
}

___x_cmd_zhipu_handler___stream_output(){
    x cawk -f "$___X_CMD_ROOT_MOD/zhipu/lib/awk/stream_output.awk"
}

___x_cmd_zhipu_handler___get_response(){
    x cawk -m j/json,j/jiter,j/jcp \
        -f "$___X_CMD_ROOT_MOD/zhipu/lib/awk/get_response.awk"
}

___x_cmd_zhipu_handler___get_history_record(){
    local dir="$1"
    local history_size="$2"
    [ -d "$dir" ] || return

    # TODO: Optimized version: Get rid of y2j
    x fsiter "$dir" | command sort -r | history_size="$history_size" BASE_PATH="$dir" \
    x cawk -m j/json,j/jiter \
        -f "$___X_CMD_ROOT_MOD/zhipu/lib/awk/get_history_record.awk"
}
