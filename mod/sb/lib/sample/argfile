
# 这个标准是落后, 因为没有让人觉得不安全 -- 需要用到 eval, 并且

alias arg:file:init='
local ARG_FILE_PARSE_LINE
local ARG_FILE_PARSE_LINE_LIST
'


alias arg:file:parse='
    while read -r ARG_FILE_PARSE_LINE; do
        ARG_FILE_PARSE_LINE_LIST="$ARG_FILE_PARSE_LINE_LIST
$ARG_FILE_PARSE_LINE"
    done <<'

alias arg:file:apply='
    eval "$"
'
