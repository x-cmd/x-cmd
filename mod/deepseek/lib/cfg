# shellcheck shell=dash disable=SC2034

xrc cfgy
___x_cmd_deepseek_cfg(){
    [ "$#" -gt 0 ] || {
        ___x_cmd_deepseek_init
        return
    }

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m deepseek --cfg ;;
        apikey=*)       ___x_cmd_deepseek_cfg___invoke "$op" "$@"
                        ! ___x_cmd_deepseek_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias deepseek ds
                        ;;
        *)              ___x_cmd_deepseek_cfg___invoke "$op" "$@" ;;
    esac
}

___x_cmd_deepseek_cur(){
    local X_help_cmd=; X_help_cmd='___x_cmd help -m deepseek --cur' help:arg:parse
    ___x_cmd_deepseek_cfg --current "$@"
}

___x_cmd_deepseek_init(){
    local cur_apikey=; local cur_model=; local cur_maxtoken=; local cur_temperature=; local cur_proxy=; local cur_endpoint

    if [ -f "$(___x_cmd_deepseek_cur --get config)" ]; then
        ___x_cmd_deepseek_cur cur_apikey:=apikey cur_model:=model cur_maxtoken:=maxtoken cur_temperature:=temperature cur_proxy:=proxy cur_endpoint=endpoint 2>/dev/null
    fi

    deepseek:info "To get DeepSeek API key -> https://platform.deepseek.com/api_keys"

    ___x_cmd_deepseek_cfg___invoke --init ${cur_apikey:+"--ctrl_exit_strategy"} \
        apikey      "Set up the DeepSeek API key"                               \
                    "$cur_apikey"   '=~*' "^[A-Za-z0-9-]+$" --                  \
        model       "Set up the DeepSeek API model"                             \
                    "${cur_model:-"$___X_CMD_DEEPSEEK_DEFAULT_FIRST_MODEL"}" '=' deepseek-chat deepseek-reasoner --  \
        maxtoken    "Set up the DeepSeek API maxtoken"                          \
                    "${cur_maxtoken:-4096}"     '=' 2048 4096 8192 --         \
        temperature "Set up the DeepSeek API temperature"                       \
                    "${cur_temperature:-"1.0"}" --                              \
        proxy       "Set up the network proxy for API requests (optional)"      \
                    "$cur_proxy" '=~'    "^([a-z0-9]+://)?[0-9.:]+$" --         \
        endpoint    "Set up the endpoint (optional)"                            \
                    "${cur_endpoint:-"$___X_CMD_DEEPSEEK_DEFAULT_ENDPOINT"}" || return $?

    ! ___x_cmd_deepseek_has_apikey 2>/dev/null >&2 || ___x_cmd chat --setalias deepseek ds
}

___x_cmd_deepseek_has_apikey(){
    local apikey=
    ___x_cmd_deepseek_cur apikey:= 2>/dev/null
    [ -n "$apikey" ] || {
        deepseek:error "Please setting up your apikey first ==> 'x deepseek --cfg apikey=<your apikey>'"
        deepseek:warn "You can get the DeepSeek API Key from ==>  https://platform.deepseek.com/api_keys"
        return 1
    }
}

___X_CMD_DEEPSEEK_CFG_VARLIST="apikey,model,maxtoken,temperature,seed,proxy,endpoint"
___x_cmd_deepseek_cfg___invoke(){
    ___x_cmd_cfgy_obj   \
        --prefix            ___X_CMD_DEEPSEEK_CFG_DATA                \
        --default-config    "${___X_CMD_ROOT_CFG}/deepseek/X.cfg.yml" \
        --current-config    "${___X_CMD_DEEPSEEK_LOCAL_CONFIG}"       \
        --current-profile   "${___X_CMD_DEEPSEEK_LOCAL_PROFILE}"      \
        --varlist           "$___X_CMD_DEEPSEEK_CFG_VARLIST"          \
        "$@"
}

