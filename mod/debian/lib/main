# shellcheck shell=dash

___x_cmd_debian___main(){
    [ "$#" -gt 0 ] ||   set -- bash

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m debian "$@";    return 0 ;;

        --|snap)        ___x_cmd_debian_snap            "$@" ;;
        *)              ___x_cmd_debian_snap "$op"      "$@" ;;
    esac
}


___x_cmd_debian_snap(){
    ___x_cmd docker snap --imagetype debian "$@"
}

