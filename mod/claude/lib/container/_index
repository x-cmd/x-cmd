

___x_cmd_claude_container(){

    case "$1" in

    esac

}


___x_cmd_claude_container_run(){
    ___x_cmd_claude_container_image_prepare

    ___x_cmd docker run x-claude-box "$@"
}

___x_cmd_claude_container_image_prepare(){
    ___x_cmd_claude_container_image_exist || {
        ___x_cmd docker refit --from ubuntu --apt "curl jq sqlite3 git" --xenv claude-code --to x-claude-box
    }
}

___x_cmd_claude_container_image_update(){
    ___x_cmd docker pull ubuntu
    ___x_cmd version archive update
    ___x_cmd docker refit --from ubuntu --apt "curl jq sqlite3 git" --xenv claude-code --to x-claude-box
}

___x_cmd_claude_container_image_exist(){
    ___x_cmd docker image exist x-claude-box
}
