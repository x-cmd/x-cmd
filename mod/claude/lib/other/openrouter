# shellcheck shell=dash

___x_cmd_claude_openrouter(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude openrouter; return 0 ;;
        --)             shift ;;
    esac

    claude:provider:fetch:init
    ___x_cmd_claude_openrouter___fetch_   || return $?

    ANTHROPIC_API_KEY="" API_TIMEOUT_MS="$x_timeout"        \
        ___x_cmd_claude_other___use     openrouter                \
        "$x_url" "$x_apikey" "$x_model" "$x_fastmodel" "$x_nonessential_traffic" "$@"
}

___x_cmd_claude_openrouter___fetch_(){
    local model=""
    local apikey=""
    local endpoint=

    ___x_cmd openrouter --cur apikey:=    endpoint:= 2>/dev/null

    [ -n "$apikey" ] || {
        claude:warn \
            --tip1 'x openrouter --cfg'                           \
            --tip2 'x openrouter --cfg apikey=<YOUR-API-KEY>'     \
            "Please setup OpenRouter API-KEY."
        return 1
    }

    [ -n "$endpoint" ] || endpoint="https://openrouter.ai/api"

    x_url="$endpoint"
    x_apikey="$apikey"

    x_model="${model}"
    [ -n "$x_model" ] || x_model="openai/gpt-4o"

    x_fastmodel="${x_model}"
}
