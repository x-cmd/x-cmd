# shellcheck shell=dash

___x_cmd_claude_openrouter(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude openrouter; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint="https://openrouter.ai/api"
    local x_=""

    ___x_cmd openrouter --cur model:= apikey:= 2>/dev/null
    [ -n "$model" ] || model="openai/gpt-4o"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || {
            claude:warn \
                --tip1 'x openrouter --cfg'                       \
                --tip2 'x openrouter --cfg apikey=<YOUR-API-KEY>' \
                "Please setup OpenRouter API-KEY."
            return 1
        }
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ANTHROPIC_API_KEY="" ___x_cmd_claude_other___use "openrouter" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
