# shellcheck shell=dash

___x_cmd_claude_ds(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude ds; return 0 ;;
        --)             shift ;;
    esac

    local token="$ANTHROPIC_AUTH_TOKEN"
    if [ -z "$token" ]; then
        token="${DEEPSEEK_API_KEY:-"$(___x_cmd deepseek --cur get apikey 2>/dev/null)"}"
        [ -n "$token" ] || \
            claude:info \
                --tip1 'x deepseek --cfg'                       \
                --tip2 'x deepseek --cfg apikey=<YOUR-API-KEY>' \
                "Please setup DeepSeek API-KEY."
    fi

    local url="${ANTHROPIC_BASE_URL:-"https://api.deepseek.com/anthropic"}"
    local model="${ANTHROPIC_MODEL:-"deepseek-chat"}"
    local fast_model="${ANTHROPIC_SMALL_FAST_MODEL:-"deepseek-chat"}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "ds" "$url" "$token" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
