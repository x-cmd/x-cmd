# shellcheck shell=dash

___x_cmd_claude_ds(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude ds; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint="https://api.deepseek.com/anthropic"
    local x_=""

    ___x_cmd deepseek --cur model:= apikey:= 2>/dev/null
    [ -n "$model" ] || model="deepseek-chat"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || \
            claude:info \
                --tip1 'x deepseek --cfg'                       \
                --tip2 'x deepseek --cfg apikey=<YOUR-API-KEY>' \
                "Please setup DeepSeek API-KEY."
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "ds" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
