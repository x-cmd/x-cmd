# shellcheck shell=dash

___X_CMD_CLAUDE_MT_DEFAULT_ENDPOINT="https://coding-plan-endpoint.kuaecloud.net"
___X_CMD_CLAUDE_MT_DEFAULT_FIRST_MODEL="GLM-4.7"

___x_cmd_claude_mt(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude mt; return 0 ;;
        --cfg)          shift;
                        ___x_cmd_claude_mt_cfg "$@"; return $? ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint=""
    local x_=""

    ___x_cmd_claude_mt_cur model:= apikey:= endpoint:= 2>/dev/null
    [ -n "$model" ] || model="$___X_CMD_CLAUDE_MT_DEFAULT_FIRST_MODEL"
    [ -n "$endpoint" ] || endpoint="$___X_CMD_CLAUDE_MT_DEFAULT_ENDPOINT"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || \
            claude:info \
                --tip1 'x claude mt --cfg'                       \
                --tip2 'x claude mt --cfg apikey=<YOUR-API-KEY>' \
                "Please setup MOORE THREADS API-KEY."
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ANTHROPIC_API_KEY="" ___x_cmd_claude_other___use "mt" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}


xrc cfgy
___x_cmd_claude_mt_cfg(){
    [ "$#" -gt 0 ] || {
        ___x_cmd_claude_mt_init
        return
    }

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m claude mt --cfg ;;
        *)              ___x_cmd_claude_mt_cfg___invoke "$op" "$@" ;;
    esac
}


___x_cmd_claude_mt_cur(){
    local X_help_cmd=; X_help_cmd='___x_cmd help -m claude mt --cur' help:arg:parse
    ___x_cmd_claude_mt_cfg --current "$@"
}

___x_cmd_claude_mt_init(){
    local cur_apikey=; local cur_model=; local cur_endpoint

    if [ -f "$(___x_cmd_claude_mt_cur --get config)" ]; then
        ___x_cmd_claude_mt_cur cur_apikey:=apikey cur_model:=model cur_endpoint:=endpoint 2>/dev/null
    fi

    claude:info "To get MOORE THREADS API key -> https://coding-plan.kuaecloud.net/apikey"

    ___x_cmd_claude_mt_cfg___invoke --init ${cur_apikey:+"--ctrl_exit_strategy"} \
        apikey      "Set up the MOORE THREADS API key"                               \
                    "$cur_apikey"   '=~*' "^[A-Za-z0-9-]+$" --                  \
        model       "Set up the MOORE THREADS API model"                             \
                    "${cur_model:-"$___X_CMD_CLAUDE_MT_DEFAULT_FIRST_MODEL"}" '=' GLM-4.7  --  \
        endpoint    "Set up the endpoint (optional)"                            \
                    "${cur_endpoint:-"$___X_CMD_CLAUDE_MT_DEFAULT_ENDPOINT"}" || return $?
}


___X_CMD_CLAUDE_MT_CFG_VARLIST="apikey,model,endpoint"
___x_cmd_claude_mt_cfg___invoke(){
    ___x_cmd_cfgy_obj   \
        --prefix            ___X_CMD_CLAUDE_MT_CFG_DATA                \
        --default-config    "${___X_CMD_ROOT_CFG}/claude/mt/X.cfg.yml" \
        --current-config    "${___X_CMD_CLAUDE_MT_LOCAL_CONFIG}"       \
        --current-profile   "${___X_CMD_CLAUDE_MT_LOCAL_PROFILE}"      \
        --varlist           "$___X_CMD_CLAUDE_MT_CFG_VARLIST"          \
        "$@"
}


