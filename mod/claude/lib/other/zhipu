# shellcheck shell=dash

___x_cmd_claude_zhipu(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude zhipu; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint="https://open.bigmodel.cn/api/anthropic"
    local x_=""

    ___x_cmd zhipu --cur model:= apikey:= 2>/dev/null
    [ -n "$model" ] || model="glm-4.6"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || \
            claude:info \
                --tip1 'x zhipu --cfg'                       \
                --tip2 'x zhipu --cfg apikey=<YOUR-API-KEY>' \
                "Please setup ZHIPU API-KEY."
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "zhipu" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
