# shellcheck shell=dash

___x_cmd_claude_zhipu(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude zhipu; return 0 ;;
        --)             shift ;;
    esac

    local token="$ANTHROPIC_AUTH_TOKEN"
    if [ -z "$token" ]; then
        token="${ZHIPU_API_KEY:-"$(___x_cmd zhipu --cur get apikey 2>/dev/null)"}"
        [ -n "$token" ] || \
            claude:info \
                --tip1 'x zhipu --cfg'                       \
                --tip2 'x zhipu --cfg apikey=<YOUR-API-KEY>' \
                "Please setup ZHIPU API-KEY."
    fi

    local url="${ANTHROPIC_BASE_URL:-"https://open.bigmodel.cn/api/anthropic"}"
    local model="${ANTHROPIC_MODEL:-"glm-4.6"}"
    local fast_model="${ANTHROPIC_SMALL_FAST_MODEL:-"glm-4.6"}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "zhipu" "$url" "$token" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
