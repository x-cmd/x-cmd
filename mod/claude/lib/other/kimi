
# shellcheck shell=dash

___x_cmd_claude_kimi(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude kimi; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint=
    local x_=""

    ___x_cmd kimi --cur model:= apikey:= endpoint:= 2>/dev/null
    [ -n "$model" ] || model="kimi-for-coding"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || {
            claude:warn \
                --tip1 'x kimi --cfg'                       \
                --tip2 'x kimi --cfg apikey=<YOUR-API-KEY>' \
                "Please setup kimi API-KEY."
            return 1
        }
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    [ -z "$endpoint" ] || endpoint="https://api.kimi.com/coding/"

    ANTHROPIC_API_KEY="" ___x_cmd_claude_other___use "kimi" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}

