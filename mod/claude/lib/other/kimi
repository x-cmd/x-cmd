
# shellcheck shell=dash

___x_cmd_claude_kimi(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude kimi; return 0 ;;
        --)             shift ;;
    esac

    local token="$ANTHROPIC_AUTH_TOKEN"
    if [ -z "$token" ]; then
        token="${MOONSHOT_API_KEY:-"$(___x_cmd moonshot --cur get apikey 2>/dev/null)"}"
        [ -n "$token" ] || \
            claude:info \
                --tip1 'x moonshot --cfg'                       \
                --tip2 'x moonshot --cfg apikey=<YOUR-API-KEY>' \
                "Please setup kimi API-KEY."
    fi

    local url="${ANTHROPIC_BASE_URL:-"https://api.moonshot.cn/anthropic"}"
    local model="${ANTHROPIC_MODEL:-"kimi-k2-turbo-preview"}"
    local fast_model="${ANTHROPIC_SMALL_FAST_MODEL:-"kimi-k2-turbo-preview"}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "kimi" "$url" "$token" "$model" "$fast_model" "$nonessential_traffic" "$@"
}

