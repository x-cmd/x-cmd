
# shellcheck shell=dash

___x_cmd_claude_kimi(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude kimi; return 0 ;;
        --)             shift ;;
    esac

    claude:provider:fetch:init
    ___x_cmd_claude_kimi___fetch_   || return $?

    ANTHROPIC_API_KEY="" API_TIMEOUT_MS="$x_timeout"        \
        ___x_cmd_claude_other___use     kimi                \
        "$x_url" "$x_apikey" "$x_model" "$x_fastmodel" "$x_nonessential_traffic" "$@"
}

___x_cmd_claude_kimi___fetch_(){
    local model=""
    local apikey=""
    local endpoint=

    ___x_cmd kimi --cur model:=    apikey:=    endpoint:= 2>/dev/null

    [ -n "$apikey" ] || {
        claude:warn \
            --tip1 'x kimi --cfg'                           \
            --tip2 'x kimi --cfg apikey=<YOUR-API-KEY>'     \
            "Please setup kimi API-KEY."
        return 1
    }

    [ -n "$endpoint" ] || endpoint="https://api.kimi.com/coding/"

    x_url="$endpoint"
    x_apikey="$apikey"

    x_model="${model}"
    [ -n "$x_model" ] || x_model="kimi-for-coding"

    x_fastmodel="${x_model}"
}
