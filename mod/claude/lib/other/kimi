
# shellcheck shell=dash

___x_cmd_claude_kimi(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude kimi; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint="https://api.moonshot.cn/anthropic"
    local x_=""

    ___x_cmd moonshot --cur model:= apikey:= 2>/dev/null
    [ -n "$model" ] || model="kimi-k2-turbo-preview"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || \
            claude:info \
                --tip1 'x moonshot --cfg'                       \
                --tip2 'x moonshot --cfg apikey=<YOUR-API-KEY>' \
                "Please setup kimi API-KEY."
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ___x_cmd_claude_other___use "kimi" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}

