# shellcheck shell=dash

___x_cmd_claude_siliconflow(){
    local op="$1"
    case "$op" in
        -h|--help)      ___x_cmd help -m claude siliconflow; return 0 ;;
        --)             shift ;;
    esac

    local model=""
    local apikey=""
    local endpoint="https://api.siliconflow.cn/"
    local x_=""

    ___x_cmd siliconflow --cur model:= apikey:= 2>/dev/null
    [ -n "$model" ] || model="moonshotai/Kimi-K2-Instruct-0905"

    if [ -z "$apikey" ]; then
        apikey="$ANTHROPIC_AUTH_TOKEN"
        [ -n "$apikey" ] || \
            claude:info \
                --tip1 'x siliconflow --cfg'                       \
                --tip2 'x siliconflow --cfg apikey=<YOUR-API-KEY>' \
                "Please setup siliconflow API-KEY."
    fi

    local fast_model="${CLAUDE_CODE_SUBAGENT_MODEL:-$model}"
    local nonessential_traffic="${CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC}"

    ANTHROPIC_API_KEY="" ___x_cmd_claude_other___use "siliconflow" "$endpoint" "$apikey" "$model" "$fast_model" "$nonessential_traffic" "$@"
}
