
___x_cmd_claude_box(){
    [ $# -gt 0 ]    ||  set -- status

    local op="$1" ;     shift
    case "$op" in
        -h|--help)      ___x_cmd_help -m claude box         "$@"    ;;

        start|stop|restart|status|run|exec|image)
                        ___x_cmd_claude_box_"${op}"         "$@"    ;;

        --app)
                        ___x_cmd_claude_box___"${op#--}"    "$@"    ;;

        --)             ___x_cmd_claude_box_run             "$@"    ;;
        *)              ___x_cmd_claude_box_run  "$op"      "$@"    ;;
    esac

}

___x_cmd_claude_box___app(){
    :
}


___x_cmd_claude_box_start(){
    ___x_cmd docker ubuntu
}

