

___x_cmd_claude_history_resume(){
    local session_id="$1"
    local session_cwd="${2:-$PWD}"

    if [ "$session_cwd" = "$PWD" ]; then
        ___x_cmd claude -- --resume "$session_id"
    else
        (
            ___x_cmd_cmds cd "$session_cwd" && ___x_cmd claude -- --resume "$session_id"
        )
    fi
}