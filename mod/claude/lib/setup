# shellcheck shell=dash

___x_cmd_claude___setup(){
    claude:info "Setting up x-cmd tools to Claude-Code"

    local dir="$HOME/.claude"
    ___x_cmd_cmds cp -rf "$___X_CMD_ROOT_MOD/claude/lib/data/commands" "$dir"

    claude:info "Setup x-cmd complete. You can now use /x command in Claude-Code"
}
