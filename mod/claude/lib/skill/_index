# shellcheck shell=dash

___x_cmd_claude_skill(){
    [ "$#" -gt 0 ] ||   set -- ll

    local op="$1";      shift
    case "$op" in
        info|ll|ls|add|rm|use|unuse)
                            ___x_cmd_claude_skill_"$op"   "$@" ;;
        -h|--help)          ___x_cmd help -m claude skill "$@" ;       return 0 ;;
        *)                  N=claude M="skill not such [subcmd=$op]" log:ret:64 ;;
    esac
}

___x_cmd_claude_skill_ll(){
    [ "$#" -gt 0 ] || {
        if ___x_cmd_runmode_allow_manual; then
            set - --fzapp
        else
            set - --tsv
        fi
    }

    local op="$1"; shift
    case "$op" in
        -h|--help)      ___x_cmd help -m claude skill ll;    return 0 ;;
        --fzapp)        ___x_cmd_claude_skill_ll___fzapp         "$@" ;;
        *)              ___x_cmd skill ll "$@" ;;
    esac
}

___x_cmd_claude_skill_ll___fzapp(){
    local x_=""; ___x_cmd skill ll --fzapp_ "$@" || return $?

    local id=
    ___x_cmd ui select id "Next:"                   \
        "x claude skill add $x_"                    \
        "x claude skill use $x_"                    \
        "Show detailed information --> $x_"         \
        "EXIT"     || return $?

    case "$id" in
        1)  ___x_cmd claude skill add "$x_"         ;;
        2)  ___x_cmd claude skill use "$x_"         ;;
        3)  ___x_cmd skill ll --fzpreview "$x_"     ;;
        *)  return 0;;
    esac
}

___x_cmd_claude_skill_ls(){
    case "$1" in
        -h|--help)          ___x_cmd help -m claude skill ls;       return 0 ;;
    esac

    local project_dir=".claude/skills"
    local user_dir="$HOME/.claude/skills"

    if [ -d "$project_dir" ]; then
        claude:info "Listing project-level skills from: $project_dir"
        ___x_cmd skill ls --agent claude --skill-dir "$project_dir"
    fi

    if [ -d "$user_dir" ]; then
        claude:info "Listing user-level skills from: $user_dir"
        ___x_cmd skill ls --agent claude --skill-dir "$user_dir"
    fi
}

___x_cmd_claude_skill_add(){
    local dir=".claude/skills"
    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)              ___x_cmd help -m claude skill add ; return 0 ;;
            -g|--global)            dir="$HOME/.claude/skills";       shift 1 ;;
            *)                      break ;;
        esac
    done

    ___x_cmd skill add --skill-dir "$dir" "$@"
}

___x_cmd_claude_skill_rm(){
    local dir=".claude/skills"
    while [ $# -gt 0 ]; do
        case "$1" in
            -h|--help)              ___x_cmd help -m claude skill rm ; return 0 ;;
            -g|--global)            dir="$HOME/.claude/skills";       shift 1 ;;
            *)                      break ;;
        esac
    done
    ___x_cmd skill rm --skill-dir "$dir" "$@"
}

___x_cmd_claude_skill_unuse(){
    case "$1" in
        -h|--help)              ___x_cmd help -m claude skill unuse ; return 0 ;;
    esac
    ___x_cmd_claude_skill_rm --global "$@"
}

___x_cmd_claude_skill_use(){
    case "$1" in
        -h|--help)              ___x_cmd help -m claude skill use ; return 0 ;;
    esac
    ___x_cmd_claude_skill_add --global "$@"
}

___x_cmd_claude_skill_info(){
    case "$1" in
        -h|--help)              ___x_cmd help -m claude skill info ; return 0 ;;
    esac
    local skillid="${1}"; [ -n "$skillid" ] || N=claude M="Please provide the skill id" log:ret:64
    ___x_cmd skill info "$skillid"
}

