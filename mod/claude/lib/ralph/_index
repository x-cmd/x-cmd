
___x_cmd_claude_ralph(){
    [ $# -gt 0 ]    ||      set -- --help

    local op="$1";  shift
    case "$op" in
        init|prd|loop|rm)
                    ___x_cmd_claude_ralph_"$op" "$@"    ;;
        *)          N=claude M="Unknown op -> $op" log:ret:64 ;;
    esac
}

___x_cmd_claude_ralph_init(){
    :
    # introduce hook into the project

    # ensure the .tmpfolder
    ___x_cmd_cmds grep ".x-cmd.tmpfolder" 1>/dev/null 2>/dev/null || {
        printf "%s\n" ".x-cmd.tmpfolder" >".gitignore"
        ___x_cmd mkdirp ".x-cmd.tmpfolder"
    }


}

___x_cmd_claude_ralph_rm(){
    :
    # cleanup ...
}

___x_cmd_claude_ralph_prd(){
    :
}

___x_cmd_claude_ralph_loop(){
    :
}



