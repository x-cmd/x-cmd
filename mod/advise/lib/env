# shellcheck shell=dash
___x_cmd_is_suitable_advise_completion_env(){
    ___x_cmd_is_suitable_advise_env || return 1
    # bash >= 4.2
    [ -z "$___X_CMD_ADVISE_SHELL_BASH_LT_4_2" ] || return 1
}

___X_CMD_ADVISE_TMPDIR="$___X_CMD_ROOT_CACHE/advise/advise_auto_jso"

___X_CMD_ADVISE_MAN_PKG_XCMD_VERSION="v0.0.3"
___X_CMD_ADVISE_MAN_PKG_COMPLETIONS_VERSION="v0.0.1"

___X_CMD_ADVISE_MAN_XCMD_PKG="$___X_CMD_ROOT_SHARED/advise/$___X_CMD_ADVISE_MAN_PKG_XCMD_VERSION/all.tar.xz"
___X_CMD_ADVISE_MAN_XCMD_FOLDER="$___X_CMD_ROOT_DATA/advise/xcmd/$___X_CMD_ADVISE_MAN_PKG_XCMD_VERSION"

___X_CMD_ADVISE_MAN_COMPLETIONS_PKG="$___X_CMD_ROOT_SHARED/advise/$___X_CMD_ADVISE_MAN_PKG_COMPLETIONS_VERSION/$___X_CMD_CUR_SHELL-completion.tar.xz"
___X_CMD_ADVISE_MAN_COMPLETIONS_FOLDER="$___X_CMD_ROOT_DATA/advise/completion/$___X_CMD_ADVISE_MAN_PKG_COMPLETIONS_VERSION/$___X_CMD_CUR_SHELL-completion"

___X_CMD_ADVISE_ADDON_CHCHE="$___X_CMD_ROOT_CACHE/advise/addon"

if [ -n "$BASH_VERSION" ] && ___x_cmd_is_suitable_advise_completion_env ; then  ___X_CMD_ADVISE_MAN_COMPLETIONS_FOLDER_SRC="$___X_CMD_ADVISE_MAN_COMPLETIONS_FOLDER/completions"
elif [ -n "$ZSH_VERSION" ]; then ___X_CMD_ADVISE_MAN_COMPLETIONS_FOLDER_SRC="$___X_CMD_ADVISE_MAN_COMPLETIONS_FOLDER/src"
fi

___X_CMD_ADVISE_IFS_INIT="$___X_CMD_UNSEENCHAR_NEWLINE"
___X_CMD_ADVISE_MAX_ITEM=99

___X_CMD_ADVISE_MAN_CACHE_X_ADVISE_JSO="$___X_CMD_ROOT_DATA/advise/cache/x/$___X_CMD_VERSION.jso"
___X_CMD_ADVISE_NOT_SUITABLE_XRC_MOD_LIST="
xrc
theme
pipx
npx
p7zip
"
