# shellcheck shell=dash

___x_cmd_kali___main(){
    [ "$#" -gt 0 ] ||   set -- bash

    local op="$1";      shift
    case "$op" in
        -h|--help)      ___x_cmd help -m kali "$@";    return 0 ;;

        --|snap)        ___x_cmd_kali_snap            "$@" ;;
        *)              ___x_cmd_kali_snap "$op"      "$@" ;;
    esac
}


___x_cmd_kali_snap(){
    ___x_cmd docker snap --imagetype kali "$@"
}

