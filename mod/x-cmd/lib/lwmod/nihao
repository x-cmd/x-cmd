
___x_cmd_nihao(){

    case "$1" in
        --llmstxt)      ___x_cmd rat "$___X_CMD_ROOT_MOD/x-cmd/lib/nihao/nihao.llms.txt"; return 0 ;;
    esac

    local fp="$___X_CMD_ROOT_MOD/x-cmd/lib/nihao/nihao.en.md"

    case "$___X_CMD_LANG" in
        zh)     fp="$___X_CMD_ROOT_MOD/x-cmd/lib/nihao/nihao.zh.md"
    esac

    if [ -t 1 ]; then
        ___x_cmd md show <"$fp"
    else
        ___x_cmd_cmds cat "$fp"
    fi

}

