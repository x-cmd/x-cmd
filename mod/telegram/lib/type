# shellcheck shell=sh

param_type    telegram     url             "=~"   "https?://.+"
param_type    telegram     text            "=~"   ".+"
param_type    telegram     number          "=~"   "[-0-9,.]+"
param_type    telegram     chat_id         "=~"   "-[0-9]{9}"
param_type    telegram     file_path       "=~"   "^\/.+"
param_type    telegram     message_id      "=~"   ".+"
param_type    telegram     phone_number    "=~"   "[-0-9,]+"

