
___x_cmd_telegram_bot_react(){
    param:void
    ___x_cmd_telegram_bot_sub | while read -r line; do
        local chat_id
        chat_id=$(printf "%s" "$line" | x jq -r '.result[0].message.chat.id')
        echo "$chat_id"
        "$@"
    done | while read -r chat_id && read -r line; do
        ___x_cmd_telegram_bot_send --chat "$chat_id" "$line"
    done
}