# shellcheck shell=dash
___x_cmd_font_local(){
    ___x_cmd_font_local_ls
}

___x_cmd_font_local_ls(){
    local x_
    ___x_cmd os name_
    case "$x_" in
        darwin)     ___x_cmd_cmds ls -l /System/Library/Fonts /Library/Fonts/ ;;
        linux)      ___x_cmd_cmds ls -l /usr/share/fonts ;;
        win)        ___x_cmd_cmds ls -l /usr/share/fonts ;;
    esac
}

___x_cmd_font_local_install(){
    :

    # move the
}
