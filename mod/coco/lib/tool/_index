# The coco tools

xrc:mod:lib     coco        \
    tool/find   tool/grep   tool/mcp    tool/shcmd

___x_cmd_coco_tool(){
    [ $# -gt 0 ]    ||  set -- --help

    local op="$1";      shift

    case "$op" in
        -h|--help)      ___x_cmd help -m coco tool "$@" ;   shift ;;
        grep)           ;;
        readfile|readmanyfile)

                        ;;

        writefile|v4a)

                        ;;
    esac

}

