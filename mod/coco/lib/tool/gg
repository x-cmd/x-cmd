
___x_cmd_coco_gg(){
    local question=""
    arg:init:x  coco
    while [ $# -gt 0 ]; do
        case "$1" in
            --question)     question="$2";       arg:2:shift ;;
            *)              break ;;
        esac
    done

    [ -n "$question" ] || N=coco M="Please provide the question" log:ret:64

    local provider=""
    local provider_name=""
    if ___x_cmd gemini --has-apikey >/dev/null 2>&1; then
        provider=gemini
        provider_name=Gemini
    elif ___x_cmd hub ai convo --get-apikey >/dev/null 2>&1; then
        provider=hub
        provider_name="X-CMD Hub"
    else
        coco:error --cmd "x gemini --cfg apikey=<your apikey>" --cmd "x hub login" "Please setup the Gemini API key or login X-CMD Hub first"
        return 1
    fi

    coco:info "Searching web using $provider_name Google Search"
    ___x_cmd gemini gg --raw --no-source --provider "$provider" "$question"
}
