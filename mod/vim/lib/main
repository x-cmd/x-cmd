___x_cmd_vim___exec(){
    if ___x_cmd_hascmd vim; then
        ___x_cmd_vim___exec(){
            command vim "$@"
        }
    else
        ___x_cmd_vim___exec(){
            ___x_cmd cosmo vim "$@"
        }
    fi

    ___x_cmd_vim___exec "$@"
}
