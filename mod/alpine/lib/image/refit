# shellcheck shell=dash


# xal refit --apk 'openjdk21 python3' python3

___x_cmd_alpine_image_refit(){
    [ $# -eq 0 ]    ||      set -- --help
    case "$1" in
        -h|--help)  ___x_cmd help -m alpine image refit "$@";   return 0 ;;
    esac

    local x_=""
    ___x_cmd alpine image prepare_
    case "$?" in
        130)        return 130 ;;
    esac
    ___x_cmd docker refit --from "$x_" "$@"
}

