# shellcheck shell=sh disable=SC3043

___X_BASH_UI_MARKDOWN_AWK="$(xrc which ui/lib/markdown.awk)"
# ___X_BASH_UI_MARKDOWN_AWK="./lib/markdown.awk"

# TO_HTML?
___ui_markdown(){

    # ui_init_lines_columns
    if [ $# -ne 0 ]; then
        ___x_cmd_cmds_cat "$@"
    else
        ___x_cmd_cmds_cat
    fi | ___x_cmd_cmds_awk -v COLUMNS="$COLUMNS" -f "$___X_CMD_ROOT/awk/lib/wcwidth.awk)" -f "$___X_BASH_UI_MARKDOWN_AWK"
}

# time (___ui_markdown "./.x-cmd/dev/testcase/testmarkdown.md")