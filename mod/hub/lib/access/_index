# shellcheck shell=dash

xrc:mod:lib     hub             \
                access/setutil  \
                access/set      \
                access/unset

___x_cmd_hub_access(){
    [ $# -gt 0 ]    ||  set -- --help

    local op="$1";      shift
    case "$op" in
        set|unset)      "___x_cmd_hub_access_$op" "$@"               ;;

        -h|--help)      ___x_cmd help -m hub   access  ;;
        *)              ___x_cmd_hub_u_subcmd_invalid access "$op" "$@"    ;;
    esac
}

