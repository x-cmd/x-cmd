# shellcheck shell=dash


___x_cmd_co_exec(){
    case "$1" in
        -h|--help) ___x_cmd help -m co --exec; return 0 ;;
    esac

    local data=;
    data="$(___x_cmd_co_exec_ "$@")" || return $?

    ___x_cmd_co___parse_llm_result "$data"
}

___x_cmd_co_exec_(){
    local LOCALSHELL="${___X_CMD_CO_EXEC_SHELL:-$___X_CMD_SHELL}"
    local OS=

    local x_=""
    x os name_

    LOCALSHELL="$LOCALSHELL" OS="$x_" ___x_cmd chat --send --type "co" --without-repl --history 0 --minion "$___X_CMD_ROOT_MOD/co/lib/minion/multi.yml" --no-empty-question "$@"
}
