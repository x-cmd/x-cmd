# shellcheck shell=sh
# shellcheck disable=SC2039,3043

# define lazy loader
# ___x_cmd_definelazyloader   ___x_cmd_gitea_repo_ls             gitea/lib/repo/main

___x_cmd_gitea_user(){
    param:scope     ___x_cmd_gitea
    param:subcmd ___x_cmd_gitea_user               \
        info        "Show information"              \
        email       "get current user email"        \
        search      "search a user"
    param:subcmd:try
    param:run

    ___x_cmd_gitea_user _param_help_doc
    gitea_log warn "Subcmd Not Found."
    return 1
}

# Section: info repo email issue
# shellcheck disable=SC2154
___x_cmd_gitea_user_info(){
    param:scope     ___x_cmd_gitea
    param:dsl       '
options:
    #1              "Username, if not set, show the user information of current owner, or owner of this token"
'
    param:run

    local data
    if [ $# -lt 1 ]; then
        data=$(___x_cmd_gitea_http get "/user" )
    else
        data=$(___x_cmd_gitea_http get "/users/$1")
    fi

    [ ! -t 1 ] && printf "%s" "$data" && return 0
    printf "%s" "$data" \ |
    {
        ___x_cmd_git_json_query_rename name=.username email=.email web_url=.web_url state=.state
        if [ -n "$name" ]; then
             ___x_cmd_ui_tf true    "Success" "name: $name" "email: $email" "url: $web_url" "state: $state"
             return 0
        else
             ___x_cmd_ui_tf false   "Couldn't find any data"
            return 1
        fi
    }
}

___x_cmd_gitea_user_search(){
    param:scope     ___x_cmd_gitea
    param:dsl       '
options:
    #1              "Username"
'
    param:run

    local data

    if [ $# -eq 0 ];then
        gitea_log error "Please provide a username to query"
        return 1
    fi
    ___gitea_ui_mutual ___x_cmd_gitea_http get "/users" username="$1"<<A
        ___ui_table_json Id=.id Name=.username Url=.web_url State=.state -- \$@
A
}

___x_cmd_gitea_user_email(){
    param:void
     ___x_cmd_gitea_http get "/user/emails"
}

# EndSection
