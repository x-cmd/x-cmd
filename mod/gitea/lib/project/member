# shellcheck shell=sh
# shellcheck disable=SC2039,3043

# gitea project member +el:admin -user-a +user-b
# shellcheck disable=SC2154,SC2086
___x_cmd_gitea_project_member(){
    param:subcmd ___x_cmd_gitea_project_member         \
        ls              "List project member"           \
        user            "Show project member user info" \
        add             "Add project member"            \
        rm              "Remove member"
    param:subcmd:try
    param:run

    ___x_cmd_gitea_project_member _param_help_doc
    gitea_log warn "Subcmd Not Found."
    return 1
}
___x_cmd_gitea_project_member_ls(){
    param:scope     ___x_cmd_gitea
    param:dsl       '
options:
    #1|--id         "The ID or URL-encoded path of the project."    <>
    --search        "Search for specific users."                    <>=""
    --skip_users    "Filter out users with the specified ID."      <>:integer_array=""
'
 param:run
   ___gitea_ui_mutual ___x_cmd_gitea_get_multi "/projects/$id/users" <<A
        ___ui_table_json Id=.id Username=.username web_url=.web_url State=.state -- \$@
A
}

___x_cmd_gitea_project_member_user(){
    param:scope     ___x_cmd_gitea
    param:dsl      '
options:
    #1|--id         "The ID or URL-encoded path of the project."  <>
    --user_id       "The user ID of the member"                 <>:UserName
'
    param:run

    ___x_cmd_gitea_http get "/project/$id/members/$user_id" | \
    {
        ___x_cmd_git_json_query_rename username=.username url=.web_url email=.email
        if [ -n "$username" ]; then
             ___x_cmd_ui_tf true  "Success" "username: $username" "url: $url" "email: $email"
             return 0
        else
            ___x_cmd_ui_tf false "Couldn't find any data by  $user_id in project $id"
            return 1
        fi
    }
}

# shellcheck disable=SC2181,SC2154
# https://gitee.com/api/swagger#/putV5projectsOwnerprojectCollaboratorsUsername
___x_cmd_gitea_project_member_add(){
    param:scope     ___x_cmd_gitea
    param:dsl       '
options:
    --id                "The ID or URL-encoded path of the project."                                   <>:address
    --expires_at        "A date string in the format YEAR-MONTH-DAY"                                <>=""
    --access_level      "A valid access level"                                                      <>:Number
    --invite_source     "The source of the invitation that starts the member creation process."     <>=""
    --tasks_to_be_done  "Tasks the inviter wants the member to focus on."                           <>=""
    --tasks_project_id  "The project ID in which to create the task issues."                        <>=""
    #1|--user_id        "The user ID of the new member or multiple IDs separated by commas"
'
    param:run

    if [ $# -eq 0 ];then
        gitea_log error "The user ID of the new member or multiple IDs separated by commas"
        return 1
    fi

    local gen_gitea_json
    gen_gitea_json="$(param:option2json -id +user_id)"

    ___x_cmd_gitea_http post "/project/$id/members" "$gen_gitea_json" | ___x_cmd_gitea_project_member_add_json_status_handler
}

___x_cmd_gitea_project_member_add_json_status_handler(){
    if [ ! -t 1 ] || [ -n "$ENFORCE_JSON" ]; then
        cat
        return
    fi

    ___x_cmd_git_json_query_rename id=.id
    if [ -n "$id" ]; then
        ___x_cmd_ui_tf true  "Add $username to $owner_project successfully"
        return 0
    else
        ___x_cmd_ui_tf false "Add user failure: $username to $owner_project"
        return 1
    fi
}

# shellcheck disable=SC2181
# https://gitee.com/api/swagger#/deleteV5projectsOwnerprojectCollaboratorsUsername
___x_cmd_gitea_project_member_rm(){
    param:scope     ___x_cmd_gitea
    param:dsl       '
options:
    --id                    "The ID or URL-encoded path of the group"         <>
    --skip_subresources     ""
    --unassign_issuables    ""
    #n|--user_id            "The user ID of the member"
'
    param:run

    if [ $# -eq 0 ];then
        gitea_log error "At least one user's spatial address is needed"
        return 1
    fi

    local username
    for username in "$@"; do
        # TODO:http handleï¼Œdelete repo return data is null.Status: 204 No Content
        if ___x_cmd_gitea_http delete "/project/$id/members/$username" >/dev/null; then
            gitea_log info  "Remove $username successfully."
        else
            gitea_log error "Remove $username failure"
            return 1
        fi
    done
}
