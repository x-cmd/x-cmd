# shellcheck shell=dash

___x_cmd_htop___cmd(){
    if ___x_cmd_hascmd htop; then
        command htop "$@"
    else
        local x_=; ___x_cmd os name_
        case "$x_" in
            win)    N=htop M="This system is not supported."        log:ret:1
                    ;;
            *)      htop:info "Use pixi to download and run htop."
                    ___x_cmd pixi exec htop "$@"
                    ;;
        esac
    fi
}
