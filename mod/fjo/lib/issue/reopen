
# Section: Reopen
# https://gitea.com/api/swagger#/issue/issueEditIssue
___x_cmd_fjo_issue_reopen(){
    param:scope     ___x_cmd_fjo
    param:dsl       '
options:
    #1          "The number that identifies the issue."                                 <>:number
    --repo|-r      "Provide owner name and repo name.(default:the current user repo)"      <>:RepoName
    --json|-j   "output json data"
'
    param:run

    local state=open

    ___x_cmd_fjo_param_init_owner_repo
    ___x_cmd_fjo_curl patch "/repos/${owner_repo}/issues/${1}" -- state | _____x_cmd_fjo_issue_ui_utils Reopen
}
# EndSection

