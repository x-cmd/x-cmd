
___x_cmd_skill___advise_list_full(){
    ___x_cmd_skill___data_check || return $?
    ___x_cmd fsiter --folder "$___X_CMD_SKILL_DATA_DIR/full"
}

___x_cmd_skill___advise_list_active(){
    [ "$#" -gt 0 ] ||   set -- "$___X_CMD_SKILL_DATA_DIR/active"
    local dir=""
    while [ "$#" -gt 0 ]; do
        dir="$1"; shift
        [ -d "$dir" ] || continue
        ___x_cmd fsiter --folder "$dir"
    done
}
