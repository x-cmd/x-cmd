# shellcheck shell=dash
___x_cmd_txt_explain(){
    local LANGUAGE=English
    case "$1" in
        --cn)   shift; LANGUAGE=Chinese;;
    esac

    LANGUAGE="$LANGUAGE" ___x_cmd chat --request --type txt,explain --without-repl --history 0 --require-question --minion "$___X_CMD_ROOT_MOD/txt/lib/minion/explain.yml" "$@"
}


