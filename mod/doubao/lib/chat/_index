# shellcheck shell=dash

___x_cmd_doubao_chat(){
    local X_help_cmd='___x_cmd help -m doubao chat'; help:arg-null:parse
    local op="$1";
    case "$op" in
        request|exec)
            shift; ___x_cmd_doubao_chat_"$op" "$@" ;;
        *)  N=doubao M="Not support such [subcmd=$op]" log:ret:64
    esac
}

___x_cmd_doubao_chat_request(){
    local X_help_cmd='___x_cmd help -m doubao chat request'; help:arg:parse
    ___x_cmd chat --exec --provider doubao "$@"
}

___x_cmd_doubao_chat_exec(){
    local endpoint=""
    ___x_cmd_doubao_cur endpoint:=endpoint 2>/dev/null
    endpoint="${endpoint:-"$___X_CMD_DOUBAO_DEFAULT_ENDPOINT"}"

    ___X_CMD_OPENAI_CHAT_ACTUAL_URL_NOT_V1=1 \
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER='doubao'   \
    ___X_CMD_OPENAI_CHAT_ACTUAL_PROVIDER_NAME='Doubao AI'  \
    ___X_CMD_OPENAI_CHAT_ACTUAL_ENDPOINT="$endpoint"    \
    ___x_cmd openai chat exec "$@"
}
